{
  "_id": "9e8c644662ba4e39b6c3f081b6f6b1d6",
  "Name": "谢眺",
  "Description": "谢眺（464－499）字玄晖，陈郡夏阳（今河南太康）人，南齐代表作家。诗多描写山水景色，风格清逸秀丽，完全摆脱了玄言诗的影响。有《谢宣城集》。",
  "Dynasty": "南北朝",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "之宣城郡出新林浦向板桥",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "江路西南永，",
        "归流东北骛。",
        "天际识归舟，",
        "云中辨江树。",
        "旅思倦摇摇，",
        "孤游昔已屡。",
        "既欢怀禄情，",
        "复协沧州趣。",
        "嚣尘自兹隔，",
        "赏心于此遇。",
        "虽无玄豹姿，",
        "终隐南山雾。"
      ]
    },
    {
      "_id": null,
      "Name": "和王中丞闻琴诗",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "五律",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "凉风吹月露，",
        "圆景动清阴。",
        "蕙风入怀抱，",
        "闻君此夜琴。",
        "萧瑟满林听，",
        "轻鸣响涧音。",
        "无为澹容与，",
        "蹉跎江海心。"
      ]
    },
    {
      "_id": null,
      "Name": "新亭渚别范零陵云",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "洞庭张乐地，",
        "潇湘帝子游。",
        "云去苍梧野，",
        "水还江汉流。",
        "停骖我怅望，",
        "辍棹子夷犹。",
        "广平听方藉，",
        "茂陵将见求。",
        "心事俱已矣，",
        "江上徒离忧。"
      ]
    },
    {
      "_id": null,
      "Name": "晚登三山还望京邑",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "灞涘望长安，",
        "河阳视京县。",
        "白日丽飞甍，",
        "参差皆可见。",
        "余霞散成绮，",
        "澄江静如练。",
        "喧鸟覆春洲，",
        "杂英满芳甸。",
        "去矣方滞淫，",
        "怀哉罢欢宴。",
        "佳期怅何许，",
        "泪下如流霰。",
        "有情知望乡，",
        "谁能有鬒不变。"
      ]
    },
    {
      "_id": null,
      "Name": "暂使下都夜发新林至京邑赠西",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "大江流日夜，",
        "客心悲未央。",
        "徒念关山近，",
        "终知返路长。",
        "秋河曙耿耿，",
        "寒渚夜苍苍。",
        "引领见京室，",
        "宫雉正相望。",
        "金波丽鳷鹊，",
        "玉绳低建章。",
        "驱车鼎门外，",
        "思见昭丘阳。",
        "驰晖不可接，",
        "何况隔两乡。",
        "风云有鸟路，",
        "江汉限无梁。",
        "常恐鹰隼击，",
        "时菊委严霜。",
        "寄言罻罗者，",
        "寥廓已高翔。"
      ]
    },
    {
      "_id": null,
      "Name": "江上曲",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "易阳春草出，",
        "踟蹰日已暮。",
        "莲叶尚田田，",
        "淇水不可渡。",
        "愿子淹桂舟，",
        "时同千里路。",
        "千里既相许，",
        "桂舟复容与。",
        "江上可采菱，",
        "清歌共南楚。"
      ]
    },
    {
      "_id": null,
      "Name": "游东田",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "戚戚苦无悰，",
        "携手共行乐。",
        "寻云陟累榭，",
        "随山望菌阁。",
        "远树暧阡阡，",
        "生烟纷漠漠。",
        "鱼戏新荷动，",
        "鸟散余花落。",
        "不对芳春酒，",
        "还望青山郭。"
      ]
    },
    {
      "_id": null,
      "Name": "玉阶怨",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "五绝",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "夕殿下珠帘，",
        "流萤飞复息。",
        "长夜缝罗衣，",
        "思君此何极。"
      ]
    },
    {
      "_id": null,
      "Name": "王孙游",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "五绝",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "绿草蔓如丝，",
        "杂树红英发。",
        "无论君不归，",
        "君归芳已歇。"
      ]
    },
    {
      "_id": null,
      "Name": "落日怅望",
      "PoetId": "9e8c644662ba4e39b6c3f081b6f6b1d6",
      "PoetName": "谢眺",
      "Form": "未知",
      "Tags": [
        "南北朝",
        "谢眺"
      ],
      "Contents": [
        "昧旦多纷喧，",
        "日晏未遑舍。",
        "落日余清阴，",
        "高枕东窗下。",
        "寒槐渐如束，",
        "秋菊行当把。",
        "借问此何时，",
        "凉风怀朔马。",
        "已伤归暮客，",
        "复思离居者。",
        "情嗜幸非多，",
        "案牍偏为寡。",
        "既乏琅邪政，",
        "方憩洛阳社。"
      ]
    }
  ]
}
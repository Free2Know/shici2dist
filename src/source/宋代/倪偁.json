  "Poems": [
    {
      "_id": null,
      "Name": "临江仙",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "木落西风秋已半，",
        "正当璧月圆时。",
        "为登绝岭赋新诗。",
        "酒摇金凿落，",
        "波净碧琉璃。",
        "细看冰轮还有意，",
        "要君把盏休辞。",
        "看看两鬓欲成丝。",
        "明年当此夜，",
        "千里共相思。"
      ]
    },
    {
      "_id": null,
      "Name": "减字木兰花",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "雨馀还览。",
        "隐隐遥岑花病眼。",
        "嫩绿浮湖。",
        "百顷蒲萄染不如。",
        "晨光绝胜。",
        "不许纤尘微点镜。",
        "满目皆诗。",
        "莫怪骚人语益奇。"
      ]
    },
    {
      "_id": null,
      "Name": "南歌子",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "积水凝深碧，",
        "斜阳散满红。",
        "扁舟轻漾白苹风。",
        "曲港孤村萦绕、路相通。",
        "野色浮尊净，",
        "荷香入座浓。",
        "胜游聊复五人同。",
        "恰似辋川当日、画图中。"
      ]
    },
    {
      "_id": null,
      "Name": "朝中措",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "森然修竹满晴窗。",
        "山色净明妆。",
        "无限凄凉古意，",
        "白苹红蓼斜阳。",
        "松风一枕借僧床。",
        "馥馥桂花香。",
        "暂远世尘萦染，",
        "坐令心地清凉。"
      ]
    },
    {
      "_id": null,
      "Name": "水调歌头",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "风卷暮云尽，",
        "镜净一天秋。",
        "试把鹅黄新酒，",
        "细酌散闲愁。",
        "西望群山千叠，",
        "眇眇飞鸿没处，",
        "爽气与俱浮。",
        "且尽尊中绿，",
        "不用叹淹留。",
        "对西风，",
        "歌妙曲，",
        "意绸缪。",
        "万顷烟云奇变，",
        "所得过封侯。",
        "何事苦萦名利，",
        "便合绿蓑青笠，",
        "投绂早归休。",
        "他日君寻我，",
        "小艇钓寒流。"
      ]
    },
    {
      "_id": null,
      "Name": "蝶恋花",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "绿叶阴阴亭下路。",
        "修竹乔松，",
        "中有飞泉注。",
        "水满寒溪清照鹭。",
        "个中不住归何处。",
        "枝上幽禽相对语。",
        "细听声声，",
        "道不如归去。",
        "只待小园成数亩。",
        "归来占尽山中趣。"
      ]
    },
    {
      "_id": null,
      "Name": "西江月",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "词",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "四面烟鬟绕翠，",
        "一川鸭绿摇光。",
        "危亭缥缈短松冈。",
        "把酒与君西望。",
        "万事尽皆前定，",
        "人生底用乾忙。",
        "只应醉里是家乡。",
        "且尽玉壶新酿。"
      ]
    },
    {
      "_id": null,
      "Name": "鹧鸪天",
      "PoetId": "e4d5a20ac27949c7be66ccdf13f1b5ce",
      "PoetName": "倪偁",
      "Form": "七律",
      "Tags": [
        "宋代",
        "倪偁"
      ],
      "Contents": [
        "去岁登高感叹长。",
        "今年九日倍幽凉。",
        "怀人独下西州泪，",
        "对菊谁空北海觞。",
        "夸酒量，",
        "斗新狂。",
        "尚馀醉墨在巾箱。",
        "眼前风物都非旧，",
        "祗有青山带夕阳。"
      ]
    }
  ]
}
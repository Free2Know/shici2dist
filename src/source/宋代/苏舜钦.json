  "Poems": [
    {
      "_id": null,
      "Name": "水调歌头",
      "PoetId": "99f0f7e2c5b44b43b63a1b7e8dfc9956",
      "PoetName": "苏舜钦",
      "Form": "词",
      "Tags": [
        "宋代",
        "苏舜钦"
      ],
      "Contents": [
        "潇洒太湖岸，",
        "淡伫洞庭山。",
        "鱼龙隐处，",
        "烟雾深锁渺弥间。",
        "方念陶朱张翰，",
        "忽有扁舟急桨，",
        "撇浪载鲈还。",
        "落日暴风雨，",
        "归路绕汀湾。",
        "丈夫志，",
        "当景盛，",
        "耻疏闲。",
        "壮年何事憔悴，",
        "华发改朱颜。",
        "拟借寒潭垂钓，",
        "又恐鸥鸟相猜，",
        "不肯傍青纶。",
        "刺棹穿芦荻，",
        "无语看波澜。"
      ]
    },
    {
      "_id": null,
      "Name": "沧浪静吟",
      "PoetId": "99f0f7e2c5b44b43b63a1b7e8dfc9956",
      "PoetName": "苏舜钦",
      "Form": "七律",
      "Tags": [
        "宋代",
        "苏舜钦"
      ],
      "Contents": [
        "独绕虚亭步石矼，",
        "静中情味世无双。",
        "山蝉带响穿疏户，",
        "野蔓盘青入破窗。",
        "二子逢时犹死饿，",
        "三闾遭逐便沉江。",
        "我今饱食高眠外，",
        "唯恨澄醪不满缸。"
      ]
    },
    {
      "_id": null,
      "Name": "淮中晚泊犊头",
      "PoetId": "99f0f7e2c5b44b43b63a1b7e8dfc9956",
      "PoetName": "苏舜钦",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "苏舜钦"
      ],
      "Contents": [
        "春阴垂野草青青，",
        "时有幽花一树明。",
        "晚泊孤舟古祠下，",
        "满川风雨看潮生。"
      ]
    }
  ]

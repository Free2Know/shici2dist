  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "剔银灯",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "词",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "昨夜因看蜀志。",
        "笑曹操、孙权、刘备。",
        "用尽机关，",
        "徒劳心力，",
        "只得三分天地。",
        "屈指细寻思，",
        "争如共、刘伶一醉。",
        "人世都无百岁。",
        "少痴呆、老成尩悴。",
        "只有中间，",
        "些子少年，",
        "忍把浮名牵系。",
        "一品与千金，",
        "问白发、如何回避。"
      ]
    },
    {
      "_id": null,
      "Name": "定风波",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "词",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "罗绮满城春欲暮。",
        "百花洲上寻芳去。",
        "浦映□花花映浦。",
        "无尽处。",
        "恍然身入桃源路。",
        "莫怪山翁聊逸豫。",
        "功名得丧归时数。",
        "莺解新声蝶解舞。",
        "天赋与。",
        "争教我辈无欢绪。"
      ]
    },
    {
      "_id": null,
      "Name": "御街行·秋日怀旧",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "词",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "纷纷坠叶飘香砌，",
        "夜寂静，",
        "寒声碎。",
        "真珠帘卷玉楼空，",
        "天淡银河垂地。",
        "年年今夜，",
        "月华如练，",
        "长是人千里。",
        "愁肠已断无由醉，",
        "酒未到，",
        "先成泪。",
        "残灯明灭枕头敧，",
        "谙尽孤眠滋味。",
        "都来此事，",
        "眉间心上，",
        "无计相回避。"
      ]
    },
    {
      "_id": null,
      "Name": "武夷茶歌",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "年年春自东南来，",
        "建溪先暖冰微开。",
        "溪边奇茗冠天下，",
        "武夷仙人从古栽。"
      ]
    },
    {
      "_id": null,
      "Name": "江上渔者",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "五绝",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "江上往来人，",
        "但爱鲈鱼美。",
        "君看一叶舟，",
        "出没风波里。"
      ]
    },
    {
      "_id": null,
      "Name": "渔家傲·塞下秋来",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "词",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "塞下秋来风景异，",
        "衡阳雁去无留意。",
        "四面边声连角起。",
        "千嶂里，",
        "长烟落日孤城闭。",
        "浊酒一杯家万里，",
        "燕然未勒归无计，",
        "羌管悠悠霜满地。",
        "人不寐，",
        "将军白发征夫泪。"
      ]
    },
    {
      "_id": null,
      "Name": "苏幕遮",
      "PoetId": "ccc20498b9c449adadadec4b21cd50fe",
      "PoetName": "范仲淹",
      "Form": "词",
      "Tags": [
        "宋代",
        "范仲淹"
      ],
      "Contents": [
        "碧云天，",
        "黄叶地，",
        "秋色连波，",
        "波上寒烟翠。",
        "山映斜阳天接水，",
        "芳草无情，",
        "更在斜阳外。",
        "黯乡魂，",
        "追旅思，",
        "夜夜除非，",
        "好梦留人睡。",
        "明月楼高休独倚，",
        "酒入愁肠，",
        "化作相思泪。"
      ]
    }
  ]
}
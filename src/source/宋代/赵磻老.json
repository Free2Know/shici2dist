  "Poems": [
    {
      "_id": null,
      "Name": "南柯子·南歌子",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "世上渊明酒，",
        "人间陆羽茶。",
        "东山无妓有莲花。",
        "隐隐仙家鸡犬、路非赊。",
        "积霭犹张幕，",
        "轻雷似卷车。",
        "要令长袖舞胡靴。",
        "须是檐头新霁、鹊查查。"
      ]
    },
    {
      "_id": null,
      "Name": "念奴娇",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "冰蟾驾月，",
        "荡寒光、不见层波层碧。",
        "几岁中秋争得似，",
        "云卷秋声寂寂。",
        "多谢星郎，",
        "来陪贤令，",
        "快赏鳌峰极。",
        "广寒宫近，",
        "素娥不靳馀力。",
        "夜久露落琼浆，",
        "神京归路，",
        "有云翘前迹。",
        "当日仙人曾驭气，",
        "只学神交龟息。",
        "今夜清尊，",
        "一齐分付，",
        "稳是乘槎客。",
        "天津重到，",
        "霓裳何似闻笛。"
      ]
    },
    {
      "_id": null,
      "Name": "水调歌头",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "梅仙了无讼，",
        "拄笏看西山。",
        "山涵秋晓，",
        "水光磨荡有无间。",
        "自是灵襟空洞，",
        "更望风云吞吐，",
        "浩渺白鸥闲。",
        "高诵远游赋，",
        "独立桂香阑。",
        "谩常谈，",
        "如观水，",
        "要观澜。",
        "物情长在，",
        "人生何用苦求难。",
        "随我一觞一咏，",
        "任彼非元彼非白，",
        "唯放酒杯宽。",
        "富贵偿来事，",
        "天道管知还。"
      ]
    },
    {
      "_id": null,
      "Name": "永遇乐",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "香雪堆梅，",
        "绣丝蹙柳，",
        "仙馆春到。",
        "午夜华灯，",
        "烘春艳粉，",
        "月借今宵好。",
        "衮衣摇曳，",
        "簪缨闲绕，",
        "共祝大椿难老。",
        "望台躔、明星一点，",
        "冰壶表里相照。",
        "诞弥令节，",
        "欣欣物态，",
        "共喜重生周召。",
        "八鼎勋庸，",
        "九夷姓字，",
        "策杖孤鸿杳。",
        "鸦啼鹊噪，",
        "兰馨松茂，",
        "把酒共春一笑。",
        "管如今、盐梅再梦，",
        "夜铃命诏。"
      ]
    },
    {
      "_id": null,
      "Name": "浣溪沙",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "五律",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "刘氏风流设此冠。",
        "今谁将去伴珠鬟。",
        "君家兄弟二俱难。",
        "驰去请观流汗马，",
        "钓时休等烂银盘。",
        "明朝吟咏有方干。"
      ]
    },
    {
      "_id": null,
      "Name": "满江红",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "见说春时，",
        "新波涨、二川溶溢。",
        "今底事、沙痕犹褪，",
        "石渠悭碧。",
        "人意不须长作解，",
        "兴来便向杯中觅。",
        "纵茂林修竹记山阴，",
        "千年一。",
        "薰吹动，",
        "春工毕。",
        "桥上景，",
        "壶中日。",
        "况梅肥笋嫩，",
        "雨微鱼出。",
        "只恐延英催入觐，",
        "不教绿野长均逸。",
        "任多情、胡蝶满园飞，",
        "狂踪迹。"
      ]
    },
    {
      "_id": null,
      "Name": "生查子",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "五律",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "金门一免时，",
        "离绪纷如缕。",
        "想像切云高，",
        "晓日罗昏雾。",
        "峨冠补衮人，",
        "不是无心处。",
        "欲效贡公弹，",
        "衣钵知谁付。"
      ]
    },
    {
      "_id": null,
      "Name": "醉蓬莱",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "词",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "记青蛇感异，",
        "後日扶颠，",
        "太平人瑞。",
        "壮岁弹冠，",
        "有经邦高志。",
        "晚上文墀，",
        "载严霜简，",
        "便云龙交际。",
        "紫极旋枢，",
        "金蝉映衮，",
        "乾坤开霁。",
        "底事当时，",
        "饮江胡马，",
        "一望云旗，",
        "倒戈投贽。",
        "此片丹心，",
        "几风声鹤唳。",
        "烟息尘收，",
        "水明山丽，",
        "只五湖相记。",
        "今夜华灯，",
        "火城信息，",
        "千年荣贵。"
      ]
    },
    {
      "_id": null,
      "Name": "鹧鸪天",
      "PoetId": "225db1fd29ae4f7f8ea2b08f1afd9209",
      "PoetName": "赵磻老",
      "Form": "七律",
      "Tags": [
        "宋代",
        "赵磻老"
      ],
      "Contents": [
        "白日青天一旦明。",
        "旧时勋业此时情。",
        "延英再许裴公对，",
        "商鼎须调传说羹。",
        "千万载，",
        "辅宗祊。",
        "挚天八柱愈峥嵘。",
        "将军犁却龙庭後，",
        "岁傍鳌山奏太平。"
      ]
    }
  ]
}
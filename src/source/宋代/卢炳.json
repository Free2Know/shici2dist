  "Poems": [
    {
      "_id": null,
      "Name": "一剪梅·一翦梅",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "灯火楼台万斛莲。",
        "千门喜笑，",
        "素月婵娟。",
        "几多急莞与繁弦。",
        "巷陌骈阗。",
        "毕献芳筵。",
        "乐与民偕五马贤。",
        "绮罗丛里，",
        "一簇神仙。",
        "传柑雅宴约明年。",
        "尽夕留连。",
        "满泛金船。"
      ]
    },
    {
      "_id": null,
      "Name": "临江仙",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "弱水蓬莱真胜地，",
        "祥烟闪烁霓旌。",
        "瑶池欢会下云軿。",
        "康宁新喜事，",
        "淑善旧家声。",
        "戏采捧觞真乐事，",
        "蟠桃献寿千春。",
        "从今更愿子孙荣。",
        "加恩封锦诰，",
        "学道诵黄庭。"
      ]
    },
    {
      "_id": null,
      "Name": "冉冉云",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "雨洗千红又春晚。",
        "留牡丹、倚阑初绽。",
        "娇娅姹、偏赋精神君看。",
        "算费尽、工夫点染。",
        "带露天香最清远。",
        "太真妃、院妆体段。",
        "拼对花、满把流霞频劝。",
        "怕逐东风零乱。"
      ]
    },
    {
      "_id": null,
      "Name": "减字木兰花",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "传消寄息。",
        "咫尺远如千里隔。",
        "欲见无由。",
        "惹起新愁与旧愁。",
        "情怀如醉。",
        "敧枕连宵终不寐。",
        "无奈相思。",
        "此恨凭谁说与伊。"
      ]
    },
    {
      "_id": null,
      "Name": "多丽",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "庆佳辰。",
        "熊罴协梦生申。",
        "记当年、曾游月殿，",
        "笑谈高跃龙津。",
        "德弥高、源流孔孟，",
        "才迥出、黼黻卿云。",
        "亟步华涂，",
        "蜚英腾茂，",
        "姓名端的简枫宸。",
        "最好是、雍容兰省，",
        "直道事吾君。",
        "还知否，",
        "承明倦直，",
        "来抚斯民。",
        "算人生、五马最贵，",
        "朱旛画戟行春。",
        "讼庭清、祥风和畅，",
        "铃斋静、佳气氤氲。",
        "寿宴香浓，",
        "梅繁柳嫩，",
        "年年今日劝芳尊。",
        "须信道、朱颜不老，",
        "眉寿等松椿。",
        "从兹去，",
        "衮衣特立，",
        "廊庙经纶。"
      ]
    },
    {
      "_id": null,
      "Name": "好事近",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "庭院欲昏黄，",
        "秋思恼人情乱。",
        "宝瑟试弹新曲，",
        "更与谁同伴。",
        "阳台魂梦杳无踪，",
        "奴住巫山畔。",
        "不似楚襄云雨，",
        "俏输他一半。"
      ]
    },
    {
      "_id": null,
      "Name": "小重山",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "一见情怀便雅投。",
        "尊前成密约，",
        "意绸缪。",
        "已成行计理归舟。",
        "空相忆，",
        "无计为伊留。",
        "执别话离愁。",
        "萦萦滋味恶，",
        "在心头。",
        "而今无奈阻欢游。",
        "些子事，",
        "此恨两幽幽。"
      ]
    },
    {
      "_id": null,
      "Name": "少年游",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "绣罗褑子间金丝。",
        "打扮好容仪。",
        "晓雪明肌，",
        "秋波入鬓，",
        "鞋小步行迟。",
        "冠儿时样都相称，",
        "花插楝双枝。",
        "倩俏精神，",
        "风流情态，",
        "惟有粉郎知。"
      ]
    },
    {
      "_id": null,
      "Name": "念奴娇",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "晚天清楚，",
        "扫太虚纤翳，",
        "凉生江曲。",
        "四顾青冥天地阔，",
        "惟有残霞孤骛。",
        "山气凝蓝，",
        "汀烟引素，",
        "竦竦浮群木。",
        "白苹风定，",
        "波澄万顷寒玉。",
        "时有一叶渔舟，",
        "收纶垂钓，",
        "来往何幽独。",
        "短发萧萧襟袖冷，",
        "便觉都无袢褥。",
        "曳杖归来，",
        "夜深人悄，",
        "月照鳞鳞屋。",
        "藤床一枕，",
        "迥然清梦无俗。"
      ]
    },
    {
      "_id": null,
      "Name": "朝中措",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "晓来天气十分凉。",
        "时候近重阳。",
        "村落人家潇洒，",
        "篱菊有芬芳。",
        "年来渐觉，",
        "诗肠愈窄，",
        "酒量偏狂。",
        "好景不须放过，",
        "何妨一醉千觞。"
      ]
    },
    {
      "_id": null,
      "Name": "杏花天",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "镂冰翦玉工夫费。",
        "做六出、飞花乱坠，",
        "舞风情态谁相似。",
        "算只有、江梅可比。",
        "极目处、璚瑶万里。",
        "海天阔、清寒似水。",
        "从教高卷珠帘起。",
        "看三白、年丰瑞气。"
      ]
    },
    {
      "_id": null,
      "Name": "柳梢青",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "笑菊欺梅。",
        "嫌蜂却蝶，",
        "压尽寒荄。",
        "月下精神，",
        "醉时风韵，",
        "红透香腮。",
        "天工造化难猜。",
        "甚怪我、愁眉未开。",
        "故遣名花，",
        "凌霜带露，",
        "先送春来。"
      ]
    },
    {
      "_id": null,
      "Name": "武陵春",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "常忆江南春欲到，",
        "消息付南枝。",
        "疏影横斜照水时。",
        "月淡暗香迟。",
        "可惜江头千树玉，",
        "雨暗更风欺。",
        "传语东君管领伊。",
        "憔悴有谁知。"
      ]
    },
    {
      "_id": null,
      "Name": "水调歌头",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "华亭新伟观，",
        "胜地得高雄。",
        "凭栏徙倚要眇，",
        "万里景无穷。",
        "好是江流萦绕，",
        "那更云天舒阔，",
        "叠嶂倚晴空。",
        "眼界无尽藏，",
        "怀抱有清风。",
        "主人贤，",
        "开绮席，",
        "泛金锺。",
        "放怀一笑，",
        "许我满酌醉颜红。",
        "祗恐玺书即下，",
        "促起飞凫东去，",
        "行作黑头公。",
        "还记今朝客，",
        "曾待一杯同。"
      ]
    },
    {
      "_id": null,
      "Name": "水龙吟",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "晚晴一碧天如水，",
        "风约尘埃都扫。",
        "素娥睡起，",
        "玉轮稳驾，",
        "初离海表。",
        "碾破秋云，",
        "涌成银阙，",
        "光欺南斗。",
        "想广寒宫里，",
        "风流女伴，",
        "应都把、仙歌奏。",
        "夜永风生悄悄。",
        "耀冰雪、寒侵重峤。",
        "今宵休道，",
        "从来此夕，",
        "阴多晴少。",
        "坐久更深，",
        "露冷襟袖，",
        "不禁清晓。",
        "更天风吹下，",
        "桂香拂袂，",
        "想蟠根老。"
      ]
    },
    {
      "_id": null,
      "Name": "汉宫春",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "向暖南枝，",
        "最是他潇洒，",
        "先带春回。",
        "因何事、向岁晚，",
        "搀占花魁。",
        "天公著意，",
        "安排巧、特地教开。",
        "知道是，",
        "仙翁诞节，",
        "琼英要泛金杯。",
        "人学寿阳妆面，",
        "正梁州初按，",
        "羯鼓声催。",
        "年年此花开後，",
        "宴启蓬莱。",
        "朱颜不老，",
        "算难教、绿野徘徊。",
        "消息好，",
        "行看父子，",
        "和羹鼎鼐盐梅。"
      ]
    },
    {
      "_id": null,
      "Name": "浣溪沙",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "五律",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "常记京华昔浪游。",
        "青罗买笑万金酬。",
        "醉中曾此当貂裘。",
        "自恨山翁今老矣，",
        "惜花心性谩风流。",
        "清樽独酌更何愁。"
      ]
    },
    {
      "_id": null,
      "Name": "清平乐",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "玻璃翦叶。",
        "点缀黄金屑。",
        "雅淡幽姿风味别。",
        "翠影婆娑弄月。",
        "秋光占断江南。",
        "清香鼻观先参。",
        "一朵折来和露，",
        "乌云髻畔斜簪。"
      ]
    },
    {
      "_id": null,
      "Name": "满江红",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "罨画池亭，",
        "对十万、盈盈粉面。",
        "依翠盖、临风一曲，",
        "霓裳舞遍。",
        "亭上人如蓬岛客，",
        "坐中别有飞琼伴。",
        "占世间、风月最清凉，",
        "宜开宴。",
        "当盛旦，",
        "歌喉啭。",
        "齐祝寿，",
        "金尊劝。",
        "算才华合侍，",
        "玉皇香案。",
        "处事从来坚特操，",
        "立朝更要持公论。",
        "使他时、台阁振风声，",
        "朝天眷。"
      ]
    },
    {
      "_id": null,
      "Name": "玉团儿",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "七律",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "绿云慢绾新梳束。",
        "这标致、诸馀不俗。",
        "邂逅相逢，",
        "情怀雅合，",
        "全似深熟。",
        "耳边笑语论心曲。",
        "把不定、红生脸肉。",
        "若得同欢，",
        "共伊携老，",
        "心事忒足。"
      ]
    },
    {
      "_id": null,
      "Name": "瑞鹧鸪",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "七律",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "客里惊嗟又岁除。",
        "萧萧寒雨滴茅庐。",
        "山深溪转泉声碎，",
        "夜永风摇烛影孤。",
        "冷甚只多烧木叶，",
        "诗成无处写桃符。",
        "强酬节物聊清酌，",
        "今岁屠苏自取疏。"
      ]
    },
    {
      "_id": null,
      "Name": "画堂春",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "轻红桃杏斗娇妍。",
        "晓来葱蒨祥烟。",
        "霓旌绛节下云天。",
        "行地神仙。",
        "盛事频封锦诰，",
        "歌声齐劝金莲。",
        "教从沧海变桑田。",
        "富贵长年。"
      ]
    },
    {
      "_id": null,
      "Name": "菩萨蛮",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "而今怕听相思曲。",
        "多情蹙损眉峰绿。",
        "惜别上扁舟。",
        "望穷江际楼。",
        "蛮笺封了发。",
        "为忆人如雪。",
        "离恨写教看。",
        "休令盟约寒。"
      ]
    },
    {
      "_id": null,
      "Name": "蓦山溪",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "韶华七换，",
        "阻庆生申旦。",
        "今日向高堂，",
        "载卮酒、为君满劝。",
        "绣帘低挂，",
        "瑞霭□香浓，",
        "倩双娥，",
        "敲象板，",
        "缓缓歌珠贯。",
        "芝兰挺秀，",
        "俱是皇家彦。",
        "只这一般奇，",
        "见方寸、平生积善。",
        "几多厚德，",
        "天锡与遐龄，",
        "鬓长青，",
        "颜不老，",
        "日日开华宴。"
      ]
    },
    {
      "_id": null,
      "Name": "蝶恋花",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "满架冰蕤开遍了。",
        "试问花神，",
        "留得春多少。",
        "清胜荀香娇韵好。",
        "谢庭风月应难到。",
        "酒酿新醅名不老。",
        "醉倒花前，",
        "真个无烦恼。",
        "满座清欢供一笑。",
        "春酲拼却明窗晓。"
      ]
    },
    {
      "_id": null,
      "Name": "西江月",
      "PoetId": "e29613fc6a1a494eb88678c10acd819b",
      "PoetName": "卢炳",
      "Form": "词",
      "Tags": [
        "宋代",
        "卢炳"
      ],
      "Contents": [
        "残雪犹馀远岭。",
        "晚烟半隐寒林。",
        "溶溶春涨绿波深。",
        "时有渔人钓艇。",
        "倚岸野梅坠粉。",
        "蘸溪宫柳摇金。",

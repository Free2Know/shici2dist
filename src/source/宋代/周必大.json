  "Poems": [
    {
      "_id": null,
      "Name": "入直",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "绿槐夹道集昏鸦，",
        "敕使传宣坐赐茶。",
        "归到玉堂清不寐，",
        "月钩初上紫薇花。"
      ]
    },
    {
      "_id": null,
      "Name": "合宫歌",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "未知",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "圣明朝，",
        "旷典乘秋举。",
        "大飨本仁祖。",
        "九室八牖四户。",
        "敕躬齐戒格堪舆。",
        "盛牲实俎。",
        "并侑总稽古。",
        "玉露乍肃天宇。",
        "冰轮下照金铺。",
        "燎烟嘘呼。",
        "郁尊香，",
        "云门舞。",
        "仿佛翔坐，",
        "灵心咸嘉娱。",
        "众星俞美，",
        "光属照熉珠。",
        "清晓御丹凤，",
        "湛恩遍浃率溥。",
        "欢声雷动岳镇呼。",
        "徐命法驾，",
        "万骑花盈路。",
        "献胙慈极，",
        "寿同箕翼，",
        "事超唐虞。",
        "看平燕云，",
        "从此兴文偃武。",
        "待重会诸侯，",
        "依旧东都。"
      ]
    },
    {
      "_id": null,
      "Name": "导引",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "重华真主，",
        "晨夕奉庭闱。",
        "禋祀庆成时。",
        "乾元坤载同归美，",
        "宝册两光辉。",
        "斑衣何似赭黄衣。",
        "此事古今稀。",
        "都人欢乐嵩呼震，",
        "圣寿总天齐。"
      ]
    },
    {
      "_id": null,
      "Name": "朝中措",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "九重深念朔庭空。",
        "良弼梦时中。",
        "擢第难遵常制，",
        "筑岩直继高风。",
        "明年东府，",
        "金钗珠履，",
        "列鼎鸣钟。",
        "良酝傥分焦革，",
        "早禾休浸曹公。"
      ]
    },
    {
      "_id": null,
      "Name": "满庭芳",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "天壤茫茫，",
        "人心殊观，",
        "未免因欠思馀。",
        "太山邱垤，",
        "同载一方舆。",
        "那更长沙下湿，",
        "祝融峰、才比吾庐。",
        "秋风冷，",
        "攀缘汗浃，",
        "应叹苦区区。",
        "登高，",
        "聊尔耳，",
        "何须蜡屐，",
        "谁暇膏车。",
        "默存处，",
        "清都宛在须臾。",
        "笑约乘鸾羽客，",
        "窥倒景、拊掌崎岖。",
        "归来把，",
        "萸囊菊盏，",
        "一为洗泥涂。"
      ]
    },
    {
      "_id": null,
      "Name": "点绛唇",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "秋夜乘槎，",
        "客星容到天孙渚。",
        "眼波微注。",
        "将谓牵牛渡。",
        "见了还非，",
        "重理霓裳舞。",
        "都无误。",
        "几年一遇。",
        "莫讶周郎顾。"
      ]
    },
    {
      "_id": null,
      "Name": "西江月",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "三月群贤毕集，",
        "二天五马生光。",
        "传觞击鼓底匆忙。",
        "画鷁将飞江上。",
        "鲁国方虚两社，",
        "齐人要复侵疆。",
        "延英引对上东廊。",
        "应念幽人相望。"
      ]
    },
    {
      "_id": null,
      "Name": "谒金门",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "梅乍吐。",
        "趁寿席、香风度。",
        "人与此花俱独步。",
        "风流天付与。",
        "好在青云歧路。",
        "愿共作、和羹侣。",
        "归访赤松辞万户。",
        "莺花犹是主。"
      ]
    },
    {
      "_id": null,
      "Name": "醉落魄·一斛珠",
      "PoetId": "f9247c47c1554514b95633c78497a0ad",
      "PoetName": "周必大",
      "Form": "词",
      "Tags": [
        "宋代",
        "周必大"
      ],
      "Contents": [
        "才高句杰。",
        "飞黄却应鸾和节。",
        "新词聊卷波澜阔。",
        "泉玉淙铮，",
        "犹不比清切。",
        "相逢未稳愁相别。",
        "南园烟草南楼月。",
        "阳关西出重吹彻。",
        "垂柳新栽，",
        "宁忍便攀折。"
      ]
    }
  ]
}
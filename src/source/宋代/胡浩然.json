  "Poems": [
    {
      "_id": null,
      "Name": "东风齐著力",
      "PoetId": "72bcc5197c194abba0e46ec70e38083c",
      "PoetName": "胡浩然",
      "Form": "未知",
      "Tags": [
        "宋代",
        "胡浩然"
      ],
      "Contents": [
        "残腊收寒，",
        "三阳初转，",
        "已换年华。",
        "东君律管，",
        "迤逦到山家。",
        "处处笙簧鼎沸，",
        "会佳宴、坐列仙娃。",
        "花丛里，",
        "金炉满爇，",
        "龙麝烟斜。",
        "此景转堪夸。",
        "深意祝、寿山福海增加。",
        "玉觥满泛，",
        "且莫厌流霞。",
        "幸有迎春寿酒，",
        "银瓶浸、几朵梅花。",
        "休辞醉，",
        "园林秀色，",
        "百草萌芽。"
      ]
    },
    {
      "_id": null,
      "Name": "春霁·秋霁",
      "PoetId": "72bcc5197c194abba0e46ec70e38083c",
      "PoetName": "胡浩然",
      "Form": "未知",
      "Tags": [
        "宋代",
        "胡浩然"
      ],
      "Contents": [
        "迟日融和，",
        "乍雨歇东郊，",
        "嫩草凝碧。",
        "紫燕双飞，",
        "海棠相衬，",
        "妆点上林春色。",
        "黯然望极。",
        "因人天气浑无力。",
        "又听得。",
        "园苑，",
        "数声莺啭柳阴直。",
        "当此暗想，",
        "故国繁华，",
        "俨然游人，",
        "依旧南陌。",
        "院深沈、梨花乱落，",
        "那堪如练点衣白。",
        "酒量顿宽洪量窄。",
        "算此情景，",
        "除非殢酒狂欢，",
        "恣歌沈醉，",
        "有谁知得。"
      ]
    },
    {
      "_id": null,
      "Name": "送入我门来",
      "PoetId": "72bcc5197c194abba0e46ec70e38083c",
      "PoetName": "胡浩然",
      "Form": "词",
      "Tags": [
        "宋代",
        "胡浩然"
      ],
      "Contents": [
        "荼垒安扉，",
        "灵馗挂户，",
        "神傩烈竹轰雷。",
        "动念流光，",
        "四序式周回。",
        "须知今岁今宵尽，",
        "似顿觉明年明日催。",
        "向今夕，",
        "是处迎春送腊，",
        "罗绮筵开。",
        "今古遍同此夜，",
        "贤愚共添一岁，",
        "贵贱仍偕。",
        "互祝遐龄，",
        "山海固难摧。",
        "石崇富贵篯铿寿，",
        "更潘岳仪容子建才。",
        "仗东风尽力，",
        "一齐吹送，",
        "入此门来。"
      ]
    }
  ]
}
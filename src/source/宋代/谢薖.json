{
  "_id": "a8357a7b92084e6b947b9c5554f9b133",
  "Name": "谢薖",
  "Description": "谢薖（？-1116） 字幼槃，号竹友，抚州临川（今江西抚州）人。谢逸从弟。屡举进士不第，以诗文自误。有《竹友词》。",
  "Dynasty": "宋代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "偷声木兰花",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "景阳楼上钟声晓。",
        "半面啼妆匀未了。",
        "斜月纷纷。",
        "斜影幽香暗断魂。",
        "玉颜应在昭阳殿。",
        "却向前村深夜见。",
        "冰雪肌肤。",
        "还有斑斑雪点无。"
      ]
    },
    {
      "_id": null,
      "Name": "减字木兰花",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "江边一树。",
        "愁绝黄昏谁与度。",
        "琪树琼枝。",
        "不受雄蜂取次欺。",
        "风前望处。",
        "直恐乘风吹得去。",
        "能动诗情。",
        "故与诗人独目成。"
      ]
    },
    {
      "_id": null,
      "Name": "如梦令",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "人似已圆孤月。",
        "心似丁香百结。",
        "不见谪仙人，",
        "孤负梅花时节。",
        "愁绝。",
        "愁绝。",
        "江上落英如雪。"
      ]
    },
    {
      "_id": null,
      "Name": "定风波",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "牛女心期与目成。",
        "弥弥脉脉得盈盈。",
        "今夕银河凭鹊度。",
        "相遇。",
        "玉钩新吐照云屏。",
        "行旆雍容留宴语。",
        "将暮。",
        "方携珠袖到山亭。",
        "寂寞江天正云雾。",
        "回顾。",
        "不应中有少微星。"
      ]
    },
    {
      "_id": null,
      "Name": "念奴娇",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "绿云影里，",
        "把明霞、织就千重文绣。",
        "紫腻红骄扶不起，",
        "好是未开时候。",
        "半怯新寒，",
        "半宜晴色，",
        "养得胭脂透。",
        "小亭人静。",
        "嫩莺啼破清昼。",
        "犹记携手芳阴，",
        "一枝斜带艳，",
        "娇波双秀。",
        "小语轻怜花总见，",
        "争得似花长久。",
        "醉浅休归，",
        "夜深同睡，",
        "明月还相守。",
        "免叫春去，",
        "断肠空叹诗瘦。"
      ]
    },
    {
      "_id": null,
      "Name": "江神子·江城子",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "破瓜年纪柳腰身。",
        "懒精神。",
        "带羞瞋。",
        "手把江梅，",
        "冰雪斗清新。",
        "不向鸦儿飞处著。",
        "留乞与，",
        "眼中人。",
        "水精船里酒粼粼。",
        "皱香茵。",
        "驻行云。",
        "舞罢歌馀，",
        "花困不胜春。",
        "问著些儿心底事，",
        "才靥笑，",
        "又眉颦。"
      ]
    },
    {
      "_id": null,
      "Name": "浣溪沙",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "五律",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "柳絮随风散漫飞。",
        "檐冰成柱粟生肌。",
        "力排寒气赖金卮。",
        "赋丽谁为梁苑客，",
        "调高难和郢中词。",
        "且烦呵笔写乌丝。"
      ]
    },
    {
      "_id": null,
      "Name": "生查子",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "五律",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "情亲难语离，",
        "且尽玻璃盏。",
        "双鲤有来时，",
        "莫使音书缓。",
        "征骖去若飞，",
        "不道家山远。",
        "相见小冯君，",
        "笑语迎归雁。"
      ]
    },
    {
      "_id": null,
      "Name": "菩萨蛮",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "相思一夜庭花发。",
        "窗前忽认生尘袜。",
        "晓起艳寒妆。",
        "雪肌生暗香。",
        "佳人纤手摘。",
        "手与花同色。",
        "插鬓有谁宜。",
        "惟应潘玉儿。"
      ]
    },
    {
      "_id": null,
      "Name": "虞美人",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "金钗尽醉何须伴。",
        "萸糁浮杯乱。",
        "黄花香返岭梅魂。",
        "好把一枝斜插、向乌云。",
        "坡词欲唱无人会。",
        "桃叶知何在。",
        "与君同咏一联诗。",
        "但道老来能趁、菊花时。"
      ]
    },
    {
      "_id": null,
      "Name": "蝶恋花",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "一水盈盈牛与女。",
        "目送经年，",
        "脉脉无由语。",
        "後夜鹊桥知暗度。",
        "持杯乞与开愁绪。",
        "君似庾郎愁几许。",
        "万斛愁生，",
        "更作征人去。",
        "留定征鞍君且住。",
        "人间岂有无愁处。"
      ]
    },
    {
      "_id": null,
      "Name": "醉蓬莱",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "望晴峰染黛，",
        "暮霭澄空，",
        "碧天银汉。",
        "圆镜高飞，",
        "又一年秋半。",
        "皓色谁同，",
        "归心暗折，",
        "听唳云孤雁。",
        "问月停杯，",
        "锦袍何处，",
        "一尊无伴。",
        "好在南邻，",
        "诗盟酒社，",
        "刻烛争成，",
        "引觞愁缓。",
        "今夕楼中，",
        "继阿连清玩。",
        "饮剧狂歌，",
        "歌终起舞，",
        "醉冷光凌乱。",
        "乐事难穷，",
        "疏星易晓，",
        "又成浩叹。"
      ]
    },
    {
      "_id": null,
      "Name": "鹊桥仙",
      "PoetId": "a8357a7b92084e6b947b9c5554f9b133",
      "PoetName": "谢薖",
      "Form": "词",
      "Tags": [
        "宋代",
        "谢薖"
      ],
      "Contents": [
        "月胧星淡，",
        "南飞乌鹊，",
        "暗数秋期天上。",
        "锦楼不到野人家，",
        "但门外、清流叠嶂。",
        "一杯相属，",
        "佳人何在，",
        "不见绕粱清唱。",
        "人间平地亦崎岖，",
        "叹银汉、何曾风浪。"
      ]
    }
  ]
}
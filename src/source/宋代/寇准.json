  "Poems": [
    {
      "_id": null,
      "Name": "书河上亭壁",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "岸阔樯稀波渺茫，",
        "独凭危槛思何长。",
        "萧萧远树疏林外，",
        "一半秋山带夕阳。"
      ]
    },
    {
      "_id": null,
      "Name": "夏日",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "离心杳杳思迟迟，",
        "深院无人柳自垂。",
        "日暮长廊闻燕语，",
        "轻寒微雨麦秋时。"
      ]
    },
    {
      "_id": null,
      "Name": "夜度娘",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "烟波渺渺一千里，",
        "白苹香散东风起。",
        "日暮汀洲一望时，",
        "柔情不断如春水。"
      ]
    },
    {
      "_id": null,
      "Name": "春日登楼怀旧",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "五律",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "高楼聊引望，",
        "杳杳一川平。",
        "远水无人渡，",
        "孤舟尽日横。",
        "荒村生断霭，",
        "深树语流莺。",
        "旧业遥清渭，",
        "沉思忽自惊。"
      ]
    },
    {
      "_id": null,
      "Name": "柳",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "七绝",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "晓带轻烟间杏花，",
        "晚凝深翠拂平沙。",
        "长条别有风流处，",
        "密映钱塘苏小家。"
      ]
    },
    {
      "_id": null,
      "Name": "江南春",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "波渺渺，",
        "柳依依，",
        "孤村芳草远，",
        "斜日杏花飞。",
        "江南春尽离肠断，",
        "苹满汀洲人未归。"
      ]
    },
    {
      "_id": null,
      "Name": "点绛唇",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "水陌轻寒，",
        "社公雨足东风慢。",
        "定巢新燕。",
        "湿雨穿花转。",
        "象尺熏炉，",
        "拂晓停针线。",
        "愁蛾浅。",
        "飞红零乱。",
        "侧卧珠帘卷。"
      ]
    },
    {
      "_id": null,
      "Name": "甘草子",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "春早。",
        "柳丝无力，",
        "低拂清门道。",
        "暖日笼啼鸟。",
        "初坼桃花小。",
        "遥望碧天净如扫。",
        "曳一缕、轻烟缥缈。",
        "堪惜流年谢芳草。",
        "任玉壶倾倒。"
      ]
    },
    {
      "_id": null,
      "Name": "蝶恋花",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "四十年来身富贵。",
        "游处烟霞，",
        "步履如平地。",
        "紫府丹台仙籍里，",
        "皆知独擅无双美。",
        "将相兼荣谁敢比。",
        "彩凤徊翔，",
        "重浴荀池水。",
        "位极人臣功济世，",
        "芬芳天下歌桃李。"
      ]
    },
    {
      "_id": null,
      "Name": "踏莎行",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "春色将阑，",
        "莺声渐老。",
        "红英落尽春梅小。",
        "画堂人静雨蒙蒙，",
        "屏山半掩余香袅。",
        "密约沉沉，",
        "离情杳杳。",
        "菱花尘满慵将照。",
        "倚楼无语欲销魂，",
        "长空黯淡连芳草。"
      ]
    },
    {
      "_id": null,
      "Name": "阳关引",
      "PoetId": "fb9fb2f2734e46e0a86f16ecdb91cc9c",
      "PoetName": "寇准",
      "Form": "词",
      "Tags": [
        "宋代",
        "寇准"
      ],
      "Contents": [
        "塞草烟光阔。",
        "渭水波声咽。",
        "春朝雨霁轻尘歇。",
        "征鞍发。",
        "指青青杨柳，",
        "又是轻攀折。",
        "动黯然、知有後会甚时节。",
        "更尽一杯酒，",
        "歌一阕。",
        "叹人生，",
        "最难欢聚易离别。",
        "且莫辞沉醉，",
        "听取阳关彻。",
        "念故人、千里自此共明月。"
      ]
    }
  ]
}
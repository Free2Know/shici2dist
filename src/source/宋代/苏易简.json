    {
      "_id": null,
      "Name": "越江吟",
      "PoetId": "ece8b63e8f9740f684b31dab46c2cff3",
      "PoetName": "苏易简",
      "Form": "词",
      "Tags": [
        "宋代",
        "苏易简"
      ],
      "Contents": [
        "神仙神仙瑶池宴。",
        "片片。",
        "碧桃零落春风晚。",
        "翠云开处，",
        "隐隐金舆挽。",
        "玉麟背冷清风远。"
      ]
    }
  ]

  "Poems": [
    {
      "_id": null,
      "Name": "临江仙",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "燕子穿帘深院静，",
        "画阑飞絮蒙蒙。",
        "砌苔柔绿衬残红。",
        "问春何处，",
        "移在柳阴中。",
        "老至十分诗思减，",
        "膝间闲理丝桐。",
        "曲终声尽意无穷。",
        "杜鹃开了，"
      ]
    },
    {
      "_id": null,
      "Name": "卜算子",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "夜月照西风，",
        "露冷梧桐落。",
        "扬子江头朔雁飞，",
        "黄葛终难着。",
        "促织吊青灯，",
        "远梦惊初觉。",
        "拟抚窗前绿绮琴，",
        "寂寞无弦索。"
      ]
    },
    {
      "_id": null,
      "Name": "少年游",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "顶中玄发已成丝。",
        "回首不如归。",
        "浪宕人间，",
        "蹉跎岁月，",
        "清梦绕西池。",
        "百年光景无多日，",
        "七十古来稀。",
        "物外闲身，",
        "眼前尘事，",
        "休把误心期。"
      ]
    },
    {
      "_id": null,
      "Name": "忆王孙四首",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "半生长是白云间。",
        "猿鸟渔樵共往还。",
        "倚个乔松看远山。",
        "少机关。",
        "世上天涯芳草碧萋萋。",
        "何事王孙去不归。",
        "城郭虽是人民非。",
        "信音稀。",
        "几度一株闲伴霜陵桥。",
        "斜倚东风学舞腰。",
        "游子寻春骏马骄。",
        "欲魂销。",
        "和雨悠悠长是白云间。",
        "猿鸟渔樵共往还。",
        "倚个乔松看远山。",
        "少机关。",
        "世上以上善住作品《忆王孙》共4首"
      ]
    },
    {
      "_id": null,
      "Name": "朝中措",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "芳塘水满绿杨风。",
        "台殿隐朦胧。",
        "几度春来幽径，",
        "马蹄踏碎残红。",
        "寂寥广坐，",
        "尘埃漠漠，",
        "客散堂空。",
        "讲石雨苔侵遍，",
        "九原谁起生公。"
      ]
    },
    {
      "_id": null,
      "Name": "浣溪沙",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "五律",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "帘卷薰风夏日长。",
        "幽庭脉脉橘花香。",
        "闲看稚子引鸳鸯。",
        "四月雨凉思御夹，",
        "三吴麦秀欲移秧。",
        "不知身在水云乡。"
      ]
    },
    {
      "_id": null,
      "Name": "菩萨蛮",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "当年老子逢佳节。",
        "万户华灯连皓月。",
        "和气满江城。",
        "喧喧队子行。",
        "掩关聊共坐。",
        "静对沉香火。",
        "一笑尽君欢。",
        "闲心无两般。"
      ]
    },
    {
      "_id": null,
      "Name": "谒金门",
      "PoetId": "f7a03ec30a314c92a0e5e0855ca2730e",
      "PoetName": "善住",
      "Form": "词",
      "Tags": [
        "元代",
        "善住"
      ],
      "Contents": [
        "天赋巧。",
        "刻出都非草草。",
        "浪迹江湖今欲老。",
        "尽传生活好。",
        "万物无非我造。",
        "异质殊形皆妙。",
        "游刃不因心眼到。",
        "一时能事了。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "喜迁莺",
      "PoetId": "1129b0cddf034dfeaed2a15803dc5e8c",
      "PoetName": "完颜亮",
      "Form": "词",
      "Tags": [
        "元代",
        "完颜亮"
      ],
      "Contents": [
        "旌麾初举。",
        "正＊＊力健，",
        "嘶风江渚。",
        "射虎将军，",
        "落雕都尉，",
        "绣帽锦袍翘楚。",
        "怒磔戟髯，",
        "争奋卷地，",
        "一声鼙鼓。",
        "笑谈顷，",
        "指长江齐楚，",
        "六师飞渡。",
        "此去。",
        "无自堕，",
        "金印如斗，",
        "独在功名取。",
        "断锁机谋，",
        "垂鞭方略，",
        "人事本无今古。",
        "试展卧龙韬韫，",
        "果见成功旦莫。",
        "问江左，",
        "想云霓望切，",
        "玄黄迎路"
      ]
    },
    {
      "_id": null,
      "Name": "念奴娇",
      "PoetId": "1129b0cddf034dfeaed2a15803dc5e8c",
      "PoetName": "完颜亮",
      "Form": "词",
      "Tags": [
        "元代",
        "完颜亮"
      ],
      "Contents": [
        "天丁震怒，",
        "掀翻银海，",
        "散乱珠箔。",
        "六出奇花飞滚滚，",
        "平填了、山中丘壑。",
        "皓虎颠狂，",
        "素麟猖獗，",
        "掣断真珠索。",
        "玉龙酣战，",
        "鳞甲满天飘落。",
        "谁念万里关山，",
        "征夫僵立，",
        "缟带占旗脚。",
        "色映戈矛，",
        "光摇剑戟，",
        "杀气横戎幕。",
        "貔虎豪雄，",
        "偏裨真勇，",
        "非与谈兵略。",
        "须ブ一醉，",
        "看取碧空寥廓。"
      ]
    },
    {
      "_id": null,
      "Name": "昭君怨",
      "PoetId": "1129b0cddf034dfeaed2a15803dc5e8c",
      "PoetName": "完颜亮",
      "Form": "五律",
      "Tags": [
        "元代",
        "完颜亮"
      ],
      "Contents": [
        "昨日樵村渔浦。",
        "今日琼川银渚。",
        "山色卷帘看。",
        "老峰峦。",
        "锦帐美人贪睡。",
        "不觉天孙剪水。",
        "惊问是杨花。",
        "是芦花。"
      ]
    },
    {
      "_id": null,
      "Name": "鹊桥仙",
      "PoetId": "1129b0cddf034dfeaed2a15803dc5e8c",
      "PoetName": "完颜亮",
      "Form": "词",
      "Tags": [
        "元代",
        "完颜亮"
      ],
      "Contents": [
        "停杯不举，",
        "停歌不发，",
        "等候银蟾出海。",
        "不知何处片云来，",
        "做许大、通天障碍。",
        "虬髯捻断，",
        "星眸睁裂，",
        "唯恨剑锋不快。",
        "一挥截断紫云腰，",
        "仔细看"
      ]
    }
  ]
}
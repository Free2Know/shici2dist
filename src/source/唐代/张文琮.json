{
  "_id": "3484d20e18d445ffa4e9ebe1559d0f40",
  "Name": "张文琮",
  "Description": "贝州人，高宗相文瓘之弟。好自写书，笔不释手。贞观中，为侍书御史，三迁亳州剌史，为政清简。永徽中，拜户部侍郎，出为建州刺史。集二十卷，今存诗六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "同潘屯田冬日早朝",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "假寐怀古人，",
        "夙兴瞻晓月。",
        "通晨禁门启，",
        "冠盖趋朝谒。",
        "霜霭清九衢，",
        "霞光照双阙。",
        "纷纶文物纪，",
        "焕烂声明发。",
        "腰剑动陆离，",
        "鸣玉和清越。"
      ]
    },
    {
      "_id": null,
      "Name": "和杨舍人咏中书省花树",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "花萼映芳丛，",
        "参差间早红。",
        "因风时落砌，",
        "杂雨乍浮空。",
        "影照凤池水，",
        "香飘鸡树风。",
        "岂不爱攀折，",
        "希君怀袖中。",
        "第四十卷"
      ]
    },
    {
      "_id": null,
      "Name": "咏水",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "标名资上善，",
        "流派表灵长。",
        "地图罗四渎，",
        "天文载五潢。",
        "方流涵玉润，",
        "圆折动珠光。",
        "独有蒙园吏，",
        "栖偃玩濠梁。"
      ]
    },
    {
      "_id": null,
      "Name": "昭君怨",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "戒途飞万里，",
        "回首望三秦。",
        "忽见天山雪，",
        "还疑上苑春。",
        "玉痕垂粉泪，",
        "罗袂拂胡尘。",
        "为得胡中曲，",
        "还悲远嫁人。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·蜀道难",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "梁山镇地险，",
        "积石阻云端。",
        "深谷下寥廓，",
        "层岩上郁盘。",
        "飞梁架绝岭，",
        "栈道接危峦。",
        "揽辔独长息，",
        "方知斯路难。"
      ]
    },
    {
      "_id": null,
      "Name": "赋桥",
      "PoetId": "3484d20e18d445ffa4e9ebe1559d0f40",
      "PoetName": "张文琮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张文琮"
      ],
      "Contents": [
        "造舟浮谓日，",
        "鞭石表秦初。",
        "星文遥写汉，",
        "虹势尚凌虚。",
        "已授文成履，",
        "空题武骑书。",
        "别有临濠上，",
        "栖偃独观鱼。"
      ]
    }
  ]
}
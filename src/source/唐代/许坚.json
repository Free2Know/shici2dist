  "Poems": [
    {
      "_id": null,
      "Name": "上舍人徐铉",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "几宵烟月锁楼台，",
        "欲寄侯门荐下才。",
        "满面尘埃人不识，",
        "谩随流水出山来。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "未知",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "道既学不得，",
        "仙从何处来。",
        "卧久似慵伸雪项，",
        "立迟犹未整霜衣。",
        "（《病鹤》，",
        "见《吟窗杂录》）"
      ]
    },
    {
      "_id": null,
      "Name": "游溧阳霞泉寺限白字",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "七律",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "近枕吴溪与越峰，",
        "前朝恩赐云泉额。",
        "竹林晴见雁塔高，",
        "石室曾栖几禅伯。",
        "荒碑字没莓苔深，",
        "古池香泛荷花白。",
        "客有经年别故林，",
        "落日啼猿情脉脉。"
      ]
    },
    {
      "_id": null,
      "Name": "登游齐山",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "星使南驰入楚重，",
        "此山偏得驻行踪。",
        "落花满地月华冷，",
        "寂寞旧山三四峰。"
      ]
    },
    {
      "_id": null,
      "Name": "题幽栖观",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "五律",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "仙翁上升去，",
        "丹井寄晴壑。",
        "山色接天台，",
        "湖光照寥廓。",
        "玉洞绝无人，",
        "老桧犹栖鹤。",
        "我欲掣青蛇，",
        "他时冲碧落。"
      ]
    },
    {
      "_id": null,
      "Name": "题扇",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "哦吟但写胸中妙，",
        "饮酒能忘身后名。",
        "但愿长闲有诗酒，",
        "一溪风月共清明。"
      ]
    },
    {
      "_id": null,
      "Name": "题茅山观",
      "PoetId": "b9369c7578dd4a08a6972f9c7c63f777",
      "PoetName": "许坚",
      "Form": "七律",
      "Tags": [
        "唐代",
        "许坚"
      ],
      "Contents": [
        "常恨清风千载郁，",
        "洞天令得恣游遨。",
        "松楸古色玉坛静，",
        "鸾鹤不来青汉高。",
        "茅氏井寒丹已化，",
        "玄宗碑断梦仍劳。",
        "分明有个长生路，",
        "休向红尘叹二毛。"
      ]
    }
  ]
}
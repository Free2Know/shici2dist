{
  "_id": "941ca1f50eb64992963ee8dd6b76301c",
  "Name": "张又新",
  "Description": "张又新，字孔昭，工部侍郎荐之子。元和中，擢第，历左右补阙，坐李逢吉党，贬江州刺史。后附李训，迁刑部郎中。训死，复贬申州刺史。诗十七首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "三月五日陪大夫泛长沙东湖",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "上巳余风景，",
        "芳辰集远坰。",
        "彩舟浮泛荡，",
        "绣毂下娉婷。",
        "栖树回葱蒨，",
        "笙歌转杳冥。",
        "湖光迷翡翠，",
        "草色醉蜻蜓。",
        "鸟弄桐花日，",
        "鱼翻谷雨萍。",
        "从今留胜会，",
        "谁看画兰亭。"
      ]
    },
    {
      "_id": null,
      "Name": "中界山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "瑟瑟峰头玉水流，",
        "晋时遗迹更堪愁。",
        "愁人到此劳长望，",
        "何处烟波是祖州。"
      ]
    },
    {
      "_id": null,
      "Name": "华盖山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "一岫坡陀凝绿草，",
        "千重虚翠透红霞。",
        "愁来始上消归思，",
        "见尽江城数百家。"
      ]
    },
    {
      "_id": null,
      "Name": "吹台山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "吹台山上彩烟凝，",
        "日落云收叠翠屏。",
        "应谓焦桐堪采斫，",
        "不知谁是柳吴兴。"
      ]
    },
    {
      "_id": null,
      "Name": "孤屿",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "碧水逶迤浮翠巘，",
        "绿萝蒙密媚晴江。",
        "不知谁与名孤屿，",
        "其实中川是一双。"
      ]
    },
    {
      "_id": null,
      "Name": "帆游山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "涨海尝从此地流，",
        "千帆飞过碧山头。",
        "君看深谷为陵后，",
        "翻覆人间未肯休。"
      ]
    },
    {
      "_id": null,
      "Name": "春草池",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "谢公梦草一差微，",
        "谪宦当时道不机。",
        "且谓飞霞游赏地，",
        "池塘烟柳亦依依。"
      ]
    },
    {
      "_id": null,
      "Name": "游白鹤山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "白鹤山边秋复春，",
        "张文宅畔少风尘。",
        "欲驱五马寻真隐，",
        "谁是当初□竹人。"
      ]
    },
    {
      "_id": null,
      "Name": "牡丹",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "牡丹一朵值千金，",
        "将谓从来色最深。",
        "今日满栏开似雪，",
        "一生辜负看花心。"
      ]
    },
    {
      "_id": null,
      "Name": "罗浮山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "江北重峦积翠浓，",
        "绮霞遥映碧芙蓉。",
        "不知末后沧溟上，",
        "减却瀛洲第几峰。"
      ]
    },
    {
      "_id": null,
      "Name": "行田诗",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "白石岩前湖水春，",
        "湖边旧境有清尘。",
        "欲追谢守行田意，",
        "今古同忧是长人。"
      ]
    },
    {
      "_id": null,
      "Name": "谢池",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "郡郭东南积谷山，",
        "谢公曾是此跻攀。",
        "今来惟有灵池月，",
        "犹是婵娟一水间。"
      ]
    },
    {
      "_id": null,
      "Name": "赠广陵妓",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "云雨分飞二十年，",
        "当时求梦不曾眠。",
        "今来头白重相见，",
        "还上襄王玳瑁筵。"
      ]
    },
    {
      "_id": null,
      "Name": "青岙山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "灵海泓澄匝翠峰，",
        "昔贤心赏已成空。",
        "今朝亭馆无遗制，",
        "积水沧浪一望中。"
      ]
    },
    {
      "_id": null,
      "Name": "青障山",
      "PoetId": "941ca1f50eb64992963ee8dd6b76301c",
      "PoetName": "张又新",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张又新"
      ],
      "Contents": [
        "一派远光澄碧月，",
        "万株耸翠猎金飙。",
        "陶仙谩学长生术，",
        "暑往寒来更寂寥。"
      ]
    }
  ]
}
{
  "_id": "6e7b2ac892454203844fd774578416ed",
  "Name": "杨汝士",
  "Description": "杨汝士，字慕巢，虞卿从弟。元和四年，擢进士第。牛僧孺、李宗闵待之善，引为中书舍人。开成初，由兵部侍郎出镇东川，入为吏部侍郎，终刑部尚书。诗七首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "和宗人尚书嗣复祠祭武侯毕，题临淮……",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "古柏森然地，",
        "修严蜀相祠。",
        "一过荣异代，",
        "三顾盛当时。",
        "功德流何远，",
        "馨香荐未衰。",
        "敬名探国志，",
        "饰像慰甿思。",
        "昔谒从征盖，",
        "今闻拥信旗。",
        "固宜光宠下，",
        "有泪刻前碑。"
      ]
    },
    {
      "_id": null,
      "Name": "和段相公夏登张仪楼",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "从公城上来，",
        "秋近绝纤埃。",
        "楼古秦规在，",
        "江分蜀望开。",
        "远山标宿雪，",
        "末席本寒灰。",
        "陪赏今为忝，",
        "临欢敢诉杯。"
      ]
    },
    {
      "_id": null,
      "Name": "和段相公登武担寺西台",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "清净此道宫，",
        "层台复倚空。",
        "偶时三伏外，",
        "列席九霄中。",
        "平视云端路，",
        "高临树杪风。",
        "自怜荣末座，",
        "前日别池笼。"
      ]
    },
    {
      "_id": null,
      "Name": "宴杨仆射新昌里第",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "隔坐应须赐御屏，",
        "尽将仙翰入高冥。",
        "文章旧价留鸾掖，",
        "桃李新阴在鲤庭。",
        "再岁生徒陈贺宴，",
        "一时良史尽传馨。",
        "当时疏广虽云盛，",
        "讵有兹筵醉绿醽。"
      ]
    },
    {
      "_id": null,
      "Name": "建节后偶作",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "抛却弓刀上砌台，",
        "上方台榭与云开。",
        "山僧见我衣裳窄，",
        "知道新从战地来。"
      ]
    },
    {
      "_id": null,
      "Name": "戏柳棠",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "文章漫道能吞凤，",
        "杯酒何曾解吃鱼。",
        "今日梓州张社会，",
        "应须遭这老尚书。"
      ]
    },
    {
      "_id": null,
      "Name": "贺筵占赠营妓",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "郎君得意及青春，",
        "蜀国将军又不贫。",
        "一曲高歌红一匹，",
        "两头娘子谢夫人。"
      ]
    },
    {
      "_id": null,
      "Name": "题画山水",
      "PoetId": "6e7b2ac892454203844fd774578416ed",
      "PoetName": "杨汝士",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨汝士"
      ],
      "Contents": [
        "太华峰前是故乡，",
        "路人遥指读书堂。",
        "如今老大骑官马，",
        "羞向关西道姓杨。"
      ]
    }
  ]
}
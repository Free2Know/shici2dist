  "Poems": [
    {
      "_id": null,
      "Name": "南至日隔仗望含元殿香炉",
      "PoetId": "17592f6b0e374a7fa3a6dcb1c67f962d",
      "PoetName": "郭遵",
      "Form": "未知",
      "Tags": [
        "唐代",
        "郭遵"
      ],
      "Contents": [
        "冕旒亲负扆，",
        "卉服尽朝天。",
        "旸谷移初日，",
        "金炉出御烟。",
        "芬馨流远近，",
        "散漫入貂蝉。",
        "霜仗凝逾白，",
        "朱栏映转鲜。",
        "如看浮阙在，",
        "稍觉逐风迁。",
        "为沐皇家庆，",
        "来瞻羽卫前。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得春风扇微和",
      "PoetId": "17592f6b0e374a7fa3a6dcb1c67f962d",
      "PoetName": "郭遵",
      "Form": "未知",
      "Tags": [
        "唐代",
        "郭遵"
      ],
      "Contents": [
        "微风飘淑气，",
        "散漫及兹晨。",
        "习习何处至，",
        "熙熙与春亲。",
        "暧空看早辨，",
        "映日度逾频。",
        "高拂非烟杂，",
        "低垂众卉新。",
        "霁天轻有霭，",
        "绮陌尽无尘。",
        "还似登台意，",
        "元和欲煦人。"
      ]
    }
  ]
}
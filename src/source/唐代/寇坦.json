  "Poems": [
    {
      "_id": null,
      "Name": "同张少府和厍狄员外夏晚初霁南省寓……",
      "PoetId": "e0459398f21c4252964561b5dc9323df",
      "PoetName": "寇坦",
      "Form": "未知",
      "Tags": [
        "唐代",
        "寇坦"
      ],
      "Contents": [
        "黄绶归休日，",
        "仙郎复奏馀。",
        "晏居当夏晚，",
        "寓直会晴初。",
        "露散星文发，",
        "云披水镜虚。",
        "高才推独唱，",
        "嘉会喜连茹。",
        "月色摇春闼，",
        "香烟霭暝庐。",
        "千门传夜警，",
        "万象照阶除。",
        "少孺嘉能赋，",
        "文强阅赐书。",
        "兼曹谋未展，",
        "入幕志方摅。",
        "为奉灵台帛，",
        "恭先待漏车。",
        "贞标不可仰，",
        "空此乐樵渔。"
      ]
    },
    {
      "_id": null,
      "Name": "同皇甫兵曹天官寺浴室新成招友人赏会",
      "PoetId": "e0459398f21c4252964561b5dc9323df",
      "PoetName": "寇坦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "寇坦"
      ],
      "Contents": [
        "温室欢初就，",
        "兰交托胜因。",
        "共听无漏法，",
        "兼濯有为尘。",
        "水洁三空性，",
        "香沾四大身。",
        "清心多善友，",
        "颂德慰同人。"
      ]
    }
  ]
}
{
  "_id": "c252cb9af1cf4de3b9128caa0f9e4079",
  "Name": "崔日用",
  "Description": "崔日用，滑州灵昌人。举进士。大足元年，为宗楚客称荐，擢新丰尉。神龙中，附楚客、三思，骤迁兵部侍郎，兼修文馆学士。复预讨韦庶人谋，授黄门侍郎，参知机务。开元中，拜吏部尚书，终并州大都督长史。诗九首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "乞金鱼词",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "未知",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "台中鼠子直须谙，",
        "信足跳梁上壁龛。",
        "倚翻灯脂污张五，",
        "还来啮带报韩三。",
        "莫浪语，",
        "直王相。",
        "大家必若赐金龟，",
        "卖却猫儿相报赏。"
      ]
    },
    {
      "_id": null,
      "Name": "又赐宴自歌",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "未知",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "东馆总是鹓鸾，",
        "南台自多杞梓。",
        "日用读书万卷，",
        "何忍不蒙学士。",
        "墨制帘下出来，",
        "微臣眼看喜死。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "彼名流兮左氏癖，",
        "意玄远兮冠今夕。",
        "（《赠武平一》）"
      ]
    },
    {
      "_id": null,
      "Name": "夜宴安乐公主宅",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "银烛金屏坐碧堂，",
        "只言河汉动神光。",
        "主家盛时欢不极，",
        "才子能歌夜未央。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和九月九日登慈恩寺浮图应制",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "五律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "紫宸欢每洽，",
        "绀殿法初隆。",
        "菊泛延龄酒，",
        "兰吹解愠风。",
        "咸英调正乐，",
        "香梵遍秋空。",
        "临幸浮天瑞，",
        "重阳日再中。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和人日重宴大明宫恩赐彩缕人……",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "新年宴乐坐东朝，",
        "钟鼓铿锽大乐调。",
        "金屋瑶筐开宝胜，",
        "花笺彩笔颂春椒。",
        "曲池苔色冰前液，",
        "上苑梅香雪里矫。",
        "宸极此时飞圣藻，",
        "微臣窃抃预闻韶。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制春日幸望春宫应制",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "东郊风物正熏馨，",
        "素浐凫鹥戏绿汀。",
        "凤阁斜通平乐观，",
        "龙旂直逼望春亭。",
        "光风摇动兰英紫，",
        "淑气依迟柳色青。",
        "渭浦明晨修禊事，",
        "群公倾贺水心铭。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制送张说巡边",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "未知",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "轩相推风后，",
        "周官重夏卿。",
        "庙谋能允迪，",
        "韬略又纵横。",
        "吉日四黄马，",
        "宣王六月兵。",
        "拟清鸡臣塞，",
        "先指朔方城。",
        "列将怀威抚，",
        "匈奴畏盛名。",
        "去当推毂送，",
        "来伫出郊迎。",
        "绝漠蓬将断，",
        "华筵槿正荣。",
        "壮心看舞剑，",
        "别绪应悬旌。",
        "睿锡承优旨，",
        "乾文复龙行。",
        "暂劳期永逸，",
        "赫矣振天声。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和立春游苑迎春应制",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "乘时迎气正璇衡，",
        "灞浐烟氛向晚清。",
        "剪绮裁红妙春色，",
        "宫梅殿柳识天情。",
        "瑶筐彩燕先呈端，",
        "金缕晨鸡未学鸣。",
        "圣泽阳和宜宴乐，",
        "年年捧日向东城。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和送金城公主适西蕃",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "五律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "圣后经纶远，",
        "谋臣计画多。",
        "受降追汉策，",
        "筑馆计戎和。",
        "俗化乌孙垒，",
        "春生积石河。",
        "六龙今出饯，",
        "双鹤愿为歌。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·享龙池乐章·第六章",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七律",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "龙兴白水汉兴符，",
        "圣主时乘运斗枢。",
        "岸上丰茸五花树，",
        "波中的皪千金珠。",
        "操环昔闻迎夏启，",
        "发匣先来瑞有虞。",
        "风色云光随隐见，",
        "赤云神化象江湖。"
      ]
    },
    {
      "_id": null,
      "Name": "钱唐永昌",
      "PoetId": "c252cb9af1cf4de3b9128caa0f9e4079",
      "PoetName": "崔日用",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "崔日用"
      ],
      "Contents": [
        "洛阳桴鼓今不鸣，",
        "朝野咸推重太平。",
        "冬至冰霜俱怨别，",
        "春来花鸟若为情。"
      ]
    }
  ]
}
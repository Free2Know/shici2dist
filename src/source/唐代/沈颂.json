  "Description": "沈颂，无锡尉。诗六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "卫中作",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "卫风愉艳宜春色，",
        "淇水清泠增暮愁。",
        "总使榴花能一醉，",
        "终须萱草暂忘忧。"
      ]
    },
    {
      "_id": null,
      "Name": "旅次灞亭",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "闲琴开旅思，",
        "清夜有愁心。",
        "圆月正当户，",
        "微风犹在林。",
        "苍茫孤亭上，",
        "历乱多秋音。",
        "言念待明发，",
        "东山幽意深。"
      ]
    },
    {
      "_id": null,
      "Name": "早发西山",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "游子空有怀，",
        "赏心杳无路。",
        "前程数千里，",
        "乘夜连轻驭。",
        "缭绕松筱中，",
        "苍茫犹未曙。",
        "遥闻孤村犬，",
        "暗指人家去。",
        "疲马怀涧泉，",
        "征衣犯霜露。",
        "喧呼谿鸟惊，",
        "沙上或骞翥。",
        "娟娟东岑月，",
        "照耀独归虑。"
      ]
    },
    {
      "_id": null,
      "Name": "春旦歌",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "常闻嬴女玉箫台，",
        "奏曲情深彩凤来。",
        "欲登此地销归恨，",
        "却羡双飞去不回。"
      ]
    },
    {
      "_id": null,
      "Name": "送人还吴",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "人心不忘乡，",
        "矧余客已久。",
        "送君江南去，",
        "秋醉洛阳酒。",
        "赠言幽径兰，",
        "别思河堤柳。",
        "征帆暮风急，",
        "望望空延首。"
      ]
    },
    {
      "_id": null,
      "Name": "送金文学还日东",
      "PoetId": "34622050171949cdab1bf009cc564b06",
      "PoetName": "沈颂",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈颂"
      ],
      "Contents": [
        "君家东海东，",
        "君去因秋风。",
        "漫漫指乡路，",
        "悠悠如梦中。",
        "烟雾积孤岛，",
        "波涛连太空。",
        "冒险当不惧，",
        "皇恩措尔躬。"
      ]
    }
  ]
}
{
  "_id": "db9f0b6347574536995f5802558bd012",
  "Name": "窦群",
  "Description": "窦群，字丹列。兄弟皆擢进士第，独群以处士客于毗陵。韦夏卿荐之，为左拾遗，转膳部员外郎，兼侍御史，知杂事。出为唐州刺史，武元衡、李吉甫共引之，召拜吏部郎中。元衡辅政，复荐为中丞。后出为湖南观察使，改黔中，坐事，贬开州刺史。稍迁容管经略使，召还卒。诗二十三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "东山月下怀友人",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "东山多乔木，",
        "月午始苍苍。",
        "虽殊碧海状，",
        "爱此青苔光。",
        "高下灭华烛，",
        "参差启洞房。",
        "佳人梦馀思，",
        "宝瑟愁应商。",
        "皎洁殊未已，",
        "沈吟限一方。",
        "宦情哂鸡口，",
        "世路倦羊肠。",
        "彼美金石分，",
        "眷言兰桂芳。",
        "清晖讵同夕，",
        "耿耿但相望。"
      ]
    },
    {
      "_id": null,
      "Name": "中牟县经鲁公庙",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "青史编名在箧中，",
        "故林遗庙揖仁风。",
        "还将文字如颜色，",
        "暂下蒲车为鲁公。"
      ]
    },
    {
      "_id": null,
      "Name": "假日寻花",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "武陵缘源不可到，",
        "河阳带县讵堪夸。",
        "枝枝如雪南关外，",
        "一日休闲尽属花。"
      ]
    },
    {
      "_id": null,
      "Name": "冬日晓思寄杨二十七炼师",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "雨霜地如雪，",
        "松桂青参差。",
        "鹤警晨光上，",
        "步出南轩时。",
        "所遇各有适，",
        "我怀亦自怡。",
        "愿言缄素封，",
        "昨夜梦琼枝。"
      ]
    },
    {
      "_id": null,
      "Name": "初入谏司喜家室至",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "一旦悲欢见孟光，",
        "十年辛苦伴沧浪。",
        "不知笔砚缘封事，",
        "犹问佣书日几行。"
      ]
    },
    {
      "_id": null,
      "Name": "北地",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "何事到容州，",
        "临池照白头。",
        "兴随年已往，",
        "愁与水长流。",
        "黾勉思逋客，",
        "辛勤悔饭牛。",
        "诗人亦何意，",
        "树草欲忘忧。"
      ]
    },
    {
      "_id": null,
      "Name": "同王晦伯朱遐景宿慧山寺",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "共访青山寺，",
        "曾隐南朝人。",
        "问古松桂老，",
        "开襟言笑新。",
        "步移月亦出，",
        "水映石磷磷。",
        "予洗肠中酒，",
        "君濯缨上尘。",
        "皓彩入幽抱，",
        "清气逼苍旻。",
        "信此澹忘归，",
        "淹留冰玉邻。"
      ]
    },
    {
      "_id": null,
      "Name": "奉酬西川武相公晨兴赠友见示之作",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "碧树分晓色，",
        "宿雨弄清光。",
        "犹闻子规啼，",
        "独念一声长。",
        "眷眷轸芳思，",
        "依依寄远方。",
        "情同如兰臭，",
        "惠比返魂香。",
        "新什惊变雅，",
        "古瑟代沈湘。",
        "殷勤见知己，",
        "掩抑绕中肠。",
        "隙驷不我待，",
        "路人易相忘。",
        "孤老空许国，",
        "幽报期苍苍。"
      ]
    },
    {
      "_id": null,
      "Name": "时兴",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "夙心旷何许，",
        "日暮依林薄。",
        "流水不待人，",
        "孤云时映鹤。",
        "濛濛千万花，",
        "曷为神仙药。",
        "不遇烂柯叟，",
        "报非旧城郭。"
      ]
    },
    {
      "_id": null,
      "Name": "春雨",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "昨日偷闲看花了，",
        "今朝多雨奈人何。",
        "人间尽似逢花雨，",
        "莫爱芳菲湿绮罗。"
      ]
    },
    {
      "_id": null,
      "Name": "晚自台中归永宁里南望山色怅然……",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "白发侵侵生有涯，",
        "青襟曾爱紫河车。",
        "自怜悟主难归去，",
        "马上看山恐到家。"
      ]
    },
    {
      "_id": null,
      "Name": "晨游昌师院",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "深庭芳草浓，",
        "晓井山泉溢。",
        "林馥乱沈烟，",
        "石润侵经室。",
        "幽岩鸟飞静，",
        "晴岭云归密。",
        "壁藓凝苍华，",
        "竹阴满晴日。",
        "生期半宵梦，",
        "忧绪仍非一。",
        "若无高世心，",
        "安能此终毕。"
      ]
    },
    {
      "_id": null,
      "Name": "经潼关赠宇文十",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "古有弓旌礼，",
        "今征草泽臣。",
        "方同白衣见，",
        "不是弃繻人。"
      ]
    },
    {
      "_id": null,
      "Name": "自京将赴黔南",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "风雨荆州二月天，",
        "问人初雇峡中船。",
        "西南一望云和水，",
        "犹道黔南有四千。"
      ]
    },
    {
      "_id": null,
      "Name": "草堂夜坐",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "匣中三尺剑，",
        "天上少微星。",
        "勿谓相去远，",
        "壮心曾不停。"
      ]
    },
    {
      "_id": null,
      "Name": "观画鹤",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "华亭不相识，",
        "卫国复谁知。",
        "怅望冲天羽，",
        "甘心任画师。"
      ]
    },
    {
      "_id": null,
      "Name": "贞元末东院尝接事今西川武相公于兹……",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "重轩深似谷，",
        "列柏镇含烟。",
        "境绝苍蝇到，",
        "风生白雪前。",
        "弹冠惊迹近，",
        "专席感恩偏。",
        "霄汉朝来下，",
        "油幢路几千。"
      ]
    },
    {
      "_id": null,
      "Name": "赠刘大兄院长",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "万年枝下昔同趋，",
        "三事行中半已无。",
        "路自长沙忽相见，",
        "共惊双鬓别来殊。"
      ]
    },
    {
      "_id": null,
      "Name": "送内弟袁德师",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "南渡登舟即水仙，",
        "西垣有客思悠然。",
        "因君相问为官意，",
        "不卖毗陵负郭田。"
      ]
    },
    {
      "_id": null,
      "Name": "雨后月下寄怀羊二十七资州",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "夕霁凉飙至，",
        "翛然心赏谐。",
        "清光松上月，",
        "虚白郡中斋。",
        "置酒平生在，",
        "开衿愿见乖。",
        "殷勤寄双鲤，",
        "梦想入君怀。"
      ]
    },
    {
      "_id": null,
      "Name": "雪中遇直",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "寒光凝雪彩，",
        "限直居粉闱。",
        "恍疑白云上，",
        "乍觉金印非。",
        "树色霭虚空，",
        "琴声谐素徽。",
        "明晨阻通籍，",
        "独卧挂朝衣。"
      ]
    },
    {
      "_id": null,
      "Name": "题剑",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "丈夫得宝剑，",
        "束发曾书绅。",
        "嗟吁一朝遇，",
        "愿言千载邻。",
        "心许留家树，",
        "辞直断佞臣。",
        "焉能为绕指，",
        "拂拭试时人。"
      ]
    },
    {
      "_id": null,
      "Name": "黔中书事",
      "PoetId": "db9f0b6347574536995f5802558bd012",
      "PoetName": "窦群",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦群"
      ],
      "Contents": [
        "万事非京国，",
        "千山拥丽谯。",
        "佩刀看日晒，",
        "赐马傍江调。",
        "言语多重译，",
        "壶觞每独谣。",
        "沿流如著翅，",
        "不敢问归桡。"
      ]
    }
  ]
}
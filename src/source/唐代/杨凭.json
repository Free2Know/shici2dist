{
  "_id": "22bf9265aad04a19a610921b934b058f",
  "Name": "杨凭",
  "Description": "杨凭，字虚受，弘农人，与弟凝、凌皆工文辞。大历中，踵擢进士第，时称三杨。凭重交游，尚气节，与穆质、许孟容、李鄘相友善，号杨穆许李。历事节度府，召为监察御史，累拜京兆尹。与李夷简素有隙，因擿发他罪，欲抵以死，宪宗以凭治京兆有绩，但贬临贺尉。俄徙杭州长史，以太子詹事卒。诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "乐游园望月",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "炎灵全盛地，",
        "明月半秋时。",
        "今古人同望，",
        "盈亏节暗移。",
        "彩凝双月迥，",
        "轮度八川迟。",
        "共惜鸣珂去，",
        "金波送酒卮。"
      ]
    },
    {
      "_id": null,
      "Name": "千叶桃花",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "千叶桃花胜百花，",
        "孤荣春晚驻年华。",
        "若教避俗秦人见，",
        "知向河源旧侣夸。"
      ]
    },
    {
      "_id": null,
      "Name": "寄别",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "晚烟洲雾并苍苍，",
        "河雁惊飞不作行。",
        "回旆转舟行数里，",
        "歌声犹自逐清湘。"
      ]
    },
    {
      "_id": null,
      "Name": "巴江雨夜",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "五岭天无雁，",
        "三巴客问津。",
        "纷纷轻汉暮，",
        "漠漠暗江春。",
        "青草连湖岸，",
        "繁花忆楚人。",
        "芳菲无限路，",
        "几夜月明新。"
      ]
    },
    {
      "_id": null,
      "Name": "早发湘中",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "按节鸣笳中贵催，",
        "红旌白旆满船开。",
        "迎愁湓浦登城望，",
        "西见荆门积水来。"
      ]
    },
    {
      "_id": null,
      "Name": "春中泛舟",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "仙郎归奏过湘东，",
        "正值三湘二月中。",
        "惆怅满川桃杏醉，",
        "醉看还与曲江同。"
      ]
    },
    {
      "_id": null,
      "Name": "春情",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "暮雨朝云几日归，",
        "如丝如雾湿人衣。",
        "三湘二月春光早，",
        "莫逐狂风缭乱飞。"
      ]
    },
    {
      "_id": null,
      "Name": "晚泊江戍",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "旅棹依遥戍，",
        "清湘急晚流。",
        "若为南浦宿，",
        "逢此北风秋。",
        "云月孤鸿晚，",
        "关山几路愁。",
        "年年不得意，",
        "零落对沧洲。"
      ]
    },
    {
      "_id": null,
      "Name": "海榴",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "海榴殷色透帘栊，",
        "看盛看衰意欲同。",
        "若许三英随五马，",
        "便将浓艳斗繁红。"
      ]
    },
    {
      "_id": null,
      "Name": "湘江泛舟",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "湘川洛浦三千里，",
        "地角天涯南北遥。",
        "除却同倾百壶外，",
        "不愁谁奈两魂销。"
      ]
    },
    {
      "_id": null,
      "Name": "秋日独游曲江",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "信马闲过忆所亲，",
        "秋山行尽路无尘。",
        "主人莫惜松阴醉，",
        "还有千钱沽酒人。"
      ]
    },
    {
      "_id": null,
      "Name": "赠窦牟",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "直用天才众却瞋，",
        "应欺李杜久为尘。",
        "南荒不死中华老，",
        "别玉翻同西国人。",
        "第二百九十卷"
      ]
    },
    {
      "_id": null,
      "Name": "赠马炼师",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "心嫌碧落更何从，",
        "月帔花冠冰雪容。",
        "行雨若迷归处路，",
        "近南惟见祝融峰。"
      ]
    },
    {
      "_id": null,
      "Name": "边塞行",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "九原临得水，",
        "双足是重城。",
        "独许为儒老，",
        "相怜从骑行。",
        "细丛榆塞迥，",
        "高点雁山晴。",
        "圣主嗤炎汉，",
        "无心自勒兵。"
      ]
    },
    {
      "_id": null,
      "Name": "边情",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "新种如今屡请和，",
        "玉关边上幸无他。",
        "欲知北海苦辛处，",
        "看取节毛馀几多。"
      ]
    },
    {
      "_id": null,
      "Name": "送别",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "江岸梅花雪不如，",
        "看君驿驭向南徐。",
        "相闻不必因来雁，",
        "云里飞輧落素书。"
      ]
    },
    {
      "_id": null,
      "Name": "送客往荆州",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "巴丘过日又登城，",
        "云水湘东一日平。",
        "若爱春秋繁露学，",
        "正逢元凯镇南荆。"
      ]
    },
    {
      "_id": null,
      "Name": "长安春夜宿开元观",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "霓裳下晚烟，",
        "留客杏花前。",
        "遍问人寰事，",
        "新从洞府天。",
        "长松皆扫月，",
        "老鹤不知年。",
        "为说蓬瀛路，",
        "云涛几处连。"
      ]
    },
    {
      "_id": null,
      "Name": "雨中怨秋",
      "PoetId": "22bf9265aad04a19a610921b934b058f",
      "PoetName": "杨凭",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凭"
      ],
      "Contents": [
        "辞家远客怆秋风，",
        "千里寒云与断蓬。",
        "日暮隔山投古寺，",
        "钟声何处雨濛濛。"
      ]
    }
  ]
}
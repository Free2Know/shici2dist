{
  "_id": "ca5bb4b43d6f4ed2bdaf95caec267d26",
  "Name": "褚亮",
  "Description": "褚亮，字希明，杭州钱塘人。博览，工属文。太宗为秦王时，以亮为王府文学。每从征伐，尝预秘谋。贞观中，累迁散骑常侍，封阳翟县侯。卒谥曰康。诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "乐府杂曲·鼓吹曲辞·临高台",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "高台暂俯临，",
        "飞翼耸轻音。",
        "浮光随日度，",
        "漾影逐波深。",
        "回瞰周平野，",
        "开怀畅远襟。",
        "独此三休上，",
        "还伤千岁心。"
      ]
    },
    {
      "_id": null,
      "Name": "伤始平李少府正己",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "劳息本相循，",
        "悲欢理自均。",
        "谁能免玄夜，",
        "惜尔正青春。",
        "迈德惟家宝，",
        "生才谅国珍。",
        "高文缀翡翠，",
        "茂学掩麒麟。",
        "述作纷无已，",
        "言谈妙入神。",
        "断肠虽累月，",
        "分手未盈旬。",
        "辅嗣俄长往，",
        "颜生即短辰。",
        "声华满昭代，",
        "形影委穷尘。",
        "禅草回中使，",
        "生刍引吊宾。",
        "同游秘府日，",
        "方驾直城闉。",
        "并拜黄图右，",
        "分曹清渭滨。",
        "风期嵇吕好，",
        "存殁范张亲。",
        "虚座怜王述，",
        "遗篇恸景纯。",
        "精灵与毫翰，",
        "千祀寿何人。"
      ]
    },
    {
      "_id": null,
      "Name": "和御史韦大夫喜霁之作",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "晴天度旅雁，",
        "斜影照残虹。",
        "野净馀烟尽，",
        "山明远色同。",
        "沙平寒水落，",
        "叶脆晚枝空。",
        "白简光朝幰，",
        "彤驺出禁中。",
        "息驾游兰坂，",
        "雕文折桂丛。",
        "无因轻羽扇，",
        "徒自仰仁风。"
      ]
    },
    {
      "_id": null,
      "Name": "咏花烛",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "兰径香风满，",
        "梅梁暖日斜。",
        "言是东方骑，",
        "来寻南陌车。",
        "靥星临夜烛，",
        "眉月隐轻纱。",
        "莫言春稍晚，",
        "自有镇开花。"
      ]
    },
    {
      "_id": null,
      "Name": "在陇头哭潘学士",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "陇底嗟长别，",
        "流襟一恸君。",
        "何言幽咽所，",
        "更作死生分。",
        "转蓬飞不息，",
        "悲松断更闻。",
        "谁能驻征马，",
        "回首望孤坟。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和咏日午",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "曦车日亭午，",
        "浮箭未移晖。",
        "日光无落照，",
        "树影正中围。",
        "草萎看稍靡，",
        "叶燥望疑稀。",
        "昼寝惭经笥，",
        "暂解入朝衣。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和望月应魏王教",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "层轩登皎月，",
        "流照满中天。",
        "色共梁珠远，",
        "光随赵璧圆。",
        "落影临秋扇，",
        "虚轮入夜弦。",
        "所欣东馆里，",
        "预奉西园篇。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和禁苑饯别应令",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "大藩初锡瑞，",
        "出牧迩皇京。",
        "暂以绿车重，",
        "言承朱传荣。",
        "舒桃临远骑，",
        "垂柳映京营。",
        "惠化宣千里，",
        "威风动百城。",
        "禁籞芳嘉节，",
        "神襟饯送情。",
        "金笳催别景，",
        "玉琯切离声。",
        "野花开更落，",
        "山鸟哢还惊。",
        "微臣夙多幸，",
        "薄宦奉储明。",
        "钓台惭作赋，",
        "伊水滥闻笙。",
        "怀德良知久，",
        "酬恩识命轻。"
      ]
    },
    {
      "_id": null,
      "Name": "宗庙九德之歌辞",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "皇祖诞庆，",
        "于昭于天。",
        "积德斯远，",
        "茂攸绪先。",
        "维文应历，",
        "神武弘宣。",
        "肇迹□水，",
        "成功坂泉。",
        "道光覆载，",
        "声穆吉先。",
        "式备牺象，",
        "用□牲牷。",
        "礼终九献，",
        "乐展四悬。",
        "神贶景福，",
        "遐哉永年。"
      ]
    },
    {
      "_id": null,
      "Name": "晚别乐记室彦",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "穷途属岁晚，",
        "临水忽分悲。",
        "抱影同为客，",
        "伤情共此时。",
        "雾色侵虚牖，",
        "霜氛冷薄帷。",
        "举袂惨将别，",
        "停怀怅不怡。",
        "风严征雁远，",
        "雪暗去篷迟。",
        "他乡有岐路，",
        "游子欲何之。"
      ]
    },
    {
      "_id": null,
      "Name": "祈谷乐章·雍和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "殷荐乘春，",
        "太坛临曙。",
        "八簋盈和，",
        "六瑚登御。",
        "嘉稷匪歆，",
        "德馨斯饫。",
        "祝嘏无易，",
        "灵心有豫。"
      ]
    },
    {
      "_id": null,
      "Name": "祭方丘乐章·顺和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "万物资以化，",
        "交泰属升平。",
        "易从业惟简，",
        "得一道斯宁。",
        "具仪光玉帛，",
        "送舞变咸英。",
        "黍稷良非贵，",
        "明德信惟馨。"
      ]
    },
    {
      "_id": null,
      "Name": "祭神州乐章·雍和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "泰圻严享，",
        "阴郊展敬。",
        "礼以导神，",
        "乐以和性。",
        "黝牲在列，",
        "黄琮俯映。",
        "九土既平，",
        "万邦贻庆。"
      ]
    },
    {
      "_id": null,
      "Name": "秋雁",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "日暮霜风急，",
        "羽翮转难任。",
        "为有传书意，",
        "翩翩入上林。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得蜀都",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "列宿光参井，",
        "分芒跨梁岷。",
        "沉犀对江浦，",
        "驷马入城闉。",
        "英图多霸迹，",
        "历选有名臣。",
        "连骑簪缨满，",
        "含章词赋新。",
        "得上仙槎路，",
        "无待访严遵。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·凯安",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "昔在炎运终，",
        "中华乱无象。",
        "酆郊赤乌见，",
        "邙山黑云上。",
        "大资下周车，",
        "禁暴开殷网。",
        "幽明同叶赞，",
        "鼎祚齐天壤。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·太和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "穆穆我后，",
        "道应千龄。",
        "登三处大，",
        "得一居贞。",
        "礼惟崇德，",
        "乐以和声。",
        "百神仰止，",
        "天下文明。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·肃和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "闓阳播气，",
        "甄曜垂明。",
        "有赫圜宰，",
        "深仁曲成。",
        "日丽苍璧，",
        "烟开紫营。",
        "聿遵乾享，",
        "式降鸿祯。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·舒和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "叠璧凝影皇坛路，",
        "编珠流彩帝郊前。",
        "已奏黄钟歌大吕，",
        "还符宝历祚昌年。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·豫和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "歌奏毕兮礼献终，",
        "六龙驭兮神将升。",
        "明德感兮非黍稷，",
        "降福简兮祚休征。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·祀圜丘乐章·雍和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "钦惟大帝，",
        "载仰皇穹。",
        "始命田烛，",
        "爰启郊宫。",
        "云门骇听，",
        "雷鼓鸣空。",
        "神其介祀，",
        "景祚斯融。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·郊天旧乐章·豫和",
      "PoetId": "ca5bb4b43d6f4ed2bdaf95caec267d26",
      "PoetName": "褚亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "褚亮"
      ],
      "Contents": [
        "蘋蘩礼著，",
        "黍稷诚微。",
        "音盈凤管，",
        "彩驻龙旗。",
        "洪歆式就，",
        "介福攸归。",
        "送乐有阕，",
        "灵驭遄飞。"
      ]
    }
  ]
}
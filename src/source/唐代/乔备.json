  "Name": "乔备",
  "Description": "乔备，亦知之弟。则天时，预修《三教珠英》。终襄阳令。集六卷，今存诗二首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "出塞",
      "PoetId": "54a7a1f78f214c03947033e8bbbe36a2",
      "PoetName": "乔备",
      "Form": "五律",
      "Tags": [
        "唐代",
        "乔备"
      ],
      "Contents": [
        "沙场三万里，",
        "猛将五千兵。",
        "旌断冰溪戍，",
        "笳吹铁关城。",
        "阴云暮下雪，",
        "寒日昼无晶。",
        "直为怀恩苦，",
        "谁知边塞情。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夜巫山",
      "PoetId": "54a7a1f78f214c03947033e8bbbe36a2",
      "PoetName": "乔备",
      "Form": "五律",
      "Tags": [
        "唐代",
        "乔备"
      ],
      "Contents": [
        "巫峡裴回雨，",
        "阳台淡荡云。",
        "江山空窈窕，",
        "朝暮自纷氲。",
        "萤色寒秋露，",
        "猿啼清夜闻。",
        "谁怜梦魂远，",
        "肠断思纷纷。"
      ]
    },
    {
      "_id": null,
      "Name": "长门怨",
      "PoetId": "54a7a1f78f214c03947033e8bbbe36a2",
      "PoetName": "乔备",
      "Form": "未知",
      "Tags": [
        "唐代",
        "乔备"
      ],
      "Contents": [
        "秋入长门殿，",
        "木落洞房虚。",
        "妾思宵徒静，",
        "君恩日更疏。",
        "坠露清金阁，",
        "流萤点玉除。",
        "还将闺里恨，",
        "遥问马相如。",
        "第八十二卷"
      ]
    }
  ]
}
    {
      "_id": null,
      "Name": "夜渡江",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "五律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "夜渚带浮烟，",
        "苍茫晦远天。",
        "舟轻不觉动，",
        "缆急始知牵。",
        "听草遥寻岸，",
        "闻香暗识莲。",
        "唯看孤帆影，",
        "常似客心悬。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制夏日游石淙山",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "七律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "二室三涂光地险，",
        "均霜揆日处天中。",
        "石泉石镜恒留月，",
        "山鸟山花竞逐风。",
        "周王久谢瑶池赏，",
        "汉主悬惭玉树宫。",
        "别有祥烟伴佳气，",
        "能随轻辇共葱葱。"
      ]
    },
    {
      "_id": null,
      "Name": "故洛阳城侍宴应制",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "五律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "游豫停仙跸，",
        "登临对晚晴。",
        "川凫连倒影，",
        "岩鸟应虚声。",
        "野奏风成曲，",
        "山居云作缨。",
        "今朝丘壑上，",
        "高兴小蓬瀛。"
      ]
    },
    {
      "_id": null,
      "Name": "春日洛阳城侍宴",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "五律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "南山开宝历，",
        "北渚对芳蹊。",
        "的历风梅度，",
        "参差露草低。",
        "尧樽临上席，",
        "舜乐下前溪。",
        "任重由来醉，",
        "乘酣志转迷。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夜望月",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "五律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "明月有馀鉴，",
        "羁人殊未安。",
        "桂含秋树晚，",
        "波入夜池寒。",
        "灼灼云枝净，",
        "光光草露团。",
        "所思迷所在，",
        "长望独长叹。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·享龙池乐章·第一章",
      "PoetId": "0dd3ce109e594cacb5f3781b71bfeabe",
      "PoetName": "姚崇",
      "Form": "七律",
      "Tags": [
        "唐代",
        "姚崇"
      ],
      "Contents": [
        "恭闻帝里生灵沼，",
        "应报明君鼎业新。",
        "既协翠泉光宝命，",
        "还符白水出真人。",
        "此时舜海潜龙跃，",
        "此地尧河带马巡。",
        "独有前池一小雁，",
        "叨承旧惠入天津。"
      ]
    }
  ]

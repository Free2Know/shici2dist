  "Poems": [
    {
      "_id": null,
      "Name": "扈从回銮应制",
      "PoetId": "dcced55399cf4588b65c8908a5c792ef",
      "PoetName": "萧华",
      "Form": "未知",
      "Tags": [
        "唐代",
        "萧华"
      ],
      "Contents": [
        "粤在秦京日，",
        "议乎封禅难。",
        "岂知陶唐主，",
        "道济苍生安。",
        "惟彼烈祖事，",
        "增修实荣观。",
        "声名朝万国，",
        "玉帛礼三坛。",
        "纂圣德重光，",
        "建元功载刊。",
        "仍开旧驰道，",
        "不记昔回銮。",
        "羽卫摇晴日，",
        "弓戈生早寒。",
        "犹思检玉处，",
        "却望白云端。"
      ]
    }
  ]
}
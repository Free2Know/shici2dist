  "Poems": [
    {
      "_id": null,
      "Name": "赵氏北楼",
      "PoetId": "5cce0a4b0d3a4b8bb91656cb8f3a5cd7",
      "PoetName": "陆翱",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陆翱"
      ],
      "Contents": [
        "殷勤赵公子，",
        "良夜竟相留。",
        "朗月生东海，",
        "仙娥在北楼。",
        "酒阑珠露滴，",
        "歌迥石城秋。",
        "本为愁人设，",
        "愁人到晓愁。"
      ]
    },
    {
      "_id": null,
      "Name": "闲居即事",
      "PoetId": "5cce0a4b0d3a4b8bb91656cb8f3a5cd7",
      "PoetName": "陆翱",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陆翱"
      ],
      "Contents": [
        "衰柳迷隋苑，",
        "衡门啼暮鸦。",
        "茅厨烟不动，",
        "书牖日空斜。",
        "悔下东山石，",
        "贫于南阮家。",
        "沈忧损神虑，",
        "萱草自开花。"
      ]
    }
  ]
}
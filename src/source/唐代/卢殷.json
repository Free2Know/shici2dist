{
  "_id": "53d9fadf8f0b4a009c91ca0de5ea56d1",
  "Name": "卢殷",
  "Description": "宋时避讳，改作隐。范阳人，为登封尉。诗十三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "七夕",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "河耿月凉时，",
        "牵牛织女期。",
        "欢娱方在此，",
        "漏刻竟由谁。",
        "定不嫌秋驶，",
        "唯当乞夜迟。",
        "全胜客子妇，",
        "十载泣生离。"
      ]
    },
    {
      "_id": null,
      "Name": "仲夏寄江南",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "五月行将近，",
        "三年客未回。",
        "梦成千里去，",
        "酒醒百忧来。",
        "晚暮时看槿，",
        "悲酸不食梅。",
        "空将白团扇，",
        "从寄复裴回。"
      ]
    },
    {
      "_id": null,
      "Name": "堋口逢友人",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "艰难别离久，",
        "中外往还深。",
        "已改当时法，",
        "空余旧日心。"
      ]
    },
    {
      "_id": null,
      "Name": "妾换马",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "伴凤楼中妾，",
        "如龙枥上宛。",
        "同年辞旧宠，",
        "异地受新恩。",
        "香阁更衣处，",
        "尘蒙喷草痕。",
        "连嘶将忍泪，",
        "俱恋主人门。"
      ]
    },
    {
      "_id": null,
      "Name": "悲秋",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "秋空雁度青天远，",
        "疏树蝉嘶白露寒。",
        "阶下败兰犹有气，",
        "手中团扇渐无端。"
      ]
    },
    {
      "_id": null,
      "Name": "晚蝉",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "深藏高柳背斜晖，",
        "能轸孤愁减昔围。",
        "犹畏旅人头不白，",
        "再三移树带声飞。"
      ]
    },
    {
      "_id": null,
      "Name": "月夜",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "露下凉生簟，",
        "无人月满庭。",
        "难闻逆河浪，",
        "徒望白榆星。",
        "树绕孤栖鹊，",
        "窗飞就暗萤。",
        "移时宿兰影，",
        "思共习芳馨。"
      ]
    },
    {
      "_id": null,
      "Name": "欲销云",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "欲隐从龙质，",
        "仍余触石文。",
        "霏微依碧落，",
        "仿佛误非云。",
        "度月光无隔，",
        "倾河影不分。",
        "如逢作霖处，",
        "当为起氤氲。"
      ]
    },
    {
      "_id": null,
      "Name": "移住别居",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "自到西川住，",
        "唯君别有情。",
        "常逢对门远，",
        "又隔一重城。"
      ]
    },
    {
      "_id": null,
      "Name": "维扬郡西亭赠友人",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "萍飒风池香满船，",
        "杨花漠漠暮春天。",
        "玉人此日心中事，",
        "何似乘羊入市年。"
      ]
    },
    {
      "_id": null,
      "Name": "遇边使",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "累年无的信，",
        "每夜梦边城。",
        "袖掩千行泪，",
        "书封一尺情。"
      ]
    },
    {
      "_id": null,
      "Name": "长安亲故",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "楚兰不佩佩吴钩，",
        "带酒城头别旧游。",
        "年事已多筋力在，",
        "试将弓箭到并州。"
      ]
    },
    {
      "_id": null,
      "Name": "雨霁登北岸寄友人",
      "PoetId": "53d9fadf8f0b4a009c91ca0de5ea56d1",
      "PoetName": "卢殷",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "卢殷"
      ],
      "Contents": [
        "稻黄扑扑黍油油，",
        "野树连山涧自流。",
        "忆得年时冯翊部，",
        "谢郎相引上楼头。"
      ]
    }
  ]
}
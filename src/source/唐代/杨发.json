{
  "_id": "01af0dfced79467bb01a4c6d01802d18",
  "Name": "杨发",
  "Description": "杨发，字至之，冯翊人。以父遗直客苏州，因家焉。登太和四年进士第，历太常少卿，出为苏州刺史，即其乡里也。后为岭南节度使，以严为治。军乱，贬婺州刺史。诗十三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "与诸公池上待月",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "树密云萦岸，",
        "池遥水际空。",
        "芰开方吐镜，",
        "蘋动欲含风。",
        "渐映沙汀白，",
        "微分渚叶红。",
        "金波宜共赏，",
        "仙棹一宵同。"
      ]
    },
    {
      "_id": null,
      "Name": "东斋夜宴酬绍之起居见赠",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "龙门八上不知津，",
        "唯有君心困益亲。",
        "白社追游名自远，",
        "青袍相映道逾新。",
        "十年江海鱼缄尽，",
        "一夜笙歌凤吹频。",
        "渐老旧交情更重，",
        "莫将美酒负良辰。"
      ]
    },
    {
      "_id": null,
      "Name": "南溪书院",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "茅屋住来久，",
        "山深不置门。",
        "草生垂井口，",
        "花发接篱根。",
        "入院将雏鸟，",
        "攀萝抱子猿。",
        "曾逢异人说，",
        "风景似桃源。"
      ]
    },
    {
      "_id": null,
      "Name": "宿黄花馆",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "孤馆萧条槐叶稀，",
        "暮蝉声隔水声微。",
        "年年为客路无尽，",
        "日日送人身未归。",
        "何处迷鸿离浦月，",
        "谁家愁妇捣霜衣。",
        "夜深不卧帘犹卷，",
        "数点残萤入户飞。"
      ]
    },
    {
      "_id": null,
      "Name": "小园秋兴",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "谁言帝城里，",
        "独作野人居。",
        "石磴晴看叠，",
        "山苗晚自锄。",
        "相惭五秉粟，",
        "尚癖一车书。",
        "昔日扬雄宅，",
        "还无卿相舆。"
      ]
    },
    {
      "_id": null,
      "Name": "山泉",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "半空飞下水，",
        "势去响如雷。",
        "静彻啼猿寺，",
        "高陵坐客台。",
        "耳同经剑阁，",
        "身若到天台。",
        "溅树吹成冻，",
        "邻祠触作灰。",
        "深中试榔栗，",
        "浅处落莓苔。",
        "半夜重城闭，",
        "潺湲枕底来。"
      ]
    },
    {
      "_id": null,
      "Name": "春园醉醒闲卧小斋",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "酣醉送馀春，",
        "醒来恨更频。",
        "花残蜂蠹物，",
        "叶暗鸟欺人。",
        "帘闭高眠贵，",
        "斋空浩气新。",
        "从今北窗蝶，",
        "长是梦中身。"
      ]
    },
    {
      "_id": null,
      "Name": "檐雀",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "弱羽怯孤飞，",
        "投檐幸所依。",
        "衔环唯报德，",
        "贺厦本知归。",
        "红觜休争顾，",
        "丹心自识机。",
        "从来攀凤足，",
        "生死恋光辉。"
      ]
    },
    {
      "_id": null,
      "Name": "残花",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "已笑良时晚，",
        "仍悲别酒催。",
        "暖芳随日薄，",
        "残片逐风回。",
        "黛敛愁歌扇，",
        "妆残泣镜台。",
        "繁阴莫矜衒，",
        "终是共尘埃。"
      ]
    },
    {
      "_id": null,
      "Name": "玩残花",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "十日浓芳一岁程，",
        "东风初急眼偏明。",
        "低枝似泥幽人醉，",
        "莫道无情似有情。"
      ]
    },
    {
      "_id": null,
      "Name": "秋晚日少陵原游山泉之什",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "喧浊侵肌性未沈，",
        "每来云外恣幽寻。",
        "尘衣更喜秋泉洁，",
        "倦迹方依竹洞深。",
        "暂过偶然应系分，",
        "有期终去但劳心。",
        "唯怜一夜空山月，",
        "似许他年伴独吟。"
      ]
    },
    {
      "_id": null,
      "Name": "秋晴独立南亭",
      "PoetId": "01af0dfced79467bb01a4c6d01802d18",
      "PoetName": "杨发",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨发"
      ],
      "Contents": [
        "昼对南风独闭关，",
        "暗期幽鸟去仍还。",
        "如今有待终身贵，",
        "未若忘机尽日闲。",
        "心似蒙庄游物外，",
        "官惭许掾在人间。",
        "开襟自向清风笑，",
        "无限秋光为解颜。"
      ]
    }
  ]
}
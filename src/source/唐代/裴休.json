  "Poems": [
    {
      "_id": null,
      "Name": "赠黄蘖山僧希运",
      "PoetId": "ad83fa902f9a41adb5ff5d80180e2f17",
      "PoetName": "裴休",
      "Form": "七律",
      "Tags": [
        "唐代",
        "裴休"
      ],
      "Contents": [
        "曾传达士心中印，",
        "额有圆珠七尺身。",
        "挂锡十年栖蜀水，",
        "浮杯今日渡漳滨。",
        "一千龙象随高步，",
        "万里香华结胜因。",
        "拟欲事师为弟子，",
        "不知将法付何人。"
      ]
    },
    {
      "_id": null,
      "Name": "题泐潭",
      "PoetId": "ad83fa902f9a41adb5ff5d80180e2f17",
      "PoetName": "裴休",
      "Form": "五律",
      "Tags": [
        "唐代",
        "裴休"
      ],
      "Contents": [
        "泐潭形胜地，",
        "祖塔在云湄。",
        "浩劫有穷日，",
        "真风无坠时。",
        "岁华空自老，",
        "消息竟谁知。",
        "到此轻尘虑，",
        "功名自可遗。"
      ]
    }
  ]
}
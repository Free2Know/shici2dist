  "Poems": [
    {
      "_id": null,
      "Name": "春风扇微和",
      "PoetId": "8d29a334345a4e52a220fa17ceeb4d21",
      "PoetName": "张汇",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张汇"
      ],
      "Contents": [
        "木德生和气，",
        "微微入曙风。",
        "暗催南向叶，",
        "渐翥北归鸿。",
        "澹荡侵冰谷，",
        "悠扬转蕙丛。",
        "拂尘回广路，",
        "泛籁过遥空。",
        "暖上烟光际，",
        "云移律候中。",
        "扶摇如可借，",
        "从此戾苍穹。"
      ]
    },
    {
      "_id": null,
      "Name": "观藏冰",
      "PoetId": "8d29a334345a4e52a220fa17ceeb4d21",
      "PoetName": "张汇",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张汇"
      ],
      "Contents": [
        "寒气方穷律，",
        "阴精正结冰。",
        "体坚风带壮，",
        "影素月临凝。",
        "冬赋凌人掌，",
        "春期命妇升。",
        "凿来壶色彻，",
        "纳处镜光澄。",
        "鲁史曾留问，",
        "豳诗旧见称。",
        "同观里射享，",
        "王道颂还兴。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "早发湘潭寄杜员外院长",
      "PoetId": "ff355beae54d40148bb1c9bae2e03f86",
      "PoetName": "韦迢",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦迢"
      ],
      "Contents": [
        "北风昨夜雨，",
        "江上早来凉。",
        "楚岫千峰翠，",
        "湘潭一叶黄。",
        "故人湖外客，",
        "白首尚为郎。",
        "相忆无南雁，",
        "何时有报章。"
      ]
    },
    {
      "_id": null,
      "Name": "潭州留别杜员外院长",
      "PoetId": "ff355beae54d40148bb1c9bae2e03f86",
      "PoetName": "韦迢",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦迢"
      ],
      "Contents": [
        "江畔长沙驿，",
        "相逢缆客船。",
        "大名诗独步，",
        "小郡海西偏。",
        "地湿愁飞鵩，",
        "天炎畏跕鸢。",
        "去留俱失意，",
        "把臂共潸然。"
      ]
    }
  ]
}
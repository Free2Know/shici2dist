  "Poems": [
    {
      "_id": null,
      "Name": "临风舒锦",
      "PoetId": "3320da5b4c4041baacdf7f0ee50823b4",
      "PoetName": "萧昕",
      "Form": "未知",
      "Tags": [
        "唐代",
        "萧昕"
      ],
      "Contents": [
        "丽锦匹云终，",
        "襜襜展向风。",
        "花开翻覆翠，",
        "色乱动摇红。",
        "缕散悠扬里，",
        "文回照灼中。",
        "低垂疑步障，",
        "吹起作晴虹。",
        "既与丘迟梦，",
        "深知卓氏功。",
        "还乡将制服，",
        "从此表亨通。"
      ]
    },
    {
      "_id": null,
      "Name": "洛出书",
      "PoetId": "3320da5b4c4041baacdf7f0ee50823b4",
      "PoetName": "萧昕",
      "Form": "未知",
      "Tags": [
        "唐代",
        "萧昕"
      ],
      "Contents": [
        "海内昔凋瘵，",
        "天网斯浡潏。",
        "龟灵启圣图，",
        "龙马负书出。",
        "大哉明德盛，",
        "远矣彝伦秩。",
        "地敷作乂功，",
        "人免为鱼恤。",
        "既彰千国理，",
        "岂止百川溢。",
        "永赖至于今，",
        "畴庸未云毕。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "和绵州于中丞登越王楼作二首",
      "PoetId": "0a9df0464dd341b184637d5c13c009f6",
      "PoetName": "于瑰",
      "Form": "未知",
      "Tags": [
        "唐代",
        "于瑰"
      ],
      "Contents": [
        "楼因藩邸号，",
        "川势似依楼。",
        "显敞含清暑，",
        "岚光入素秋。",
        "山宜姑射貌，",
        "江泛李膺舟。",
        "郢曲思朋执，",
        "轻纱画胜游。",
        "极目郡城楼，",
        "浮云拂槛愁。",
        "政成多暇日，",
        "诗思动先秋。",
        "远霁千岩雪，",
        "随波一叶舟。",
        "昔曾窥粉绘，",
        "今愿许陪游。"
      ]
    }
  ]
}
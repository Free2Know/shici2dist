{
  "_id": "35b34a1576d84dc9b84d2e905874598e",
  "Name": "张登",
  "Description": "张登，南阳人。江南士掾满岁，计相表为殿中侍御史，董赋江南，俄拜漳州刺史。集六卷，今存诗七首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "上巳泛舟得迟字",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "令节推元巳，",
        "天涯喜有期。",
        "初筵临泛地，",
        "旧俗祓禳时。",
        "枉渚潮新上，",
        "残春日正迟。",
        "竹枝游女曲，",
        "桃叶渡江词。",
        "风鹢今方退，",
        "沙鸥亦未疑。",
        "且同山简醉，",
        "倒载莫褰帷。"
      ]
    },
    {
      "_id": null,
      "Name": "仲秋夜郡内西亭对月",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "天高月满影悠悠，",
        "一夜炎荒并觉秋。",
        "气与露清凝众草，",
        "色如霜白怯轻裘。",
        "高临华宇还知隙，",
        "静映长江不共流。",
        "□直西倾河汉曙，",
        "遗风犹想武昌楼。"
      ]
    },
    {
      "_id": null,
      "Name": "冬至夜郡斋宴别前华阴卢主簿",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "虎宿方冬至，",
        "鸡人积夜筹。",
        "相逢一尊酒，",
        "共结两乡愁。",
        "王俭花为府，",
        "卢谌幄内璆。",
        "明朝更临水，",
        "怅望岭南流。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "孤高齐帝石，",
        "萧洒晋亭峰。",
        "境旷穷山外，",
        "城标涨海头。"
      ]
    },
    {
      "_id": null,
      "Name": "小雪日戏题绝句",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "甲子徒推小雪天，",
        "刺梧犹绿槿花然。",
        "融和长养无时歇，",
        "却是炎洲雨露偏。"
      ]
    },
    {
      "_id": null,
      "Name": "招客游寺",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "江城吏散卷春阴，",
        "山寺鸣钟隔雨深。",
        "招取遗民赴僧社，",
        "竹堂分坐静看心。"
      ]
    },
    {
      "_id": null,
      "Name": "送王主簿游南海",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "平生推久要，",
        "留滞共三年。",
        "明日东南路，",
        "穷荒雾露天。",
        "旷怀常寄酒，",
        "素业不言钱。",
        "道在贫非病，",
        "时来丑亦妍。",
        "过山乘蜡屐，",
        "涉海附楼船。",
        "行矣无为恨，",
        "宗门有大贤。"
      ]
    },
    {
      "_id": null,
      "Name": "重阳宴集同用寒字",
      "PoetId": "35b34a1576d84dc9b84d2e905874598e",
      "PoetName": "张登",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张登"
      ],
      "Contents": [
        "锡宴逢佳节，",
        "穷荒亦共欢。",
        "恩深百日泽，",
        "雨借九秋寒。",
        "望气人谣洽，",
        "临风客以难。",
        "座移山色在，",
        "杯尽菊香残。",
        "欲识投醪遍，",
        "应从落帽看。",
        "还宵须命烛，",
        "举首谢三官。"
      ]
    }
  ]
}
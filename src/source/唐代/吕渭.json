  "Poems": [
    {
      "_id": null,
      "Name": "状江南·仲冬",
      "PoetId": "9f820e0f7f424fd7a1ed9f770d5ac27c",
      "PoetName": "吕渭",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "吕渭"
      ],
      "Contents": [
        "江南仲冬天，",
        "紫蔗节如鞭。",
        "海将盐作雪，",
        "出用火耕田。"
      ]
    },
    {
      "_id": null,
      "Name": "皇帝移晦日为中和节",
      "PoetId": "9f820e0f7f424fd7a1ed9f770d5ac27c",
      "PoetName": "吕渭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "吕渭"
      ],
      "Contents": [
        "皇心不向晦，",
        "改节号中和。",
        "淑气同风景，",
        "喜名别咏歌。",
        "湔裙移旧俗，",
        "赐尺下新科。",
        "历象千年正，",
        "酺醵四海多。",
        "花随春令发，",
        "鸿度岁阳过。",
        "天地齐休庆，",
        "欢声欲荡波。"
      ]
    },
    {
      "_id": null,
      "Name": "经湛长史草堂",
      "PoetId": "9f820e0f7f424fd7a1ed9f770d5ac27c",
      "PoetName": "吕渭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "吕渭"
      ],
      "Contents": [
        "岩居旧风景，",
        "人世今成昔。",
        "木落古山空，",
        "猿啼秋月白。",
        "谁同西府僚，",
        "几谢南平客。",
        "摧残松桂老，",
        "萧散烟云夕。",
        "迹留异代远，",
        "境入空门寂。",
        "惟有草堂僧，",
        "陈诗在石壁。"
      ]
    }
  ]
}
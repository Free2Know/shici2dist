{
  "_id": "4944c2230ef046aabd1a12142acbafe9",
  "Name": "灵一",
  "Description": "灵一，姓吴氏，广陵人，居馀杭宜丰寺。禅诵之暇，辄赋诗歌，与朱放、张继、皇甫曾诸人为尘外友。诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "与元居士青山潭饮茶",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "野泉烟火白云间，",
        "坐饮香茶爱此山。",
        "岩下维舟不忍去，",
        "青溪流水暮潺潺。"
      ]
    },
    {
      "_id": null,
      "Name": "于潜道中呈元八处士",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "苕水滩行浅，",
        "潜州路渐深。",
        "参差远岫色，",
        "迢递野人心。",
        "冻涧冰难释，",
        "秋山日易阴。",
        "不知天目下，",
        "何处是云林。"
      ]
    },
    {
      "_id": null,
      "Name": "再还宜丰寺",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "再寻招隐地，",
        "重会息心期。",
        "樵客问归日，",
        "山僧记别时。",
        "野云阴远甸，",
        "秋雨涨前陂。",
        "勿谓探形胜，",
        "吾今不好奇。"
      ]
    },
    {
      "_id": null,
      "Name": "同使君宿大梁驿",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "旌旗江上出，",
        "花外卷帘空。",
        "夜色临城月，",
        "春寒度水风。",
        "虽然行李别，",
        "且喜语音同。",
        "若问匡庐事，",
        "终身愧远公。"
      ]
    },
    {
      "_id": null,
      "Name": "哭卫尚书",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "画戟重门楚水阴，",
        "天涯欲暮共伤心。",
        "南荆双戟痕犹在，",
        "北斗孤魂望已深。",
        "莲花幕下悲风起，",
        "细柳营边晓月临。",
        "有路茫茫向谁问，",
        "感君空有泪沾襟。"
      ]
    },
    {
      "_id": null,
      "Name": "妙乐观",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "王乔所居空山观，",
        "白云至今凝不散。",
        "坛场月路几千年，",
        "往往吹笙下天半。",
        "瀑布西行过石桥，",
        "黄精采根还采苗。",
        "忽见一人檠茶碗，",
        "篸花昨夜风吹满。",
        "自言家处在东坡，",
        "白犬相随邀我过。",
        "松间石上有棋局，",
        "能使樵人烂斧柯。"
      ]
    },
    {
      "_id": null,
      "Name": "安公",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "弥天称圣哲，",
        "象法初繄赖。",
        "弘道识行藏，",
        "匡时知进退。",
        "秦王轻与举，",
        "习生重酬对。",
        "学文古篆中，",
        "义显心经内。",
        "法服应华夏，",
        "金言流海岱。",
        "西方浮云间，",
        "更陪龙华会。"
      ]
    },
    {
      "_id": null,
      "Name": "宜丰新泉",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "泉源新涌出，",
        "洞澈映纤云。",
        "稍落芙蓉沼，",
        "初淹苔藓文。",
        "素将空意合，",
        "净与众流分。",
        "每到清宵月，",
        "泠泠梦里闻。"
      ]
    },
    {
      "_id": null,
      "Name": "宿天柱观",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "石室初投宿，",
        "仙翁喜暂容。",
        "花源隔水见，",
        "洞府过山逢。",
        "泉涌阶前地，",
        "云生户外峰。",
        "中宵自入定，",
        "非是欲降龙。"
      ]
    },
    {
      "_id": null,
      "Name": "宿静林寺",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "山寺门前多古松，",
        "溪行欲到已闻钟。",
        "中宵引领寻高顶，",
        "月照云峰凡几重。"
      ]
    },
    {
      "_id": null,
      "Name": "将出宜丰寺留题山房",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "池上莲荷不自开，",
        "山中流水偶然来。",
        "若言聚散定由我，",
        "未是回时那得回。"
      ]
    },
    {
      "_id": null,
      "Name": "归岑山过惟审上人别业",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "禅客无心忆薜萝，",
        "自然行径向山多。",
        "知君欲问人间事，",
        "始与浮云共一过。"
      ]
    },
    {
      "_id": null,
      "Name": "春日山斋",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "野径东风起，",
        "山扉度日开。",
        "晴光拆红萼，",
        "流水长青苔。",
        "逋客殊未去，",
        "芳时已再来。",
        "非关恋春草，",
        "自是欲裴回。"
      ]
    },
    {
      "_id": null,
      "Name": "林公",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "支公信高逸，",
        "久向山林住。",
        "时将孙许游，",
        "岂以形骸遇。",
        "幸辞天子诏，",
        "复览名臣疏。",
        "西晋尚虚无，",
        "南朝久沦误。",
        "因谈老庄意，",
        "乃尽逍遥趣。",
        "谁为竹林贤，",
        "风流相比附。"
      ]
    },
    {
      "_id": null,
      "Name": "栖霞山夜坐",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "山头戒坛路，",
        "幽映雪岩侧。",
        "四面青石床，",
        "一峰苔藓色。",
        "松风静复起，",
        "月影开还黑。",
        "何独乘夜来，",
        "殊非昼所得。"
      ]
    },
    {
      "_id": null,
      "Name": "江行寄张舍人",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "客程终日风尘苦，",
        "蓬转还家未有期。",
        "林色晓分残雪后，",
        "角声寒奏落帆时。",
        "月高星使东看远，",
        "云破霜鸿北度迟。",
        "流荡此心难共说，",
        "千峰澄霁隔琼枝。"
      ]
    },
    {
      "_id": null,
      "Name": "溪行即事",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "近夜山更碧，",
        "入林溪转清。",
        "不知伏牛事，",
        "潭洞何从横。",
        "野岸烟初合，",
        "平湖月未生。",
        "孤舟屡失道，",
        "但听秋泉声。"
      ]
    },
    {
      "_id": null,
      "Name": "留别忠州故人",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "一身无定处，",
        "万里独销魂。",
        "芳草迷归路，",
        "春流滴泪痕。",
        "几时休旅食，",
        "何夜宿江村。",
        "欲识相思苦，",
        "空山啼暮猿。"
      ]
    },
    {
      "_id": null,
      "Name": "秋题刘逸人林泉",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "凉飙乱黄叶，",
        "迟客橘阴清。",
        "萝径封行迹，",
        "云门闭野情。",
        "零林秋露响，",
        "穿竹暮烟轻。",
        "莫恋幽栖地，",
        "怀安却败名。"
      ]
    },
    {
      "_id": null,
      "Name": "自大林与韩明府归郭中精舍",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "野客同舟楫，",
        "相携复一归。",
        "孤烟生暮景，",
        "远岫带春晖。",
        "不道还山是，",
        "谁云向郭非。",
        "禅门有通隐，",
        "喧寂共忘机。"
      ]
    },
    {
      "_id": null,
      "Name": "赠别皇甫曾",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "幽人从远岳，",
        "过客爱春山。",
        "高驾能相送，",
        "孤游且未还。",
        "紫苔封井石，",
        "绿竹掩柴关。",
        "若到云峰外，",
        "齐心去住间。"
      ]
    },
    {
      "_id": null,
      "Name": "赠灵澈禅师",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "禅师来往翠微间，",
        "万里千峰到剡山。",
        "何时共到天台里，",
        "身与浮云处处闲。"
      ]
    },
    {
      "_id": null,
      "Name": "远公",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "远公逢道安，",
        "一朝弃儒服。",
        "真机久消歇，",
        "世教空拘束。",
        "誓入罗浮中，",
        "遂栖庐山曲。",
        "禅经初纂定，",
        "佛语新名目。",
        "钵帽绝朝宗，",
        "簪裾翻拜伏。",
        "东林多隐士，",
        "为我辞荣禄。"
      ]
    },
    {
      "_id": null,
      "Name": "送人得荡子归倡妇",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "垂涕凭回信，",
        "为语柳园人。",
        "情知独难守，",
        "又是一阳春。"
      ]
    },
    {
      "_id": null,
      "Name": "送冽寺主之京迎禅和尚",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "禅门居此地，",
        "瞻望在虚空。",
        "水国月未上，",
        "苍生如梦中。",
        "上人知机士，",
        "瓶锡慰樊笼。",
        "彼土诸梵众，",
        "嗟君扬道风。"
      ]
    },
    {
      "_id": null,
      "Name": "送别",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "凭高莫送远，",
        "看欲断归心。",
        "别恨啼猿苦，",
        "相思流水深。",
        "翠云南涧影，",
        "丹桂晚山阴。",
        "若未来双鹄，",
        "辽城何更寻。"
      ]
    },
    {
      "_id": null,
      "Name": "送明素上人归楚觐省",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "能将疏懒背时人，",
        "不厌孤萍任此身。",
        "江上昔年同出处，",
        "天涯今日共风尘。",
        "平湖旧隐应残雪，",
        "芳草归心未隔春。",
        "前路倍怜多胜事，",
        "到家知庆彩衣新。"
      ]
    },
    {
      "_id": null,
      "Name": "送朱放",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "苦见人间世，",
        "思归洞里天。",
        "纵令山鸟语，",
        "不废野人眠。"
      ]
    },
    {
      "_id": null,
      "Name": "送殷判官归上都",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "漾舟云路客，",
        "来过夕阳时。",
        "向背堪遗恨，",
        "逢迎宿未期。",
        "水容愁暮急，",
        "花影动春迟。",
        "别后王孙草，",
        "青青入梦思。"
      ]
    },
    {
      "_id": null,
      "Name": "送王法师之西川",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "旅游无近远，",
        "要自别魂销。",
        "官柳乡愁乱，",
        "春山客路遥。",
        "伴行芳草远，",
        "缘兴野花飘。",
        "计日功成后，",
        "还将辅圣朝。"
      ]
    },
    {
      "_id": null,
      "Name": "送王颖悟归左绵",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "七律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "客意天南兴已阑，",
        "不堪言别向仙官。",
        "梦摇玉珮随旄节，",
        "心到金华忆杏坛。",
        "荒郊极望归云尽，",
        "瘦马空嘶落日残。",
        "想得故山青霭里，",
        "泉声入夜独潺潺。"
      ]
    },
    {
      "_id": null,
      "Name": "送范律师往果州",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "终南千古后，",
        "独尔继卿名。",
        "离障非今日，",
        "修因是几生。",
        "乱峰寒影暮，",
        "深涧野流清。",
        "远客归心苦，",
        "难为此别情。"
      ]
    },
    {
      "_id": null,
      "Name": "送陈允初卜居麻园",
      "PoetId": "4944c2230ef046aabd1a12142acbafe9",
      "PoetName": "灵一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵一"
      ],
      "Contents": [
        "欲向麻源隐，",
        "能寻谢客踪。",
        "空山几千里，",
        "幽谷第三重。",
        "茅宇宁须葺，",
        "荷衣不待缝。",
        "因君见往事，",
        "为我谢乔松。"
      ]

  "_id": "075e35618e694ce587f3c92b6a2d1d3d",
  "Name": "李琪",
  "Description": "字台秀，敦煌人。昭宗时举进士，累官殿中侍御史。入梁，为翰林学士。末帝时，拜门下平章事。唐明宗朝，位至太子少傅。集十卷，今存诗二首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "奉试诏用拓拔思恭为京北收复都统一……",
      "PoetId": "075e35618e694ce587f3c92b6a2d1d3d",
      "PoetName": "李琪",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李琪"
      ],
      "Contents": [
        "飞骑经巴栈，",
        "鸿恩及夏台。",
        "将从天上去，",
        "人自日边来。",
        "此处金门远，",
        "何时玉辇回。",
        "早平关右贼，",
        "莫待诏书催。"
      ]
    },
    {
      "_id": null,
      "Name": "题广爱寺楞伽山",
      "PoetId": "075e35618e694ce587f3c92b6a2d1d3d",
      "PoetName": "李琪",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李琪"
      ],
      "Contents": [
        "善高天外远，",
        "方丈海中遥。",
        "自有山神护，",
        "应无劫火烧。",
        "坏文侵古壁，",
        "飞剑出寒霄。",
        "何似苍苍色，",
        "严妆十七朝。"
      ]
    }
  ]
}
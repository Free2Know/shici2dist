  "_id": "8d7d62bc6fef4fca81d744b6e5062988",
  "Name": "汤悦",
  "Description": "汤悦，陈州西华人。本姓殷，文圭之子。仕南唐，官学士，历枢密使、右仆射。元宗时，淮上用兵，书檄教诰皆出其手。诗五首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "再次前韵代梅答",
      "PoetId": "8d7d62bc6fef4fca81d744b6e5062988",
      "PoetName": "汤悦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "汤悦"
      ],
      "Contents": [
        "托植经多稔，",
        "顷筐向盛时。",
        "枝条虽已故，",
        "情分不曾移。",
        "莫向阶前老，",
        "还同镜里衰。",
        "更应怜堕叶，",
        "残吹挂虫丝。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制送邓王牧宣城",
      "PoetId": "8d7d62bc6fef4fca81d744b6e5062988",
      "PoetName": "汤悦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "汤悦"
      ],
      "Contents": [
        "千里陵阳同陕服，",
        "凿门胙土寄亲贤。",
        "曙烟已别黄金殿，",
        "晚照重登白玉筵。",
        "江上浮光宜雨后，",
        "郡中远岫列窗前。",
        "天心待报期年政，",
        "留与工师播管弦。"
      ]
    },
    {
      "_id": null,
      "Name": "鼎臣学士侍郎、楚金舍人学士以再伤……",
      "PoetId": "8d7d62bc6fef4fca81d744b6e5062988",
      "PoetName": "汤悦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "汤悦"
      ],
      "Contents": [
        "人物同迁谢，",
        "重成念旧悲。",
        "连华得琼玖，",
        "合奏发埙篪。",
        "余枿虽无取，",
        "残芳尚获知。",
        "问君何所似，",
        "珍重杜秋诗。"
      ]
    },
    {
      "_id": null,
      "Name": "鼎臣学士侍郎以东馆庭梅昔翰苑之毫……",
      "PoetId": "8d7d62bc6fef4fca81d744b6e5062988",
      "PoetName": "汤悦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "汤悦"
      ],
      "Contents": [
        "忆见萌芽日，",
        "还怜合抱时。",
        "旧欢如梦想，",
        "物态暗还移。",
        "素艳今无几，",
        "朱颜亦自衰。",
        "树将人共老，",
        "何暇更悲丝。"
      ]
    }
  ]
}
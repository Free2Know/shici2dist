      "_id": null,
      "Name": "寄禅月大师",
      "PoetId": "3e87e92eebf04552be31cfc01cfab617",
      "PoetName": "周庠",
      "Form": "七律",
      "Tags": [
        "唐代",
        "周庠"
      ],
      "Contents": [
        "昨日尘游到几家，",
        "就中偏省近宣麻。",
        "水田铺座时移画，",
        "金地谭空说尽沙。",
        "傍竹欲添犀浦石，",
        "栽松更碾味江茶。",
        "有时捻得休公卷，",
        "倚柱闲吟见落霞。"
      ]
    }
  ]

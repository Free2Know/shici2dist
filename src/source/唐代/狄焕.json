  "_id": "43758dfbd3934d41b6ab8d1b4eeba0bd",
  "Name": "狄焕",
  "Description": "狄焕，字子炎，梁公仁杰之后，隐于南岳。诗三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "句",
      "PoetId": "43758dfbd3934d41b6ab8d1b4eeba0bd",
      "PoetName": "狄焕",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "狄焕"
      ],
      "Contents": [
        "数点当秋霁，",
        "不知何处峰。",
        "更无声接续，",
        "空有影相随。"
      ]
    },
    {
      "_id": null,
      "Name": "咏南岳径松",
      "PoetId": "43758dfbd3934d41b6ab8d1b4eeba0bd",
      "PoetName": "狄焕",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "狄焕"
      ],
      "Contents": [
        "一阵雨声归岳峤，",
        "两条寒色下潇湘。",
        "客吟晚景停孤棹，",
        "僧踏清阴彻上方。"
      ]
    },
    {
      "_id": null,
      "Name": "送人游邵州",
      "PoetId": "43758dfbd3934d41b6ab8d1b4eeba0bd",
      "PoetName": "狄焕",
      "Form": "五律",
      "Tags": [
        "唐代",
        "狄焕"
      ],
      "Contents": [
        "春江正渺渺，",
        "送别两依依。",
        "烟里棹将远，",
        "渡头人未归。",
        "渔家侵叠浪，",
        "岛树挂残晖。",
        "况入湖湘路，",
        "那堪花乱飞。"
      ]
    },
    {
      "_id": null,
      "Name": "题柳",
      "PoetId": "43758dfbd3934d41b6ab8d1b4eeba0bd",
      "PoetName": "狄焕",
      "Form": "五律",
      "Tags": [
        "唐代",
        "狄焕"
      ],
      "Contents": [
        "天南与天北，",
        "此处影婆娑。",
        "翠色折不尽，",
        "离情生更多。",
        "雨余笼灞岸，",
        "烟暝夹隋河。",
        "自有佳名在，",
        "秦松继得么。"
      ]
    }
  ]
}
  "Description": "",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "三生石",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "圣迹谁会得，",
        "每到亦徘徊。",
        "一尚不可得，",
        "三从何处来。",
        "清宵寒露滴，",
        "白昼野云隈。",
        "应是表灵异，",
        "凡情安可猜。"
      ]
    },
    {
      "_id": null,
      "Name": "东林寺",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "欲去不忍去，",
        "徘徊吟绕廊。",
        "水光秋澹荡，",
        "僧好语寻常。",
        "碑古苔文叠，",
        "山晴钟韵长。",
        "翻思南岳上，",
        "欠此白莲香。"
      ]
    },
    {
      "_id": null,
      "Name": "僧院泉",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "澄澈照人胆，",
        "深山只一般。",
        "来难穷处所，",
        "心去助波澜。",
        "砌曲夜声苦，",
        "窗虚客梦阑。",
        "无心谁肯爱，",
        "时有老僧看。"
      ]
    },
    {
      "_id": null,
      "Name": "卖松者",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "求利有何限，",
        "将松入市来。",
        "直饶人买去，",
        "也向柳边栽。",
        "细叶犹粘雪，",
        "孤根尚惹苔。",
        "知君用心错，",
        "举世重花开。"
      ]
    },
    {
      "_id": null,
      "Name": "喜僧友到",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "十年消息断，",
        "空使梦烟萝。",
        "嵩岳几时下，",
        "洞庭何日过。",
        "瓶干离涧久，",
        "衲坏卧云多。",
        "意欲相留住，",
        "游方肯舍么。"
      ]
    },
    {
      "_id": null,
      "Name": "宿岳阳开元寺",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "竟夕凭虚槛，",
        "何当兴叹频。",
        "往来人自老，",
        "今古月常新。",
        "风逆沈鱼唱，",
        "松疏露鹤身。",
        "无眠钟又动，",
        "几客在迷津。"
      ]
    },
    {
      "_id": null,
      "Name": "寄贯休上人",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "常语亦关诗，",
        "常流安得知。",
        "楚郊来未久，",
        "吴地住多时。",
        "立月无人近，",
        "归林有鹤随。",
        "所居浑不远，",
        "相识偶然迟。"
      ]
    },
    {
      "_id": null,
      "Name": "岳上作",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "始好步青苔，",
        "蝉声且莫催。",
        "辛勤来到此，",
        "容易便言回。",
        "远水月未上，",
        "四方云正开。",
        "更堪逢道侣，",
        "特地话天台。"
      ]
    },
    {
      "_id": null,
      "Name": "岳阳对柳",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "谁此种秋色，",
        "令人看莫穷。",
        "正垂云梦雨，",
        "不奈洞庭风。",
        "昔出长安道，",
        "独游隋苑东。",
        "当时今日思，",
        "须信苦相同。"
      ]
    },
    {
      "_id": null,
      "Name": "怀故园",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "故园归未得，",
        "此日意何伤。",
        "独坐水边草，",
        "水流春日长。"
      ]
    },
    {
      "_id": null,
      "Name": "怀虚中上人",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "檐雨滴更残，",
        "思君安未安。",
        "湘川闻不远，",
        "道路去寻难。",
        "吟鬓霜应蚀，",
        "禅衣雪渐寒。",
        "倚松因独立，",
        "一鸟下江干。"
      ]
    },
    {
      "_id": null,
      "Name": "思齐己上人",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "同人与流俗，",
        "相谓好襟灵。",
        "有口不他说，",
        "长年自诵经。",
        "水声秋后石，",
        "山色晚来庭。",
        "客问修何法，",
        "指松千岁青。"
      ]
    },
    {
      "_id": null,
      "Name": "望西山",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "积翠异诸岳，",
        "令人看莫休。",
        "有时经暮雨，",
        "独得倚高楼。",
        "云外僧应老，",
        "林间水正秋。",
        "到头归隐处，",
        "岂在问嵩丘。"
      ]
    },
    {
      "_id": null,
      "Name": "松",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "细韵飕飕入骨凉，",
        "影兼巢鹤过高墙。",
        "盘根一种依平地，",
        "自是梧桐不久长。"
      ]
    },
    {
      "_id": null,
      "Name": "睡起作",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "长空秋雨歇，",
        "睡起觉精神。",
        "看水看山坐，",
        "无名无利身。",
        "偈吟诸祖意，",
        "茶碾去年春。",
        "此外谁相识，",
        "孤云到砌频。"
      ]
    },
    {
      "_id": null,
      "Name": "秋台作",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "独上高楼上，",
        "客情何物同。",
        "孤云无定处，",
        "长日信秋风。",
        "兄弟多年别，",
        "关河此夕中。",
        "到头归去是，",
        "免使叹洪濛。"
      ]
    },
    {
      "_id": null,
      "Name": "秋日闲居",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "是事不相关，",
        "谁人似此闲。",
        "卷帘当白昼，",
        "移榻对青山。",
        "野鹤眠松上，",
        "秋苔长雨间。",
        "岳僧频有信，",
        "昨日得书还。"
      ]
    },
    {
      "_id": null,
      "Name": "简寂观",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "正同高士坐烟霞，",
        "思著闲忙又是嗟。",
        "碧岫观中人似鹤，",
        "红尘路上事如麻。",
        "石肥滞雨添苍藓，",
        "松老涵风落翠花。",
        "莫道此间无我分，",
        "遗民长在惠持家。"
      ]
    },
    {
      "_id": null,
      "Name": "落叶",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "雨过闲田地，",
        "重重落叶红。",
        "翻思向春日，",
        "肯信有秋风。",
        "几处随流水，",
        "河边乱暮空。",
        "只应松自立，",
        "而不与君同。"
      ]
    },
    {
      "_id": null,
      "Name": "落花",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "一片又一片，",
        "等闲苔面红。",
        "不能延数日，",
        "开亦是春风。",
        "公子歌声歇，",
        "诗人眼界空。",
        "遥思故山下，",
        "经雨两三丛。"
      ]
    },
    {
      "_id": null,
      "Name": "送玄泰禅师",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "去去去何住，",
        "一盂兼一瓶。",
        "水边寒草白，",
        "岛外晚峰青。",
        "宿处林闻虎，",
        "行时天有星。",
        "回期谁可定，",
        "浮世重看经。"
      ]
    },
    {
      "_id": null,
      "Name": "送边将",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "人尽有离别，",
        "而君独可嗟。",
        "言将身报国，",
        "敢望禄荣家。",
        "战思风吹野，",
        "乡心月照沙。",
        "归期定何日，",
        "塞北树无花。"
      ]
    },
    {
      "_id": null,
      "Name": "雪中送人北游",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "然知心去速，",
        "其奈雪飞频。",
        "莫喜无危道，",
        "虽平更陷人。",
        "远郊光接汉，",
        "旷野色通秦。",
        "此去迢遥极，",
        "却回应过春。"
      ]
    },
    {
      "_id": null,
      "Name": "题僧梦微房",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "东海日未出，",
        "九衢人已行。",
        "吾师无事坐，",
        "苔藓入门生。",
        "雨过闲花落，",
        "风来古木声。",
        "天台频说法，",
        "石壁欠题名。"
      ]
    },
    {
      "_id": null,
      "Name": "题僧院泉",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "何处云根新布得，",
        "归仍半日在烟萝。",
        "莫轻竹引经窗小，",
        "须信更深入耳多。",
        "绕砌虽然清自别，",
        "出门长恐浊相和。",
        "从此无心恋沧海，",
        "沧海无风亦起波。"
      ]
    },
    {
      "_id": null,
      "Name": "题田道者院",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "入门空寂寂，",
        "真个出家儿。",
        "有行鬼不见，",
        "无心人谓痴。",
        "古岩寒柏对，",
        "流水落花随。",
        "欲别一何懒，",
        "相从所恨迟。"
      ]
    },
    {
      "_id": null,
      "Name": "题虎掊泉",
      "PoetId": "9dfe425526fc4883b60324ba9f521253",
      "PoetName": "修睦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "修睦"
      ],
      "Contents": [
        "一自虎掊得，",
        "清声四远流。",
        "众人怜尔处，",
        "长夜洗心头。",
        "出谷花随去，",
        "背岩猿下偷。",
        "林边落江徼，",
        "风起雨翛翛。"
      ]
    }
  ]
}
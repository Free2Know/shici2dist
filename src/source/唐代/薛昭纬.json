      "_id": null,
      "Name": "华州榜寄诸门生",
      "PoetId": "43aba29ed3e7414bbfc2caeda1e3abc1",
      "PoetName": "薛昭纬",
      "Form": "未知",
      "Tags": [
        "唐代",
        "薛昭纬"
      ],
      "Contents": [
        "时君过听委平衡，",
        "粉署华灯到晓明。",
        "开卷固难窥浩汗，",
        "执衡空欲慕公平。",
        "机云笔舌临文健，",
        "沈宋章篇发咏清。",
        "自笑观光辉下阙。"
      ]
    },
    {
      "_id": null,
      "Name": "谢银工",
      "PoetId": "43aba29ed3e7414bbfc2caeda1e3abc1",
      "PoetName": "薛昭纬",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "薛昭纬"
      ],
      "Contents": [
        "一碟毡根数十皴，",
        "盘中犹更有红鳞。",
        "早知文字多辛苦，",
        "悔不当初学冶银。"
      ]
    }
  ]

  "Name": "善生",
  "Description": "善生，贞元时僧。诗四首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "旅中答喻军事问客情",
      "PoetId": "a5fd7d9edfe6424c9f9beceb4f81083f",
      "PoetName": "善生",
      "Form": "五律",
      "Tags": [
        "唐代",
        "善生"
      ],
      "Contents": [
        "一自游他国，",
        "相逢少故人。",
        "纵然为客乐，",
        "争似在家贫。",
        "畜恨霜侵鬓，",
        "搜诗病入神。",
        "若非怜片善，",
        "谁肯问风尘。"
      ]
    },
    {
      "_id": null,
      "Name": "赠卢逸人",
      "PoetId": "a5fd7d9edfe6424c9f9beceb4f81083f",
      "PoetName": "善生",
      "Form": "五律",
      "Tags": [
        "唐代",
        "善生"
      ],
      "Contents": [
        "高眠岩野间，",
        "至艺敌应难。",
        "诗苦无多首，",
        "药灵惟一丸。",
        "引泉鱼落釜，",
        "攀果露沾冠。",
        "已得嵇康趣，",
        "逢迎事每阑。"
      ]
    },
    {
      "_id": null,
      "Name": "送智光之南值雨",
      "PoetId": "a5fd7d9edfe6424c9f9beceb4f81083f",
      "PoetName": "善生",
      "Form": "五律",
      "Tags": [
        "唐代",
        "善生"
      ],
      "Contents": [
        "结束衣囊了，",
        "炎州定去游。",
        "草堂方惜别，",
        "山雨为相留。",
        "又得一宵话，",
        "免生千里愁。",
        "莫辞重卜日，",
        "后会必经秋。"
      ]
    },
    {
      "_id": null,
      "Name": "送玉禅师",
      "PoetId": "a5fd7d9edfe6424c9f9beceb4f81083f",
      "PoetName": "善生",
      "Form": "五律",
      "Tags": [
        "唐代",
        "善生"
      ],
      "Contents": [
        "飘然无定迹，",
        "迥与律乘违。",
        "入郭随缘住，",
        "思山破夏归。",
        "盂擎数家饭，",
        "衲乞几人衣。",
        "洞了曹溪旨，",
        "宁输俗者机。"
      ]
    }
  ]
}
      "_id": null,
      "Name": "赋得沽美玉",
      "PoetId": "32d2f3005b794ea9b0a6034952bf0cce",
      "PoetName": "罗立言",
      "Form": "未知",
      "Tags": [
        "唐代",
        "罗立言"
      ],
      "Contents": [
        "谁怜被褐士，",
        "怀玉正求沽。",
        "成器终期达，",
        "逢时岂见诬。",
        "宝同珠照乘，",
        "价重剑论都。",
        "浮彩朝虹满，",
        "悬光夜月孤。",
        "几年沦瓦砾，",
        "今日出泥涂。",
        "采斫资良匠，",
        "无令瑕掩瑜。"
      ]
    }
  ]
}
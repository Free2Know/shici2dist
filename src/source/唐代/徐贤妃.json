  "Poems": [
    {
      "_id": null,
      "Name": "拟小山篇",
      "PoetId": "aeb1b9b9829c4365b3f54398841d652e",
      "PoetName": "徐贤妃",
      "Form": "未知",
      "Tags": [
        "唐代",
        "徐贤妃"
      ],
      "Contents": [
        "仰幽岩而流盼，",
        "抚桂枝以凝想。",
        "将千龄兮此遇，",
        "荃何为兮独往。"
      ]
    },
    {
      "_id": null,
      "Name": "秋风函谷应诏",
      "PoetId": "aeb1b9b9829c4365b3f54398841d652e",
      "PoetName": "徐贤妃",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐贤妃"
      ],
      "Contents": [
        "秋风起函谷，",
        "劲气动河山。",
        "偃松千岭上，",
        "杂雨二陵间。",
        "低云愁广隰，",
        "落日惨重关。",
        "此时飘紫气，",
        "应验真人还。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得北方有佳人",
      "PoetId": "aeb1b9b9829c4365b3f54398841d652e",
      "PoetName": "徐贤妃",
      "Form": "未知",
      "Tags": [
        "唐代",
        "徐贤妃"
      ],
      "Contents": [
        "由来称独立，",
        "本自号倾城。",
        "柳叶眉间发，",
        "桃花脸上生。",
        "腕摇金钏响，",
        "步转玉环鸣。",
        "纤腰宜宝袜，",
        "红衫艳织成。",
        "悬知一顾重，",
        "别觉舞腰轻。"
      ]
    },
    {
      "_id": null,
      "Name": "进太宗",
      "PoetId": "aeb1b9b9829c4365b3f54398841d652e",
      "PoetName": "徐贤妃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "徐贤妃"
      ],
      "Contents": [
        "朝来临镜台，",
        "妆罢暂裴回。",
        "千金始一笑，",
        "一召讵能来。"
      ]
    },
    {
      "_id": null,
      "Name": "长门怨",
      "PoetId": "aeb1b9b9829c4365b3f54398841d652e",
      "PoetName": "徐贤妃",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐贤妃"
      ],
      "Contents": [
        "旧爱柏梁台，",
        "新宠昭阳殿。",
        "守分辞芳辇，",
        "含情泣团扇。",
        "一朝歌舞荣，",
        "夙昔诗书贱。",
        "颓恩诚已矣，",
        "覆水难重荐。"
      ]
    }
  ]
}
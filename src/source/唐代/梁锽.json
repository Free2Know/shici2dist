{
  "_id": "d03295bc179c4d0b98f3e0bbacbf6ea1",
  "Name": "梁锽",
  "Description": "梁锽，官执戟。天宝中人。诗十五首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "七夕泛舟",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "云端有灵匹，",
        "掩映拂妆台。",
        "夜久应摇佩，",
        "天高响不来。",
        "片欢秋始展，",
        "残梦晓翻催。",
        "却怨填河鹊，",
        "留桥又不回。"
      ]
    },
    {
      "_id": null,
      "Name": "代征人妻喜夫还",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "七律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "征夫走马发渔阳，",
        "少妇含娇开洞房。",
        "千日废台还挂镜，",
        "数年尘面再新妆。",
        "春风喜出今朝户，",
        "明月虚眠昨夜床。",
        "莫道幽闺书信隔，",
        "还衣总是旧时香。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "未知",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "堂高凭上望，",
        "宅广乘车行。",
        "（《咏郭令公宅》。",
        "见《封氏闻见记》）第二百零三卷"
      ]
    },
    {
      "_id": null,
      "Name": "咏木老人",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "刻木牵丝作老翁，",
        "鸡皮鹤发与真同。",
        "须臾弄罢寂无事，",
        "还似人生一梦中。"
      ]
    },
    {
      "_id": null,
      "Name": "天长节",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "日月生天久，",
        "年年庆一回。",
        "时平祥不去，",
        "寿远节长来。",
        "连吹千家笛，",
        "同朝百郡杯。",
        "愿持金殿镜，",
        "处处照遗才。"
      ]
    },
    {
      "_id": null,
      "Name": "崔驸马宅咏画山水扇",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "画扇出秦楼，",
        "谁家赠列侯。",
        "小含吴剡县，",
        "轻带楚扬州。",
        "掩作山云暮，",
        "摇成陇树秋。",
        "坐来传与客，",
        "汉水又回流。"
      ]
    },
    {
      "_id": null,
      "Name": "戏赠歌者",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "白皙歌童子，",
        "哀音绝又连。",
        "楚妃临扇学，",
        "卢女隔帘传。",
        "晓燕喧喉里，",
        "春莺啭舌边。",
        "若逢汉武帝，",
        "还是李延年。"
      ]
    },
    {
      "_id": null,
      "Name": "省试方士进恒春草",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "未知",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "东吴有灵草，",
        "生彼剡溪傍。",
        "既乱莓苔色，",
        "仍连菡萏香。",
        "掇之称远士，",
        "持以奉明王。",
        "北阙颜弥驻，",
        "南山寿更长。",
        "金膏徒骋妙，",
        "石髓莫矜良。",
        "倘使沾涓滴，",
        "还游不死方。"
      ]
    },
    {
      "_id": null,
      "Name": "美人春卧",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "妾家巫峡阳，",
        "罗幌寝兰堂。",
        "晓日临窗久，",
        "春风引梦长。",
        "落钗仍挂鬓，",
        "微汗欲消黄。",
        "纵使朦胧觉，",
        "魂犹逐楚王。"
      ]
    },
    {
      "_id": null,
      "Name": "艳女词",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "露井桃花发，",
        "双双燕并飞。",
        "美人姿态里，",
        "春色上罗衣。",
        "自爱频开镜，",
        "时羞欲掩扉。",
        "不知行路客，",
        "遥惹五香归。"
      ]
    },
    {
      "_id": null,
      "Name": "观王美人海图障子",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "宋玉东家女，",
        "常怀物外多。",
        "自从图渤海，",
        "谁为觅湘娥。",
        "白鹭栖脂粉，",
        "赪鲂跃绮罗。",
        "仍怜转娇眼，",
        "别恨一横波。"
      ]
    },
    {
      "_id": null,
      "Name": "赠李中华",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "莫向嵩山去，",
        "神仙多误人。",
        "不如朝魏阙，",
        "天子重贤臣。"
      ]
    },
    {
      "_id": null,
      "Name": "闻百舌鸟",
      "PoetId": "d03295bc179c4d0b98f3e0bbacbf6ea1",
      "PoetName": "梁锽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "梁锽"
      ],
      "Contents": [
        "百舌闻他郡，",
        "间关媚物华。",
        "敛形藏一叶，",
        "分响出千花。",
        "坐爱时褰幌，",
        "行藏或驻车。",
        "不须应独感，",
        "三载已辞家。"
      ]
    }
  ]
}
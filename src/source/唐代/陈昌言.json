  "Poems": [
    {
      "_id": null,
      "Name": "白日丽江皋",
      "PoetId": "ab23b1c8828c4d73876bb5cdd720bcf9",
      "PoetName": "陈昌言",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈昌言"
      ],
      "Contents": [
        "迟景临遥水，",
        "晴空似不高。",
        "清明开晓镜，",
        "昭晰辨秋毫。",
        "郁郁长堤土，",
        "离离浅渚毛。",
        "烟销占一候，",
        "风静拥千艘。",
        "独媚青春柳，",
        "宜看白鹭涛。",
        "何年谢公赏，",
        "遗韵在江皋。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得玉水记方流",
      "PoetId": "ab23b1c8828c4d73876bb5cdd720bcf9",
      "PoetName": "陈昌言",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈昌言"
      ],
      "Contents": [
        "明媚如怀玉，",
        "奇姿自托幽。",
        "白虹深不见，",
        "绿水折空流。",
        "方珏清沙遍，",
        "纵横气色浮。",
        "类圭才有角，",
        "写月让成钩。",
        "久处沉潜贵，",
        "希当特达收。",
        "滔滔在何许，",
        "揭厉愿从游。"
      ]
    }
  ]
}
{
  "_id": "06f6e9bac6e5496d90bd535a5aa3ed51",
  "Name": "张谔",
  "Description": "张谔，景龙中登进士第，仕为陈王掾。岐王范雅好儒士，谔与阎朝隐、刘庭琦、郑繇等皆从之游，赋诗饮酒。后坐贬山茌丞。诗十二首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "三日岐王宅",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "玉女贵妃生，",
        "嫛婗始发声。",
        "金盆浴未了，",
        "绷子绣初成。",
        "翡翠雕芳缛，",
        "真珠帖小缨。",
        "何时学健步，",
        "斗取落花轻。"
      ]
    },
    {
      "_id": null,
      "Name": "东封山下宴群臣",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "万里扈封峦，",
        "群公遇此欢。",
        "幔城连夜静，",
        "霜仗满空寒。",
        "辇路宵烟合，",
        "旌门晓月残。",
        "明朝陪圣主，",
        "山下礼圆坛。"
      ]
    },
    {
      "_id": null,
      "Name": "九日",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "秋来林下不知春，",
        "一种佳游事也均。",
        "绛叶从朝飞著夜，",
        "黄花开日未成旬。",
        "将曛陌树频惊鸟，",
        "半醉归途数问人。",
        "城远登高并九日，",
        "茱萸凡作几年新。"
      ]
    },
    {
      "_id": null,
      "Name": "九日宴",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "秋叶风吹黄飒飒，",
        "晴云日照白鳞鳞。",
        "归来得问茱萸女，",
        "今日登高醉几人。"
      ]
    },
    {
      "_id": null,
      "Name": "岐王山亭",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "王家傍绿池，",
        "春色正相宜。",
        "岂有楼台好，",
        "兼看草树奇。",
        "石榴天上叶，",
        "椰子日南枝。",
        "出入千门里，",
        "年年乐未移。"
      ]
    },
    {
      "_id": null,
      "Name": "岐王席上咏美人",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "半额画双蛾，",
        "盈盈烛下歌。",
        "玉杯寒意少，",
        "金屋夜情多。",
        "香艳王分帖，",
        "裙娇敕赐罗。",
        "平阳莫相妒，",
        "唤出不如他。"
      ]
    },
    {
      "_id": null,
      "Name": "延平门高斋亭子应岐王教",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "花源药屿凤城西，",
        "翠幕纱窗莺乱啼。",
        "昨夜蒲萄初上架，",
        "今朝杨柳半垂堤。",
        "片片仙云来渡水，",
        "双双燕子共衔泥。",
        "请语东风催后骑，",
        "并将歌舞向前谿。"
      ]
    },
    {
      "_id": null,
      "Name": "满月",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "社金流茂祉，",
        "庭玉表奇才。",
        "竹似因谈植，",
        "兰疑入梦栽。",
        "乌将八子去，",
        "凤逐九雏来。",
        "今夜明珠色，",
        "当随满月开。"
      ]
    },
    {
      "_id": null,
      "Name": "百子池",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "旧闻百子汉家池，",
        "汉家渌水今逶迤。",
        "宫女厌镜笑窥池，",
        "身前影后不相见，",
        "无数容华空自知。"
      ]
    },
    {
      "_id": null,
      "Name": "赠吏部孙员外济",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "天子爱贤才，",
        "星郎入拜来。",
        "明光朝半下，",
        "建礼直初回。",
        "名带含香发，",
        "文随绮幕开。",
        "披云自有镜，",
        "从此照仙台。"
      ]
    },
    {
      "_id": null,
      "Name": "送李著作倅杭州",
      "PoetId": "06f6e9bac6e5496d90bd535a5aa3ed51",
      "PoetName": "张谔",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张谔"
      ],
      "Contents": [
        "辍史空三署，",
        "题舆佐一方。",
        "祖筵开霁景，",
        "征陌直朝光。",
        "水陆风烟隔，",
        "秦吴道路长。",
        "伫闻敷善政，",
        "邦国咏惟康。"
      ]
    }
  ]
}
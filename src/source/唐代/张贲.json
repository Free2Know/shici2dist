{
  "_id": "bd04e65f0db14a0d8fcd0ac6f19c0525",
  "Name": "张贲",
  "Description": "张贲，字润卿，南阳人，登大中进士第。唐末，为广文博士。尝隐于茅山，后寓吴中，与皮陆游。诗十六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "以青饣迅饭分送袭美鲁望因成一绝",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "谁屑琼瑶事青饣迅，",
        "旧传名品出华阳。",
        "应宜仙子胡麻拌，",
        "因送刘郎与阮郎。"
      ]
    },
    {
      "_id": null,
      "Name": "偶约道流终乖文会答皮陆",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "仙侣无何访蔡经，",
        "两烦韶濩出彤庭。",
        "人间若有登楼望，",
        "应怪文星近客星。"
      ]
    },
    {
      "_id": null,
      "Name": "和皮陆酒病偶作",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "白编椰席镂冰明，",
        "应助杨青解宿酲。",
        "难继二贤金玉唱，",
        "可怜空作断猿声。"
      ]
    },
    {
      "_id": null,
      "Name": "和袭美寒夜见访",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "云孤鹤独且相亲，",
        "仿效从它折角巾。",
        "不用吴江叹留滞，",
        "风姿俱是玉清人。"
      ]
    },
    {
      "_id": null,
      "Name": "和袭美醉中先起次韵",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "何事桃源路忽迷，",
        "惟留云雨怨空闺。",
        "仙郎共许多情调，",
        "莫遣重歌浊水泥。"
      ]
    },
    {
      "_id": null,
      "Name": "和鲁望白菊",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "雪彩冰姿号女华，",
        "寄身多是地仙家。",
        "有时南国和霜立，",
        "几处东篱伴月斜。",
        "谢客琼枝空贮恨，",
        "袁郎金钿不成夸。",
        "自知终古清香在，",
        "更出梅妆弄晚霞。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和袭美伤开元观顾道士",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "凤麟胶尽夜如何，",
        "共叹先生剑解多。",
        "几度吊来唯白鹤，",
        "此时乘去必青骡。",
        "图中含景随残照，",
        "琴里流泉寄逝波。",
        "惆怅真灵又空返，",
        "玉书谁授紫微歌。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和袭美先辈悼鹤",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "池塘萧索掩空笼，",
        "玉树同嗟一土中。",
        "莎径罢鸣唯泣露，",
        "松轩休舞但悲风。",
        "丹台旧氅难重缉，",
        "紫府新书岂更通。",
        "云减雾消无处问，",
        "只留华发与衰翁。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和袭美醉中即席见赠次韵",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "桂枝新下月中仙，",
        "学海词锋誉蔼然。",
        "文阵已推忠信甲，",
        "穷波犹认孝廉船。",
        "清标称住羊车上，",
        "俗韵惭居鹤氅前。",
        "共许逢蒙快弓箭，",
        "再穿杨叶在明年。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和袭美题褚家林亭",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "疏野林亭震泽西，",
        "朗吟闲步喜相携。",
        "时时风折芦花乱，",
        "处处霜摧稻穗低。",
        "百本败荷鱼不动，",
        "一枝寒菊蝶空迷。",
        "今朝偶得高阳伴，",
        "从放山翁醉似泥。"
      ]
    },
    {
      "_id": null,
      "Name": "悼鹤和袭美",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "渥顶鲜毛品格驯，",
        "莎庭闲暇重难群。",
        "无端日暮东风起，",
        "飘散春空一片云。"
      ]
    },
    {
      "_id": null,
      "Name": "旅泊吴门",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "一舸吴江晚，",
        "堪忧病广文。",
        "鲈鱼谁与伴，",
        "鸥鸟自成群。",
        "反照纵横水，",
        "斜空断续云。",
        "异乡无限思，",
        "尽付酒醺醺。"
      ]
    },
    {
      "_id": null,
      "Name": "玩金鸂鶒和陆鲁望",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "翠羽红襟镂彩云，",
        "双飞常笑白鸥群。",
        "谁怜化作雕金质，",
        "从倩沉檀十里闻。"
      ]
    },
    {
      "_id": null,
      "Name": "贲中间有吴门旅泊之什蒙鲁望垂和更……",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "偶发陶匏响，",
        "皆蒙组绣文。",
        "清秋将落帽，",
        "子夏正离群。",
        "有恨书燕雁，",
        "无聊赋郢云。",
        "遍看心自醉，",
        "不是酒能醺。"
      ]
    },
    {
      "_id": null,
      "Name": "送浙东德师侍御罢府西归",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "孤云独鸟本无依，",
        "江海重逢故旧稀。",
        "杨柳渐疏芦苇白，",
        "可怜斜日送君归。"
      ]
    },
    {
      "_id": null,
      "Name": "酬袭美先见寄倒来韵",
      "PoetId": "bd04e65f0db14a0d8fcd0ac6f19c0525",
      "PoetName": "张贲",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张贲"
      ],
      "Contents": [
        "寻疑天意丧斯文，",
        "故选茅峰寄白云。",
        "酒后只留沧海客，",
        "香前唯见紫阳君。",
        "近年已绝诗书癖，",
        "今日兼将笔砚焚。",
        "为有此身犹苦患，",
        "不知何者是玄纁。"
      ]
    }
  ]
}
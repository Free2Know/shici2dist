{
  "_id": "32c808cc68e04727b77e857191cbc45c",
  "Name": "王喦",
  "Description": "蜀人，曾避地荆南。有集一卷，今存诗六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "回旧山",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "瘐家楼上谢家池，",
        "处处风烟少旧知。",
        "明日落花谁共醉，",
        "野溪猿鸟恨归迟。"
      ]
    },
    {
      "_id": null,
      "Name": "山中有所思",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "零零夜雨渍愁根，",
        "触物伤离好断魂。",
        "莫怪杜鹃飞去尽，",
        "紫微花里有啼猿。"
      ]
    },
    {
      "_id": null,
      "Name": "杪春寄友人",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "何处相逢万事忙，",
        "卓家楼上百淘香。",
        "明朝渐近山僧寺，",
        "更为残花醉一场。"
      ]
    },
    {
      "_id": null,
      "Name": "燕",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "一巢功绩破春光，",
        "絮落花残两翅狂。",
        "月树风枝不栖去，",
        "强来言语泥雕梁。"
      ]
    },
    {
      "_id": null,
      "Name": "贫女",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "难把菱花照素颜，",
        "试临春水插花看。",
        "木兰船上游春子，",
        "笑把荆钗下远滩。"
      ]
    },
    {
      "_id": null,
      "Name": "题严君观",
      "PoetId": "32c808cc68e04727b77e857191cbc45c",
      "PoetName": "王喦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "王喦"
      ],
      "Contents": [
        "寒云古木罩星台，",
        "凡骨仙踪信可哀。",
        "二十年前曾此到，",
        "一千年内未归来。"
      ]
    }
  ]
}
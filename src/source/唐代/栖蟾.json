  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "再宿京口禅院",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "七律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "滩声依旧水溶溶，",
        "岸影参差对梵宫。",
        "楚树七回凋旧叶，",
        "江人两至宿秋风。",
        "蟾蜍竹老摇疏白，",
        "菡萏池干落碎红。",
        "多病支郎念行止，",
        "晚年生计转如蓬。"
      ]
    },
    {
      "_id": null,
      "Name": "南中怀友生",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "荔枝江上立，",
        "望北几思量。",
        "隔海无书札，",
        "前年在汉阳。",
        "瘴村人起早，",
        "铜柱象揩光。",
        "居此成何事，",
        "寻君过碧湘。"
      ]
    },
    {
      "_id": null,
      "Name": "宿巴江",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "江声五十里，",
        "泻碧急于弦。",
        "不觉日又夜，",
        "争教人少年。",
        "一汀巫峡月，",
        "两岸子规天。",
        "山影似相伴，",
        "浓遮到晓船。"
      ]
    },
    {
      "_id": null,
      "Name": "寄问政山聂威仪",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "先生卧碧岑，",
        "诸祖是知音。",
        "得道无一法，",
        "孤云同寸心。",
        "岚光薰鹤诏，",
        "茶味敌人参。",
        "苦向壶中去，",
        "他年许我寻。"
      ]
    },
    {
      "_id": null,
      "Name": "居南岳怀沈彬",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "石房开竹扉，",
        "茗外独支颐。",
        "万木还无叶，",
        "百年能几时。",
        "隔云闻狖过，",
        "截雨见虹垂。",
        "因忆岳南客，",
        "晏眠吟好诗。"
      ]
    },
    {
      "_id": null,
      "Name": "游边",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "边云四顾浓，",
        "饥马嗅枯丛。",
        "万里八九月，",
        "一身西北风。",
        "偷营天正黑，",
        "战地雪多红。",
        "昨夜东归梦，",
        "桃花暖色中。"
      ]
    },
    {
      "_id": null,
      "Name": "牧童",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "牛得自由骑，",
        "春风细雨飞。",
        "青山青草里，",
        "一笛一蓑衣。",
        "日出唱歌去，",
        "月明抚掌归。",
        "何人得似尔，",
        "无是亦无非。"
      ]
    },
    {
      "_id": null,
      "Name": "短歌行",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "蟾光堪自笑，",
        "浮世懒思量。",
        "身得几时活，",
        "眼开终日忙。",
        "千门无寿药，",
        "一镜有愁霜。",
        "早向尘埃外，",
        "光阴任短长。"
      ]
    },
    {
      "_id": null,
      "Name": "赠南岳玄泰布衲",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "曹溪入室人，",
        "终老甚难群。",
        "四十馀年内，",
        "青山与白云。",
        "松和巢鹤看，",
        "果共野猿分。",
        "海外僧来说，",
        "名高自小闻。"
      ]
    },
    {
      "_id": null,
      "Name": "送迁客",
      "PoetId": "8ec4f6f3156640b88e0f8f89f273d978",
      "PoetName": "栖蟾",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖蟾"
      ],
      "Contents": [
        "谏频甘得罪，",
        "一骑入南深。",
        "若顺吾皇意，",
        "即无臣子心。",
        "织花蛮市布，",
        "捣月象州砧。",
        "蒙雪知何日，",
        "凭楼望北吟。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "巢燕",
      "PoetId": "98f9fed3d5f9406ea1b4eba4beaefeac",
      "PoetName": "胡玢",
      "Form": "五律",
      "Tags": [
        "唐代",
        "胡玢"
      ],
      "Contents": [
        "燕来巢我檐，",
        "我屋非高大。",
        "所贵儿童善，",
        "保尔无殃祸。",
        "莫巢孀妇家，",
        "孀妇怨孤坐。",
        "妒尔长双飞，",
        "打尔危巢破。"
      ]
    },
    {
      "_id": null,
      "Name": "庐山桑落洲",
      "PoetId": "98f9fed3d5f9406ea1b4eba4beaefeac",
      "PoetName": "胡玢",
      "Form": "五律",
      "Tags": [
        "唐代",
        "胡玢"
      ],
      "Contents": [
        "莫问桑田事，",
        "但看桑落洲。",
        "数家新住处，",
        "昔日大江流。",
        "古岸崩欲尽，",
        "平沙长未休。",
        "想应百年后，",
        "人世更悠悠。"
      ]
    },
    {
      "_id": null,
      "Name": "石楠树",
      "PoetId": "98f9fed3d5f9406ea1b4eba4beaefeac",
      "PoetName": "胡玢",
      "Form": "七律",
      "Tags": [
        "唐代",
        "胡玢"
      ],
      "Contents": [
        "本自清江石上生，",
        "移栽此处称闲情。",
        "青云士尽识珍木，",
        "白屋人多唤俗名。",
        "重布绿阴滋藓色，",
        "深藏好鸟引雏声。",
        "余今一日千回看，",
        "每度看来眼益明。"
      ]
    }
  ]
}
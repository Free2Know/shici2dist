  "Poems": [
    {
      "_id": null,
      "Name": "江上有怀",
      "PoetId": "d9a48d50635c48faa449cfc4b175138e",
      "PoetName": "王適",
      "Form": "未知",
      "Tags": [
        "唐代",
        "王適"
      ],
      "Contents": [
        "湛湛江水见底清，",
        "荷花莲子傍江生。",
        "采莲将欲寄同心，",
        "秋风落花空复情。",
        "棹歌数曲如有待，",
        "正见明月度东海。",
        "海上云尽月苍苍，",
        "万里分辉满洛阳。",
        "洛阳闺阁夜何央，",
        "蛾眉婵娟断人肠。",
        "寂寥金屏空自掩，",
        "青荧银烛不生光。",
        "应怜水宿洞庭子，",
        "今夕迢遥天一方。"
      ]
    },
    {
      "_id": null,
      "Name": "江滨梅",
      "PoetId": "d9a48d50635c48faa449cfc4b175138e",
      "PoetName": "王適",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "王適"
      ],
      "Contents": [
        "忽见寒梅树，",
        "开花汉水滨。",
        "不知春色早，",
        "疑是弄珠人。"
      ]
    },
    {
      "_id": null,
      "Name": "蜀中言怀",
      "PoetId": "d9a48d50635c48faa449cfc4b175138e",
      "PoetName": "王適",
      "Form": "未知",
      "Tags": [
        "唐代",
        "王適"
      ],
      "Contents": [
        "独坐年将暮，",
        "常怀志不通。",
        "有时须问影，",
        "无事却书空。",
        "弃置如天外，",
        "平生似梦中。",
        "蓬心犹是客，",
        "华发欲成翁。",
        "迹滞魂逾窘，",
        "情乖路转穷。",
        "别离同夜月，",
        "愁思隔秋风。",
        "老少悲颜驷，",
        "盈虚悟翟公。",
        "时来不可问，",
        "何用求童蒙。"
      ]
    },
    {
      "_id": null,
      "Name": "铜雀妓",
      "PoetId": "d9a48d50635c48faa449cfc4b175138e",
      "PoetName": "王適",
      "Form": "未知",
      "Tags": [
        "唐代",
        "王適"
      ],
      "Contents": [
        "日暮铜雀迥，",
        "秋深玉座清。",
        "萧森松柏望，",
        "委郁绮罗情。",
        "君恩不再得，",
        "妾舞为谁轻。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "故乡除夜",
      "PoetId": "73f1ec9c8c534582aadc97ad5ac9b8dd",
      "PoetName": "周弘亮",
      "Form": "七律",
      "Tags": [
        "唐代",
        "周弘亮"
      ],
      "Contents": [
        "三百六十日云终，",
        "故乡还与异乡同。",
        "非唯律变情堪恨，",
        "抑亦才疏命未通。",
        "何处夜歌销腊酒，",
        "谁家高烛候春风。",
        "诗成始欲吟将看，",
        "早是去年牵课中。"
      ]
    },
    {
      "_id": null,
      "Name": "曲江亭望慈恩寺杏园花发",
      "PoetId": "73f1ec9c8c534582aadc97ad5ac9b8dd",
      "PoetName": "周弘亮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "周弘亮"
      ],
      "Contents": [
        "江亭闲望处，",
        "远近见秦源。",
        "古寺迟春景，",
        "新花发杏园。",
        "萼中轻蕊密，",
        "枝上素姿繁。",
        "拂雨云初起，",
        "含风雪欲翻。",
        "容辉明十地，",
        "香气遍千门。",
        "愿莫随桃李，",
        "芳菲不为言。"
      ]
    },
    {
      "_id": null,
      "Name": "除夜书情",
      "PoetId": "73f1ec9c8c534582aadc97ad5ac9b8dd",
      "PoetName": "周弘亮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "周弘亮"
      ],
      "Contents": [
        "何处风尘岁，",
        "云阳古驿前。",
        "三冬不再稔，",
        "晓日又明年。",
        "春入江南柳，",
        "寒归塞北天。",
        "还伤知候客，",
        "花景对韦编。"
      ]
    }
  ]
}
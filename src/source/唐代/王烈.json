  "Poems": [
    {
      "_id": null,
      "Name": "塞上曲二首",
      "PoetId": "5f47cbd046d34aa1a1fe5d6de8ec675d",
      "PoetName": "王烈",
      "Form": "七律",
      "Tags": [
        "唐代",
        "王烈"
      ],
      "Contents": [
        "红颜岁岁老金微，",
        "砂碛年年卧铁衣。",
        "白草城中春不入，",
        "黄花戍上雁长飞。",
        "孤城夕对戍楼闲，",
        "回合青冥万仞山。",
        "明镜不须生白发，",
        "风沙自解老红颜。"
      ]
    },
    {
      "_id": null,
      "Name": "行路难",
      "PoetId": "5f47cbd046d34aa1a1fe5d6de8ec675d",
      "PoetName": "王烈",
      "Form": "词",
      "Tags": [
        "唐代",
        "王烈"
      ],
      "Contents": [
        "行客满长路，",
        "路长良足哀。",
        "白日持角弓，",
        "射人而取财。",
        "千金谁家子，",
        "纷纷死黄埃。",
        "见者不敢言，",
        "言者不得回。",
        "家人各望归，",
        "岂知长不来。"
      ]
    },
    {
      "_id": null,
      "Name": "酬崔峒",
      "PoetId": "5f47cbd046d34aa1a1fe5d6de8ec675d",
      "PoetName": "王烈",
      "Form": "五律",
      "Tags": [
        "唐代",
        "王烈"
      ],
      "Contents": [
        "徇世甘长往，",
        "逢时忝一官。",
        "欲朝青琐去，",
        "羞向白云看。",
        "荣宠无心易，",
        "艰危抗节难。",
        "思君写怀抱，",
        "非敢和幽兰。"
      ]
    },
    {
      "_id": null,
      "Name": "雪",
      "PoetId": "5f47cbd046d34aa1a1fe5d6de8ec675d",
      "PoetName": "王烈",
      "Form": "五律",
      "Tags": [
        "唐代",
        "王烈"
      ],
      "Contents": [
        "雪飞当梦蝶，",
        "风度几惊人。",
        "半夜一窗晓，",
        "平明千树春。",
        "花园应失路，",
        "白屋忽为邻。",
        "散入仙厨里，",
        "还如云母尘。"
      ]
    }
  ]
}
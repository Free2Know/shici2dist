  "Poems": [
    {
      "_id": null,
      "Name": "和赠和龙妙空禅师",
      "PoetId": "0f01bdf01dc4416197641e69a94c34b7",
      "PoetName": "夏鸿",
      "Form": "七律",
      "Tags": [
        "唐代",
        "夏鸿"
      ],
      "Contents": [
        "翰林遗迹镜潭前，",
        "孤峭高僧此处禅。",
        "出为信门兴化日，",
        "坐当吾国太平年。",
        "身同莹澈尼珠净，",
        "语并锋铓慧剑坚。",
        "道果已圆名已遂，",
        "即看千匝绕香筵。"
      ]
    }
  ]
}
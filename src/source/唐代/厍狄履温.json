  "Poems": [
    {
      "_id": null,
      "Name": "夏晚初霁南省寓直用馀字",
      "PoetId": "3d770b4761144d88b6fe495939c1f551",
      "PoetName": "厍狄履温",
      "Form": "未知",
      "Tags": [
        "唐代",
        "厍狄履温"
      ],
      "Contents": [
        "薄宦因时泰，",
        "凉宵寓直初。",
        "沉沉仙阁闭，",
        "的的暗更徐。",
        "霁色连空上，",
        "炎氛入夜除。",
        "星回南斗落，",
        "月度北窗虚。",
        "待漏残灯照，",
        "含芳袭气馀。",
        "寐来冠不解，",
        "奏罢草仍书。",
        "幕府惭良策，",
        "明曹愧散樗。",
        "命轻徒有报，",
        "义重更难疏。",
        "燕厦欣成托，",
        "鹓行滥所如。",
        "晨趋当及早，",
        "复此戒朝车。"
      ]
    }
  ]
}
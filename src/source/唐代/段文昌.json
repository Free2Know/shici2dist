  "_id": "b9fbeca7c325426e9e4b74db286ab07a",
  "Name": "段文昌",
  "Description": "段文昌，字墨卿，一字景初。贞元初，授校书郎，累擢翰林学士、中书舍人。穆宗即位，拜中书侍郎同中书门下平章事。未逾年，出为剑南、西川节度使。文宗立，拜御史大夫，节度淮南，徙荆南，终西川节度。集三十卷。今存诗四首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "晚夏登张仪楼呈院中诸公",
      "PoetId": "b9fbeca7c325426e9e4b74db286ab07a",
      "PoetName": "段文昌",
      "Form": "五律",
      "Tags": [
        "唐代",
        "段文昌"
      ],
      "Contents": [
        "重楼窗户开，",
        "四望敛烟埃。",
        "远岫林端出，",
        "清波城下回。",
        "乍疑蝉韵促，",
        "稍觉雪风来。",
        "并起乡关思，",
        "销忧在酒杯。"
      ]
    },
    {
      "_id": null,
      "Name": "还别业寻龙华山寺广宣上人",
      "PoetId": "b9fbeca7c325426e9e4b74db286ab07a",
      "PoetName": "段文昌",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "段文昌"
      ],
      "Contents": [
        "十里惟闻松桂风，",
        "江山忽转见龙宫。",
        "正与休师方话旧，",
        "风烟几度入楼中。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·享太庙乐章·象德舞",
      "PoetId": "b9fbeca7c325426e9e4b74db286ab07a",
      "PoetName": "段文昌",
      "Form": "未知",
      "Tags": [
        "唐代",
        "段文昌"
      ],
      "Contents": [
        "肃肃清庙，",
        "登显至德。",
        "泽周八荒，",
        "兵定四极。",
        "生物咸遂，",
        "群盗灭息。",
        "明圣钦承，",
        "子孙千亿。"
      ]
    },
    {
      "_id": null,
      "Name": "题武担寺西台",
      "PoetId": "b9fbeca7c325426e9e4b74db286ab07a",
      "PoetName": "段文昌",
      "Form": "五律",
      "Tags": [
        "唐代",
        "段文昌"
      ],
      "Contents": [
        "秋天如镜空，",
        "楼阁尽玲珑。",
        "水暗馀霞外，",
        "山明落照中。",
        "鸟行看渐远，",
        "松韵听难穷。",
        "今日登临意，",
        "多欢语笑同。"
      ]
    }
  ]
}
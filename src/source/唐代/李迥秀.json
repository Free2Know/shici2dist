  "_id": "07d94282e60148f3b327c35ab9078642",
  "Name": "李迥秀",
  "Description": "李迥秀，字茂之，泾阳人。初为相州参军，后累官凤阁舍人。长安中，同平章事。中宗朝，终兵部尚书。卒赠侍中。诗四首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "夜宴安乐公主宅",
      "PoetId": "07d94282e60148f3b327c35ab9078642",
      "PoetName": "李迥秀",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "李迥秀"
      ],
      "Contents": [
        "金榜岧峣云里开，",
        "玉箫参差天际回。",
        "莫惊侧弁还归路，",
        "只为平阳歌舞催。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和九日幸临渭亭登高应制得风字",
      "PoetId": "07d94282e60148f3b327c35ab9078642",
      "PoetName": "李迥秀",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李迥秀"
      ],
      "Contents": [
        "重九临商节，",
        "登高出汉宫。",
        "正逢萸实满，",
        "还对菊花丛。",
        "霁云开就日，",
        "仙藻丽秋风。",
        "微臣预在镐，",
        "窃抃遂无穷。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和九月九日登慈恩寺浮图应制",
      "PoetId": "07d94282e60148f3b327c35ab9078642",
      "PoetName": "李迥秀",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李迥秀"
      ],
      "Contents": [
        "沙界人王塔，",
        "金绳梵帝游。",
        "言从祇树赏，",
        "行玩菊丛秋。",
        "御酒调甘露，",
        "天花拂彩旒。",
        "尧年将佛日，",
        "同此庆时休。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和幸安乐公主山庄应制",
      "PoetId": "07d94282e60148f3b327c35ab9078642",
      "PoetName": "李迥秀",
      "Form": "七律",
      "Tags": [
        "唐代",
        "李迥秀"
      ],
      "Contents": [
        "诘旦重门闻警跸，",
        "传言太主奏山林。",
        "是日回舆罗万骑，",
        "此时欢喜赐千金。",
        "鹭羽凤箫参乐曲，",
        "荻园竹径接帷阴。",
        "手舞足蹈方无已，",
        "万年千岁奉薰琴。"
      ]
    }
  ]
}
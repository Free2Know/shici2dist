  "Poems": [
    {
      "_id": null,
      "Name": "贺襄阳副使节判同加章绶",
      "PoetId": "488af9953fc34af09772fdad431aa40b",
      "PoetName": "徐商",
      "Form": "七律",
      "Tags": [
        "唐代",
        "徐商"
      ],
      "Contents": [
        "朱紫花前贺故人，",
        "兼荣此会颇关身。",
        "同年坐上联宾榻，",
        "宗姓亭中布锦裀。",
        "晴日照旗红灼烁，",
        "韶光入队影玢璘。",
        "芳菲解助今朝喜，",
        "嫩蕊青条满眼新。"
      ]
    }
  ]
}
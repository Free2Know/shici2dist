  "Poems": [
    {
      "_id": null,
      "Name": "晓",
      "PoetId": "38892c08d7bd40f699776950cbae27f3",
      "PoetName": "刘猛",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "刘猛"
      ],
      "Contents": [
        "朝梳一把白，",
        "夜泪千滴雨。",
        "可耻垂拱时，",
        "老作在家女。"
      ]
    },
    {
      "_id": null,
      "Name": "月生",
      "PoetId": "38892c08d7bd40f699776950cbae27f3",
      "PoetName": "刘猛",
      "Form": "未知",
      "Tags": [
        "唐代",
        "刘猛"
      ],
      "Contents": [
        "月生十五前，",
        "日望光彩圆。",
        "月满十五后，",
        "日畏光彩瘦。",
        "不见夜花色，",
        "一尊成暗酒。",
        "匣中苔背铜，",
        "光短不照空。",
        "不惜补明月，",
        "惭无此良工。"
      ]
    },
    {
      "_id": null,
      "Name": "苦雨",
      "PoetId": "38892c08d7bd40f699776950cbae27f3",
      "PoetName": "刘猛",
      "Form": "五律",
      "Tags": [
        "唐代",
        "刘猛"
      ],
      "Contents": [
        "自念数年间，",
        "两手中藏钩。",
        "于心且无恨，",
        "他日为我羞。",
        "古老传童歌，",
        "连淫亦兵象。",
        "夜梦戈甲鸣，",
        "苦不愿年长。"
      ]
    }
  ]
}
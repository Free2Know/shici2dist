{
  "_id": "bce550dc28724ac09f9b84cf33e89758",
  "Name": "薛莹",
  "Description": "薛莹，文宗时人，《洞庭诗集》一卷。今存十首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "中秋月",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "三十六旬盈复缺，",
        "百年堪喜又堪伤。",
        "劝君莫惜登楼望，",
        "云放婵娟不久长。"
      ]
    },
    {
      "_id": null,
      "Name": "十日菊",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五律",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "昨日尊前折，",
        "万人酣晓香。",
        "今朝篱下见，",
        "满地委残阳。",
        "得失片时痛，",
        "荣枯一岁伤。",
        "未将同腐草，",
        "犹更有重霜。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "单棹横疏雨，",
        "江滩秋泊时。",
        "花留身住越，",
        "月递梦还秦。"
      ]
    },
    {
      "_id": null,
      "Name": "宿东岩寺晓起",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五律",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "野寺寒塘晓，",
        "游人一梦分。",
        "钟残数树月，",
        "僧起半岩云。",
        "宿鸟惊初见，",
        "幽泉落不闻。",
        "吟余凭前槛，",
        "红叶下纷纷。"
      ]
    },
    {
      "_id": null,
      "Name": "宿仙都观阴王二君修道处",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五律",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "十载别仙峰，",
        "峰前千古踪。",
        "阴王修道处，",
        "云雪满高松。",
        "洞口风雷异，",
        "池心星汉重。",
        "明朝下山去，",
        "片月落残钟。"
      ]
    },
    {
      "_id": null,
      "Name": "寄旧山隐侣",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "旧山诸隐沦，",
        "身在苦无身。",
        "莫锁白云路，",
        "白云多误人。"
      ]
    },
    {
      "_id": null,
      "Name": "江山闲望",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "渺渺无穷尽，",
        "风涛几日平。",
        "年光与人事，",
        "东去一声声。"
      ]
    },
    {
      "_id": null,
      "Name": "秋日湖上",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "落日五湖游，",
        "烟波处处愁。",
        "浮沈千古事，",
        "谁与问东流?"
      ]
    },
    {
      "_id": null,
      "Name": "秋晚同友人闲步",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五律",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "藉草与行莎，",
        "相看日未斜。",
        "断崖分鸟道，",
        "疏树见人家。",
        "望远临孤石，",
        "吟余落片霞。",
        "野情看不足，",
        "归路思犹赊。"
      ]
    },
    {
      "_id": null,
      "Name": "羡僧",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "处世曾无著，",
        "生前事尽非。",
        "一瓶兼一衲，",
        "南北去如归。"
      ]
    },
    {
      "_id": null,
      "Name": "访武陵道者不遇",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "花发鸟仍啼，",
        "行行路欲迷。",
        "二真无问处，",
        "虚度武陵溪。"
      ]
    },
    {
      "_id": null,
      "Name": "锦",
      "PoetId": "bce550dc28724ac09f9b84cf33e89758",
      "PoetName": "薛莹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "薛莹"
      ],
      "Contents": [
        "轧轧弄寒机，",
        "功多力渐微。",
        "惟忧机上锦，",
        "不称舞人衣。"
      ]
    }
  ]
}
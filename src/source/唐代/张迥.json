    {
      "_id": null,
      "Name": "寄远",
      "PoetId": "41017f8a6c9d45e2998e5d5efa9c1f49",
      "PoetName": "张迥",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张迥"
      ],
      "Contents": [
        "锦字凭谁达，",
        "闲庭草又枯。",
        "夜长灯影灭，",
        "天远雁声孤。",
        "蝉鬓凋将尽，",
        "虬髯白也无。",
        "几回愁不语，",
        "因看朔方图。"
      ]
    }
  ]
}
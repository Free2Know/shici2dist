      "Tags": [
        "唐代",
        "贺知章"
      ],
      "Contents": [
        "稽山云雾郁嵯峨，",
        "镜水无风也自波。",
        "莫言春度芳菲尽，",
        "别有中流采芰荷。"
      ]
    },
    {
      "_id": null,
      "Name": "雍和",
      "PoetId": "34fdb8934ea54b26b25bbafaf4f2d405",
      "PoetName": "贺知章",
      "Form": "未知",
      "Tags": [
        "唐代",
        "贺知章"
      ],
      "Contents": [
        "夙夜宥密，",
        "不敢宁宴。",
        "五齐既陈，",
        "八音在县。",
        "粢盛以洁，",
        "房俎斯荐。",
        "惟德惟馨，",
        "尚兹克遍。"
      ]
    },
    {
      "_id": null,
      "Name": "顺和",
      "PoetId": "34fdb8934ea54b26b25bbafaf4f2d405",
      "PoetName": "贺知章",
      "Form": "五律",
      "Tags": [
        "唐代",
        "贺知章"
      ],
      "Contents": [
        "至哉含柔德，",
        "万物资以生。",
        "常顺称厚载，",
        "流谦通变盈。",
        "圣心事能察，",
        "增广陈厥诚。",
        "黄祗俨如在，",
        "泰折俟咸亨。"
      ]
    },
    {
      "_id": null,
      "Name": "题袁氏别业",
      "PoetId": "34fdb8934ea54b26b25bbafaf4f2d405",
      "PoetName": "贺知章",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "贺知章"
      ],
      "Contents": [
        "主人不相识，",
        "偶坐为林泉。",
        "莫漫愁沽酒，",
        "囊中自有钱。"
      ]
    }
  ]

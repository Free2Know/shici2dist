  "Poems": [
    {
      "_id": null,
      "Name": "和九月九日登慈恩寺浮图应制",
      "PoetId": "08168bc3ba4340a99740d229807be2b8",
      "PoetName": "赵彦伯",
      "Form": "五律",
      "Tags": [
        "唐代",
        "赵彦伯"
      ],
      "Contents": [
        "出豫垂佳节，",
        "凭高陟梵宫。",
        "皇心满尘界，",
        "佛迹现虚空。",
        "日月宜长寿，",
        "天人得大通。",
        "喜闻题宝偈，",
        "受记莫由同。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和九日幸临渭亭登高应制得花字",
      "PoetId": "08168bc3ba4340a99740d229807be2b8",
      "PoetName": "赵彦伯",
      "Form": "五律",
      "Tags": [
        "唐代",
        "赵彦伯"
      ],
      "Contents": [
        "九日报仙家，",
        "三秋转岁华。",
        "呼鹰下鸟路，",
        "戏马出龙沙。",
        "簪挂丹萸蕊，",
        "杯浮紫菊花。",
        "所愿同微物，",
        "年年共辟邪。"
      ]
    }
  ]
}
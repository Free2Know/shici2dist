  "Poems": [
    {
      "_id": null,
      "Name": "古意",
      "PoetId": "7518c21f090b4ba9a2b621cc9c7d3cf2",
      "PoetName": "阎宽",
      "Form": "未知",
      "Tags": [
        "唐代",
        "阎宽"
      ],
      "Contents": [
        "庭树发华滋，",
        "瑶草复葳蕤。",
        "好鸟飞相从，",
        "愁人深此时。",
        "天中有灵匹，",
        "日夕嚬蛾眉。",
        "愿逐飘风花，",
        "千里入遥帷。",
        "心逝爱不见，",
        "空歌悲莫悲。"
      ]
    },
    {
      "_id": null,
      "Name": "春宵览月",
      "PoetId": "7518c21f090b4ba9a2b621cc9c7d3cf2",
      "PoetName": "阎宽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "阎宽"
      ],
      "Contents": [
        "月生东荒外，",
        "天云收夕阴。",
        "爱见澄清景，",
        "象吾虚白心。",
        "耳目静无哗，",
        "神超道性深。",
        "乘兴得至乐，",
        "寓言因永吟。"
      ]
    },
    {
      "_id": null,
      "Name": "晓入宜都渚",
      "PoetId": "7518c21f090b4ba9a2b621cc9c7d3cf2",
      "PoetName": "阎宽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "阎宽"
      ],
      "Contents": [
        "问俗周楚甸，",
        "川行眇江浔。",
        "兴随晓光发，",
        "道会春言深。",
        "回眺佳气象，",
        "远怀得山林。",
        "伫应舟楫用，",
        "曷务归闲心。"
      ]
    },
    {
      "_id": null,
      "Name": "松滋江北阻风",
      "PoetId": "7518c21f090b4ba9a2b621cc9c7d3cf2",
      "PoetName": "阎宽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "阎宽"
      ],
      "Contents": [
        "江风久未歇，",
        "山雨复相仍。",
        "巨浪天涯起，",
        "馀寒川上凝。",
        "忧人劳夕惕，",
        "乡事惫晨兴。",
        "远听知音骇，",
        "诚哉不可陵。"
      ]
    },
    {
      "_id": null,
      "Name": "秋怀",
      "PoetId": "7518c21f090b4ba9a2b621cc9c7d3cf2",
      "PoetName": "阎宽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "阎宽"
      ],
      "Contents": [
        "下帷长日尽，",
        "虚馆早凉生。",
        "芳草犹未荐，",
        "如何蜻蛚鸣。",
        "秋风已振衣，",
        "客去何时归。",
        "为问当途者，",
        "宁知心有违。"
      ]
    }
  ]
}
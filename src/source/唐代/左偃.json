  "Poems": [
    {
      "_id": null,
      "Name": "句",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "胡笳闻欲死，",
        "汉月望还生。",
        "日华离碧海，",
        "云影散青霄。"
      ]
    },
    {
      "_id": null,
      "Name": "寄庐山白上人",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五律",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "潦倒门前客，",
        "闲眠岁又残。",
        "连天数峰雪，",
        "终日与谁看。",
        "万丈高松古，",
        "千寻落水寒。",
        "仍闻有新作，",
        "懒寄入长安。"
      ]
    },
    {
      "_id": null,
      "Name": "寄鉴上人",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "一从携手阻戈鋋，",
        "屈指如今已十年。",
        "长记二林同宿夜，",
        "竹斋听雨共忘眠。"
      ]
    },
    {
      "_id": null,
      "Name": "寄韩侍郎",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "七律",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "谋身谋隐两无成，",
        "拙计深惭负耦耕。",
        "渐老可堪怀故国，",
        "多愁翻觉厌浮生。",
        "言诗幸遇明公许，",
        "守朴甘遭俗者轻。",
        "今日况闻搜草泽，",
        "独悲憔悴卧升平。"
      ]
    },
    {
      "_id": null,
      "Name": "汉宫词",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "寒烛照清夜，",
        "笙歌隔藓墙。",
        "一从飞燕入，",
        "便不见君王。"
      ]
    },
    {
      "_id": null,
      "Name": "江上晚泊",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "寒云淡淡天无际，",
        "片帆落处沙鸥起。",
        "水阔风高日复斜，",
        "扁舟独宿芦花里。"
      ]
    },
    {
      "_id": null,
      "Name": "秋晚野望",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "倚筇聊一望，",
        "何处是秦川。",
        "草色初晴路，",
        "鸿声欲暮天。"
      ]
    },
    {
      "_id": null,
      "Name": "言怀别同志",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "渐老将谁托，",
        "劳生每自惭。",
        "何当重携手，",
        "风雨满江南。"
      ]
    },
    {
      "_id": null,
      "Name": "送人",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "一茎两茎华发生，",
        "千枝万枝梨花白。",
        "春色江南独未归，",
        "今朝又送还乡客。"
      ]
    },
    {
      "_id": null,
      "Name": "送君去",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "关河月未晓，",
        "行子心已急。",
        "佳人无一言，",
        "独背残灯泣。"
      ]
    },
    {
      "_id": null,
      "Name": "郊原晚望怀李秘书",
      "PoetId": "27cbb5ecd58743829337e9b1f90c41d8",
      "PoetName": "左偃",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "左偃"
      ],
      "Contents": [
        "归鸟入平野，",
        "寒云在远村。",
        "徒令睇望久，",
        "不复见王孙。"
      ]
    }
  ]
}
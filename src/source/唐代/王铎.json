  "Poems": [
    {
      "_id": null,
      "Name": "和于兴宗登越王楼诗",
      "PoetId": "49979354a8654bd2a9a33c61215ee0b9",
      "PoetName": "王铎",
      "Form": "五律",
      "Tags": [
        "唐代",
        "王铎"
      ],
      "Contents": [
        "谢脁题诗处，",
        "危楼压郡城。",
        "雨余江水碧，",
        "云断雪山明。",
        "锦绣来仙境，",
        "风光入帝京。",
        "恨无青玉案，",
        "何以报高情。"
      ]
    },
    {
      "_id": null,
      "Name": "罢都统守镇滑州作",
      "PoetId": "49979354a8654bd2a9a33c61215ee0b9",
      "PoetName": "王铎",
      "Form": "未知",
      "Tags": [
        "唐代",
        "王铎"
      ],
      "Contents": [
        "用军何事敢迁延，",
        "恩重才轻分使然。",
        "黜诏已闻来阙下，",
        "檄书犹未遍军前。",
        "腰间尽解苏秦印，",
        "波上虚迎范蠡船。",
        "正会星辰扶北极，",
        "却驱戈甲镇南燕。",
        "三尘上相逢明主，",
        "九合诸侯愧昔贤。",
        "看却中兴扶大业，",
        "杀身无路好归田。"
      ]
    },
    {
      "_id": null,
      "Name": "谒梓潼张恶子庙",
      "PoetId": "49979354a8654bd2a9a33c61215ee0b9",
      "PoetName": "王铎",
      "Form": "七律",
      "Tags": [
        "唐代",
        "王铎"
      ],
      "Contents": [
        "盛唐圣主解青萍，",
        "欲振新封济顺名。",
        "夜雨龙抛三尺匣，",
        "春云凤入九重城。",
        "剑门喜气随雷动，",
        "玉垒韶光待贼平。",
        "惟报关东诸将相，",
        "柱天功业赖阴兵。"
      ]
    }
  ]
}
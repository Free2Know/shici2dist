  "Poems": [
    {
      "_id": null,
      "Name": "绣龟形诗",
      "PoetId": "b4441eb3ff46446ea717e8ee3a197c16",
      "PoetName": "侯氏",
      "Form": "七律",
      "Tags": [
        "唐代",
        "侯氏"
      ],
      "Contents": [
        "暌离已是十秋强，",
        "对镜那堪重理妆。",
        "闻雁几回修尺素，",
        "见霜先为制衣裳。",
        "开箱叠练先垂泪，",
        "拂杵调砧更断肠。",
        "绣作龟形献天子，",
        "愿教征客早还乡。"
      ]
    }
  ]
}
{
  "_id": "e4cb64fb14544eafb6ae0dc60a576ba6",
  "Name": "柳中庸",
  "Description": "柳中庸，名淡，以字行。河东人，宗元之族，御史并之弟也，与弟中行皆有文名。萧颖士以女妻之，仕为洪府户曹。诗十三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "丁评事宅秋夜宴集",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "翠幕卷回廊，",
        "银灯开后堂。",
        "风惊拥砌叶，",
        "月冷满庭霜。",
        "绮席人将醉，",
        "繁弦夜未央。",
        "共怜今促席，",
        "谁道客愁长。"
      ]
    },
    {
      "_id": null,
      "Name": "凉州曲二首",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "七律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "关山万里远征人，",
        "一望关山泪满巾。",
        "青海戍头空有月，",
        "黄沙碛里本无春。",
        "高槛连天望武威，",
        "穷阴拂地戍金微。",
        "九城弦管声遥发，",
        "一夜关山雪满飞。"
      ]
    },
    {
      "_id": null,
      "Name": "听筝",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "七律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "抽弦促柱听秦筝，",
        "无限秦人悲怨声。",
        "似逐春风知柳态，",
        "如随啼鸟识花情。",
        "谁家独夜愁灯影，",
        "何处空楼思月明。",
        "更入几重离别恨，",
        "江南岐路洛阳城。"
      ]
    },
    {
      "_id": null,
      "Name": "夜渡江",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "夜渚带浮烟，",
        "苍茫晦远天。",
        "舟轻不觉动，",
        "缆急始知牵。",
        "听笛遥寻岸，",
        "闻香暗识莲。",
        "唯看去帆影，",
        "常恐客心悬。"
      ]
    },
    {
      "_id": null,
      "Name": "寒食戏赠",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "春暮越江边，",
        "春阴寒食天。",
        "杏花香麦粥，",
        "柳絮伴秋千。",
        "酒是芳菲节，",
        "人当桃李年。",
        "不知何处恨，",
        "已解入筝弦。"
      ]
    },
    {
      "_id": null,
      "Name": "幽院早春",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "草短花初拆，",
        "苔青柳半黄。",
        "隔帘春雨细，",
        "高枕晓莺长。",
        "无事含闲梦，",
        "多情识异香。",
        "欲寻苏小小，",
        "何处觅钱塘。"
      ]
    },
    {
      "_id": null,
      "Name": "征人怨",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "岁岁金河复玉关，",
        "朝朝马策与刀环。",
        "三春白雪归青冢，",
        "万里黄河绕黑山。"
      ]
    },
    {
      "_id": null,
      "Name": "扬子途中",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "未知",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "楚塞望苍然，",
        "寒林古戍边。",
        "秋风人渡水，",
        "落日雁飞天。",
        "第二百五十八卷"
      ]
    },
    {
      "_id": null,
      "Name": "春思赠人",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "红粉当三五，",
        "青娥艳一双。",
        "绮罗回锦陌，",
        "弦管入花江。",
        "落雁惊金弹，",
        "抛杯泻玉缸。",
        "谁知褐衣客，",
        "憔悴在书窗。"
      ]
    },
    {
      "_id": null,
      "Name": "江行",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "繁阴乍隐洲，",
        "落叶初飞浦。",
        "萧萧楚客帆，",
        "暮入寒江雨。"
      ]
    },
    {
      "_id": null,
      "Name": "河阳桥送别",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "黄河流出有浮桥，",
        "晋国归人此路遥。",
        "若傍阑干千里望，",
        "北风驱马雨萧萧。"
      ]
    },
    {
      "_id": null,
      "Name": "秋怨",
      "PoetId": "e4cb64fb14544eafb6ae0dc60a576ba6",
      "PoetName": "柳中庸",
      "Form": "五律",
      "Tags": [
        "唐代",
        "柳中庸"
      ],
      "Contents": [
        "玉树起凉烟，",
        "凝情一叶前。",
        "别离伤晓镜，",
        "摇落思秋弦。",
        "汉垒关山月，",
        "胡笳塞北天。",
        "不知肠断梦，",
        "空绕几山川。"
      ]
    }
  ]
}
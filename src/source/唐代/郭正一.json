  "Poems": [
    {
      "_id": null,
      "Name": "奉和太子纳妃太平公主出降",
      "PoetId": "f4d509fb53534ff68d926e7e32aed908",
      "PoetName": "郭正一",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郭正一"
      ],
      "Contents": [
        "桂宫初服冕，",
        "兰掖早升笄。",
        "礼盛亲迎晋，",
        "声芬出降齐。",
        "金龟开瑞钮，",
        "宝翟上仙袿。",
        "转扇承宵月，",
        "扬旌照夕蜺。"
      ]
    }
  ]

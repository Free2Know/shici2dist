  "Poems": [
    {
      "_id": null,
      "Name": "三月三日宴王明府山亭",
      "PoetId": "9bced7eb385e4570b1bfd9ac2fe7c78a",
      "PoetName": "韩仲宣",
      "Form": "未知",
      "Tags": [
        "唐代",
        "韩仲宣"
      ],
      "Contents": [
        "河滨上巳，",
        "洛汭春华。",
        "碧池涵日，",
        "翠斝澄霞。",
        "沟垂细柳，",
        "岸拥平沙。",
        "歌莺响树，",
        "舞蝶惊花。",
        "云浮宝马，",
        "水韵香车。",
        "熟记行乐，",
        "淹留景斜。"
      ]
    },
    {
      "_id": null,
      "Name": "上元夜效小庾体",
      "PoetId": "9bced7eb385e4570b1bfd9ac2fe7c78a",
      "PoetName": "韩仲宣",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韩仲宣"
      ],
      "Contents": [
        "他乡月夜人，",
        "相伴看灯轮。",
        "光随九华出，",
        "影共百枝新。",
        "歌钟盛北里，",
        "车马沸南邻。",
        "今宵何处好，",
        "惟有洛城春。"
      ]
    },
    {
      "_id": null,
      "Name": "晦日宴高氏林亭",
      "PoetId": "9bced7eb385e4570b1bfd9ac2fe7c78a",
      "PoetName": "韩仲宣",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韩仲宣"
      ],
      "Contents": [
        "欲知行有乐，",
        "芳尊对物华。",
        "地接安仁县，",
        "园是季伦家。",
        "柳处云疑叶，",
        "梅间雪似花。",
        "日落归途远，",
        "留兴伴烟霞。"
      ]
    },
    {
      "_id": null,
      "Name": "晦日重宴",
      "PoetId": "9bced7eb385e4570b1bfd9ac2fe7c78a",
      "PoetName": "韩仲宣",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韩仲宣"
      ],
      "Contents": [
        "凤苑先吹晚，",
        "龙楼夕照披。",
        "陈遵已投辖，",
        "山公正坐池。",
        "落日催金奏，",
        "飞霞送玉卮。",
        "此时陪绮席，",
        "不醉欲何为。"
      ]
    }
  ]
}
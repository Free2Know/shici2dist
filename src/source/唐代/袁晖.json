  "Poems": [
    {
      "_id": null,
      "Name": "七月闺情",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "七月坐凉宵，",
        "金波满丽谯。",
        "容华芳意改，",
        "枕席怨情饶。",
        "锦字沾愁泪，",
        "罗裙缓细腰。",
        "不如银汉女，",
        "岁岁鹊成桥。"
      ]
    },
    {
      "_id": null,
      "Name": "三月闺情",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "三月春将尽，",
        "空房妾独居。",
        "蛾眉愁自结，",
        "鬓发没情梳。",
        "□□□□□，",
        "□□□□□。",
        "□□□□□，",
        "□□□□□。"
      ]
    },
    {
      "_id": null,
      "Name": "二月闺情",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "二月韶光好，",
        "春风香气多。",
        "园中花巧笑，",
        "林里鸟能歌。",
        "有恨离琴瑟，",
        "无情著绮罗。",
        "更听春燕语，",
        "妾亦不如他。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制答张说扈从南出雀鼠谷之作",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "未知",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "魏国山河险，",
        "周王警跸回。",
        "九旗云际出，",
        "万骑谷中来。",
        "石路行将尽，",
        "烟郊望忽开。",
        "赏矜垂柳报，",
        "春畏落花催。",
        "兴逸横汾什，",
        "恩褒作颂才。",
        "小臣瞻日月，",
        "延首咏康哉。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制送张尚书巡边",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "未知",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "出师宣九命，",
        "分阃用三台。",
        "始应幕中画，",
        "言从天上来。",
        "丹青不独任，",
        "韬略遂双该。",
        "坐见威棱洽，",
        "弥彰事业恢。",
        "旌旗晓云送，",
        "鞞鼓朔风催。",
        "虏气消残月，",
        "边声韵落梅。",
        "羽书雄北地，",
        "龙漠寝南垓。",
        "宠战黄金尽，",
        "输诚白日回。",
        "离章宸翰发，",
        "祖宴国门开。",
        "欲识恩华盛，",
        "平生文武材。"
      ]
    },
    {
      "_id": null,
      "Name": "正月闺情",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "正月金闺里，",
        "微风绣户间。",
        "晓魂怜别梦，",
        "春思逼啼颜。",
        "绕砌梅堪折，",
        "当轩树未攀。",
        "岁华庭北上，",
        "何日度阳关。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·长门怨",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "早知君爱歇，",
        "本自无萦妒。",
        "谁使恩情深，",
        "今来反相误。",
        "愁眠罗帐晓，",
        "泣坐金闺暮。",
        "独有梦中魂，",
        "犹言意如故。"
      ]
    },
    {
      "_id": null,
      "Name": "铜雀妓",
      "PoetId": "a2585d4c32104b6ebf610ab4f98a4c29",
      "PoetName": "袁晖",
      "Form": "五律",
      "Tags": [
        "唐代",
        "袁晖"
      ],
      "Contents": [
        "君爱本相饶，",
        "从来似舞腰。",
        "那堪攀玉座，",
        "肠断望陵朝。",
        "怨著情无主，",
        "哀凝曲不调。",
        "况临松日暮，",
        "悲吹坐萧萧。"
      ]
    }
  ]
}
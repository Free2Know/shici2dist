  "Poems": [
    {
      "_id": null,
      "Name": "小洞庭洄源亭宴四郡太守诗",
      "PoetId": "d4d193e9ca104615b8ad65705d79963d",
      "PoetName": "苏源明",
      "Form": "未知",
      "Tags": [
        "唐代",
        "苏源明"
      ],
      "Contents": [
        "小洞庭兮牵方舟，",
        "风袅袅兮离平流。",
        "牵方舟兮小洞庭，",
        "云微微兮连绝陉。",
        "层澜壮兮缅以没，",
        "重岩转兮超以忽。",
        "冯夷逝兮护轻桡，",
        "蛟龙行兮落增潮。",
        "泊中湖兮澹而闲，",
        "并曲溆兮怅而还。",
        "适予手兮非予期，",
        "将解袂兮丛予思。",
        "尚君子兮寿厥身，",
        "承明主兮忧斯人。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夜小洞庭离宴诗",
      "PoetId": "d4d193e9ca104615b8ad65705d79963d",
      "PoetName": "苏源明",
      "Form": "七律",
      "Tags": [
        "唐代",
        "苏源明"
      ],
      "Contents": [
        "浮涨湖兮莽迢遥，",
        "川后礼兮扈予桡。",
        "横增沃兮蓬仙延，",
        "川后福兮易予舷。",
        "月澄凝兮明空波，",
        "星磊落兮耿秋河。",
        "夜既良兮酒且多，",
        "乐方作兮奈别何。"
      ]
    }
  ]
}
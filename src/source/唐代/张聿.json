  "Poems": [
    {
      "_id": null,
      "Name": "余瑞麦",
      "PoetId": "7b56cb27111b44cbb23f8612d7740549",
      "PoetName": "张聿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张聿"
      ],
      "Contents": [
        "瑞麦生尧日，",
        "芃芃雨露偏。",
        "两岐分更合，",
        "异亩颖仍连。",
        "冀获明王庆，",
        "宁唯太守贤。",
        "仁风吹靡靡，",
        "甘雨长芊芊。",
        "圣德应多稔，",
        "皇家配有年。",
        "已闻天下泰，",
        "谁为济西田。"
      ]
    },
    {
      "_id": null,
      "Name": "剑化为龙",
      "PoetId": "7b56cb27111b44cbb23f8612d7740549",
      "PoetName": "张聿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张聿"
      ],
      "Contents": [
        "古剑诚难屈，",
        "精明有所从。",
        "沉埋方出狱，",
        "合会却成龙。",
        "牛斗光初歇，",
        "蜿蜒气渐浓。",
        "云涛透百丈，",
        "水府跃千重。",
        "拖尾迷莲锷，",
        "张鳞露锦容。",
        "至今沙岸下，",
        "谁得睹玄踪。"
      ]
    },
    {
      "_id": null,
      "Name": "圆灵水镜",
      "PoetId": "7b56cb27111b44cbb23f8612d7740549",
      "PoetName": "张聿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张聿"
      ],
      "Contents": [
        "凤池开月镜，",
        "清莹写寥天。",
        "影散微波上，",
        "光含片玉悬。",
        "菱花凝泛滟，",
        "桂树映清鲜。",
        "乐广披云日，",
        "山涛卷雾年。",
        "濯缨何处去，",
        "鉴物自堪妍。",
        "回首看云液，",
        "蟾蜍势正圆。"
      ]
    },
    {
      "_id": null,
      "Name": "景风扇物",
      "PoetId": "7b56cb27111b44cbb23f8612d7740549",
      "PoetName": "张聿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张聿"
      ],
      "Contents": [
        "何处青蘋末，",
        "呈祥起远空。",
        "晓来摇草树，",
        "轻度净尘蒙。",
        "水上微波动，",
        "林前媚景通。",
        "寥天鸣万籁，",
        "兰径长幽丛。",
        "渐飏抟扶势，",
        "应从橐籥功。",
        "开襟若有日，",
        "愿睹大王风。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得夏首犹清和",
      "PoetId": "7b56cb27111b44cbb23f8612d7740549",
      "PoetName": "张聿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张聿"
      ],
      "Contents": [
        "早夏宜春景，",
        "和光起禁城。",
        "祝融将御节，",
        "炎帝启朱明。",
        "日送残花晚，",
        "风过御苑清。",
        "郊原浮麦气，",
        "池沼发荷英。",
        "树影临山动，",
        "禽飞入汉轻。",
        "幸逢尧禹化，",
        "全胜谷中情。"
      ]
    }
  ]
}
{
  "_id": "44a54c94a113421883a88ed889334414",
  "Name": "董思恭",
  "Description": "苏州吴人。高宗时官中书舍人，初为右史，后知考功举，坐事流死岭表。所著篇咏，为诗所重。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "咏云",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "帝乡白云起，",
        "飞盖上天衢。",
        "带月绮罗映，",
        "从风枝叶敷。",
        "参差过层阁，",
        "倏忽下苍梧。",
        "因风望既远，",
        "安得久踟蹰。"
      ]
    },
    {
      "_id": null,
      "Name": "咏日",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "沧海十枝晖，",
        "悬圃重轮庆。",
        "蕣华发晨楹，",
        "菱彩翻朝镜。",
        "忽遇惊风飘，",
        "自有浮云映。",
        "更也人皆仰，",
        "无待挥戈正。"
      ]
    },
    {
      "_id": null,
      "Name": "咏星",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "历历东井舍，",
        "昭昭右掖垣。",
        "云际龙文出，",
        "池中鸟色翻。",
        "流辉下月路，",
        "坠影入河源。",
        "方知颍川集，",
        "别有太丘门。"
      ]
    },
    {
      "_id": null,
      "Name": "咏月",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "北堂未安寝，",
        "西园聊骋望。",
        "玉户照罗帏，",
        "珠轩明绮障。",
        "别客长安道，",
        "思妇高楼上。",
        "所愿君莫违，",
        "清风时可访。"
      ]
    },
    {
      "_id": null,
      "Name": "咏李",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "盘根植瀛渚，",
        "交干横倚天。",
        "舒华光四海，",
        "卷叶荫山川。"
      ]
    },
    {
      "_id": null,
      "Name": "咏桃",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "禁苑春光丽，",
        "花蹊几树装。",
        "缀条深浅色，",
        "点露参差光。",
        "向日分千笑，",
        "迎风共一香。",
        "如何仙岭侧，",
        "独秀隐遥芳。"
      ]
    },
    {
      "_id": null,
      "Name": "咏虹",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "春暮萍生早，",
        "日落雨飞馀。",
        "横彩分长汉，",
        "倒色媚清渠。",
        "梁前朝影出，",
        "桥上晚光舒。",
        "愿逐旌旗转，",
        "飘飘侍直庐。"
      ]
    },
    {
      "_id": null,
      "Name": "咏雪",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "天山飞雪度，",
        "言是浇花朝。",
        "惜哉不我与，",
        "萧索从风飘。",
        "鲜洁凌纨素，",
        "纷糅下枝条。",
        "良时竟何在，",
        "坐见容华销。"
      ]
    },
    {
      "_id": null,
      "Name": "咏雾",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "苍山寂已暮，",
        "翠观黯将沉。",
        "终南晨豹隐，",
        "巫峡夜猿吟。",
        "天寒气不歇，",
        "景晦色方深。",
        "待访公超市，",
        "将予赴华阴。"
      ]
    },
    {
      "_id": null,
      "Name": "咏露",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "夜色凝仙掌，",
        "晨甘下帝庭。",
        "不觉九秋至，",
        "远向三危零。",
        "芦渚花初白，",
        "葵园叶尚清。",
        "晞阳一洒惠，",
        "方愿益沧溟。"
      ]
    },
    {
      "_id": null,
      "Name": "咏风",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "五律",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "萧萧度阊阖，",
        "习习下庭闱。",
        "花蝶自飘舞，",
        "兰蕙生光辉。",
        "相乌正举翼，",
        "退鹢已惊飞。",
        "方从列子御，",
        "更逐浮云归。"
      ]
    },
    {
      "_id": null,
      "Name": "感怀",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "野郊怆新别，",
        "河桥非旧饯。",
        "惨日映峰沉，",
        "愁云随盖转。",
        "哀笳时断续，",
        "悲旌乍舒卷。",
        "望望情何极，",
        "浪浪泪空泫。",
        "无复昔时人，",
        "芳春共谁遣。"
      ]
    },
    {
      "_id": null,
      "Name": "昭君怨二首",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "词",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "新年犹尚小，",
        "那堪远聘秦。",
        "裾衫沾马汗，",
        "眉黛染胡尘。",
        "举眼无相识，",
        "路逢皆异人。",
        "唯有梅将李，",
        "犹带故乡春。",
        "琵琶马上弹，",
        "行路曲中难。",
        "汉月正南远，",
        "燕山直北寒。",
        "髻鬟风拂乱，",
        "眉黛雪沾残。",
        "斟酌红颜改，",
        "徒劳握镜看。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·三妇艳诗",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "大妇裁纨素，",
        "中妇弄明珰。",
        "小妇多姿态，",
        "登楼红粉妆。",
        "丈人且安坐，",
        "初日渐流光。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·王昭君",
      "PoetId": "44a54c94a113421883a88ed889334414",
      "PoetName": "董思恭",
      "Form": "未知",
      "Tags": [
        "唐代",
        "董思恭"
      ],
      "Contents": [
        "琵琶马上弹，",
        "行路曲中难。",
        "汉月正南远，",
        "燕山直北寒。",
        "髻鬟风拂散，",
        "眉黛雪沾第二十卷"
      ]
    }
  ]
}
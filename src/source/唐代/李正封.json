  "Poems": [
    {
      "_id": null,
      "Name": "咏露",
      "PoetId": "6df81a99633d4cbca5a384932fa790c8",
      "PoetName": "李正封",
      "Form": "未知",
      "Tags": [
        "唐代",
        "李正封"
      ],
      "Contents": [
        "霏霏灵液重，",
        "云表无声落。",
        "沾树急玄蝉，",
        "洒池栖皓鹤。",
        "流尘清远陌，",
        "飞月澄高阁。",
        "宵润玉堂帘，",
        "曙寒金井索。",
        "佳人比珠泪，",
        "坐感红绡薄。"
      ]
    },
    {
      "_id": null,
      "Name": "夏游招隐寺暴雨晚晴",
      "PoetId": "6df81a99633d4cbca5a384932fa790c8",
      "PoetName": "李正封",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李正封"
      ],
      "Contents": [
        "竹柏风雨过，",
        "萧疏台殿凉。",
        "石渠写奔溜，",
        "金刹照颓阳。",
        "鹤飞岩烟碧，",
        "鹿鸣涧草香。",
        "山僧引清梵，",
        "幡盖绕回廊。"
      ]
    },
    {
      "_id": null,
      "Name": "洛阳清明日雨霁",
      "PoetId": "6df81a99633d4cbca5a384932fa790c8",
      "PoetName": "李正封",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李正封"
      ],
      "Contents": [
        "晓日清明天，",
        "夜来嵩少雨。",
        "千门尚烟火，",
        "九陌无尘土。",
        "酒绿河桥春，",
        "漏闲宫殿午。",
        "游人恋芳草，",
        "半犯严城鼓。"
      ]
    },
    {
      "_id": null,
      "Name": "贡院楼北新栽小松",
      "PoetId": "6df81a99633d4cbca5a384932fa790c8",
      "PoetName": "李正封",
      "Form": "未知",
      "Tags": [
        "唐代",
        "李正封"
      ],
      "Contents": [
        "青苍初得地，",
        "华省植来新。",
        "尚带山中色，",
        "犹含洞里春。",
        "近楼依北户，",
        "隐砌净游尘。",
        "鹤寿应成盖，",
        "龙形未有鳞。",
        "为梁资大厦，",
        "封爵耻嬴秦。",
        "幸此观光日，",
        "清风屡得亲。"
      ]
    }
  ]
}
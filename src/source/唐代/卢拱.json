  "Poems": [
    {
      "_id": null,
      "Name": "中元日观法事",
      "PoetId": "0374785080734940aba679fcdc985dbf",
      "PoetName": "卢拱",
      "Form": "未知",
      "Tags": [
        "唐代",
        "卢拱"
      ],
      "Contents": [
        "西孟逢秋序，",
        "三元得气中。",
        "云迎碧落步，",
        "章奏玉皇宫。",
        "坛滴槐花露，",
        "香飘柏子风。",
        "羽衣凌缥缈，",
        "瑶毂转虚空。",
        "久慕餐霞客，",
        "常悲习蓼虫。",
        "青囊如可授，",
        "从此访鸿蒙。"
      ]
    },
    {
      "_id": null,
      "Name": "江亭寓目",
      "PoetId": "0374785080734940aba679fcdc985dbf",
      "PoetName": "卢拱",
      "Form": "五律",
      "Tags": [
        "唐代",
        "卢拱"
      ],
      "Contents": [
        "江郭带林峦，",
        "津亭倚槛看。",
        "水风蒲叶战，",
        "沙雨鹭鸶寒。",
        "晚木初凋柳，",
        "秋丛欲败兰。",
        "哀猿自相叫，",
        "乡泪好无端。"
      ]
    }
  ]
}
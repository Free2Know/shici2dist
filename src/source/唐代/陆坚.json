    {
      "_id": null,
      "Name": "奉和圣制送张说上集贤学士赐宴",
      "PoetId": "f5023c2c8f614d58a5b8b54e6e867847",
      "PoetName": "陆坚",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陆坚"
      ],
      "Contents": [
        "圣主崇文教，",
        "层霄降德音。",
        "尊贤泽既厚，",
        "式宴宠逾深。",
        "复有夔龙相，",
        "良哉简帝心。",
        "得人惟迈昔，",
        "多士谅推今。",
        "书殿荣光满，",
        "儒门喜气临。",
        "顾惟诚滥吹，",
        "徒此接衣簪。"
      ]
    }
  ]

{
  "_id": "43eb7c338848465d8bdd76c86d1aeb75",
  "Name": "丘丹",
  "Description": "丘丹，苏州嘉兴人，诸暨令，历尚书郎。隐临平山，与韦应物、鲍防、吕渭诸牧守往还。存诗十一首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "和韦使君听江笛送陈侍御",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "离樽闻夜笛，",
        "寥亮入寒城。",
        "月落车马散，",
        "凄恻主人情。"
      ]
    },
    {
      "_id": null,
      "Name": "和韦使君秋夜见寄",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "露滴梧叶鸣，",
        "秋风桂花发。",
        "中有学仙侣，",
        "吹箫弄山月。"
      ]
    },
    {
      "_id": null,
      "Name": "奉使过石门观瀑",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "未知",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "溪上望悬泉，",
        "耿耿云中见。",
        "披榛上岩岫，",
        "峭壁正东面。",
        "千仞泻联珠，",
        "一潭喷飞霰。",
        "嵯潆满山响，",
        "坐觉炎氛变。",
        "照日类虹霓，",
        "从风似绡练。",
        "灵奇既天造，",
        "惜处穷海甸。",
        "吾祖昔登临，",
        "谢公亦游衍。",
        "天程惧淹泊，",
        "下磴空延眷。",
        "千里雷尚闻，",
        "峦回树葱蒨。",
        "此来去贱役，",
        "探讨愧前彦。",
        "永欲洗尘缨，",
        "终当惬此愿。"
      ]
    },
    {
      "_id": null,
      "Name": "奉酬重送归山",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "未知",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "卖药有时至，",
        "自知来往疏。",
        "遽辞池上酌，",
        "新得山中书。",
        "步出芙蓉府，",
        "归乘觳9 车。",
        "猥蒙招隐作，",
        "岂愧班生庐。"
      ]
    },
    {
      "_id": null,
      "Name": "奉酬韦使君送归山之作",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "未知",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "侧闻郡守至，",
        "偶乘黄犊出。",
        "不别桃源人，",
        "一见经累日。",
        "蝉鸣念秋稼，",
        "兰酌动离瑟。",
        "临水降麾幢，",
        "野艇才容膝。",
        "参差碧山路，",
        "目送江帆疾。",
        "涉海得骊珠，",
        "栖梧惭凤质。",
        "愧非郑公里，",
        "归扫蒙笼室。"
      ]
    },
    {
      "_id": null,
      "Name": "奉酬韦苏州使君",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "久作烟霞侣，",
        "暂将簪组亲。",
        "还同褚伯玉，",
        "入馆忝州人。"
      ]
    },
    {
      "_id": null,
      "Name": "状江南·季冬",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "江南季冬月，",
        "红蟹大如ē。",
        "湖水龙为镜，",
        "炉峰气作烟。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夕宿石门馆",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "五律",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "暝从石门宿，",
        "摇落四岩空。",
        "潭月漾山足，",
        "天河泻涧中。",
        "杉松寒似雨，",
        "猿鸟夕惊风。",
        "独卧不成寝，",
        "苍然想谢公。"
      ]
    },
    {
      "_id": null,
      "Name": "经湛长史草堂",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "未知",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "身退谢名累，",
        "道存嘉止足。",
        "设醴降华幡，",
        "挂冠守空谷。",
        "偶寻野外寺，",
        "仰慕贤者躅。",
        "不见昔簪裾，",
        "犹有旧松竹。",
        "烟霞虽异世，",
        "风韵如在瞩。",
        "余即江海上，",
        "归辙青山曲。"
      ]
    },
    {
      "_id": null,
      "Name": "萧山祗园寺",
      "PoetId": "43eb7c338848465d8bdd76c86d1aeb75",
      "PoetName": "丘丹",
      "Form": "未知",
      "Tags": [
        "唐代",
        "丘丹"
      ],
      "Contents": [
        "东晋许徵君，",
        "西方彦上人。",
        "生时犹定见，",
        "悟后了前因。",
        "灵塔多年古，",
        "高僧苦行频。",
        "碑存才记日，",
        "藤老岂知春。",
        "车骑归萧詧，",
        "云林识许询。",
        "千秋不相见，",
        "悟定是吾身。"
      ]
    }
  ]
}
  "Poems": [
    {
      "_id": null,
      "Name": "赋四相诗·中书令汉阳王张柬之",
      "PoetId": "f940e73470fc462ea71cb060e5226690",
      "PoetName": "皇甫澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "皇甫澈"
      ],
      "Contents": [
        "周历革元命，",
        "天步值艰阻。",
        "烈烈张汉阳，",
        "左袒清诸武。",
        "休明神器正，",
        "文物旧仪睹。",
        "南向翊大君，",
        "西宫朝圣母。",
        "茂勋镂钟鼎，",
        "鸿劳食茅土。",
        "至今称五王，",
        "卓立迈万古。"
      ]
    },
    {
      "_id": null,
      "Name": "赋四相诗·中书令钟绍京",
      "PoetId": "f940e73470fc462ea71cb060e5226690",
      "PoetName": "皇甫澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "皇甫澈"
      ],
      "Contents": [
        "景龙仙驾远，",
        "中禁奸衅结。",
        "谋猷叶圣朝，",
        "披鳞奋英节。",
        "青宫阊阖启，",
        "涤秽氛沴灭。",
        "紫气重昭回，",
        "皇天新日月。",
        "从容庙堂上，",
        "肃穆人神悦。",
        "唐元佐命功，",
        "辉焕何烈烈。"
      ]
    },
    {
      "_id": null,
      "Name": "赋四相诗·礼部尚书门下侍郎平章事李岘",
      "PoetId": "f940e73470fc462ea71cb060e5226690",
      "PoetName": "皇甫澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "皇甫澈"
      ],
      "Contents": [
        "时来遇明圣，",
        "道济宁邦国。",
        "猗欤瑚琏器，",
        "竭我股肱力。",
        "进贤黜不肖，",
        "错枉举诸直。",
        "宦官既却坐，",
        "权奸亦移职。",
        "载践每若惊，",
        "三已无愠色。",
        "昭昭垂宪章，",
        "来世实作则。"
      ]
    },
    {
      "_id": null,
      "Name": "赋四相诗·门下侍郎平章事王缙",
      "PoetId": "f940e73470fc462ea71cb060e5226690",
      "PoetName": "皇甫澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "皇甫澈"
      ],
      "Contents": [
        "舟楫济巨川，",
        "山河资秀气。",
        "服膺究儒业，",
        "屈指取高位。",
        "北征戮骄悍，",
        "东守辑携贰。",
        "论道致巍巍，",
        "持衡无事事。",
        "知己不易遇，",
        "宰相固有器。",
        "瞻事华壁中，",
        "来者谁其嗣。"
      ]
    }
  ]
}
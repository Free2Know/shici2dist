{
  "_id": "9da3344b806e43dcb39e92ca67d90aa4",
  "Name": "杨衡",
  "Description": "杨衡，字仲师，吴兴人。初与符载、崔群、宋济隐庐山，号山中四友。后登第，官至大理评事。诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "九日",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "黄菊紫菊傍篱落，",
        "摘菊泛酒爱芳新。",
        "不堪今日望乡意，",
        "强插茱萸随众人。"
      ]
    },
    {
      "_id": null,
      "Name": "九日陪樊尚书龙山宴集",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "词",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "孟嘉从宴地，",
        "千乘复登临。",
        "缘危陟高步，",
        "凭旷写幽襟。",
        "黄花玩初馥，",
        "翠物喜盈斟。",
        "云杂组绣色，",
        "乐和山水音。",
        "旆摇秋吹急，",
        "筵卷夕光沉。",
        "都人瞻骑火，",
        "犹知隔寺深。"
      ]
    },
    {
      "_id": null,
      "Name": "他乡七夕",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "汉渚常多别，",
        "山桥忽重游。",
        "向云迎翠辇，",
        "当月拜珠旒。",
        "寝幌凝宵态，",
        "妆奁闭晓愁。",
        "不堪鸣杼日，",
        "空对白榆秋。"
      ]
    },
    {
      "_id": null,
      "Name": "仙女词",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "玉京初侍紫皇君，",
        "金缕鸳鸯满绛裙。",
        "仙宫一闭无消息，",
        "遥结芳心向碧云。"
      ]
    },
    {
      "_id": null,
      "Name": "冬夜举公房送崔秀才归南阳",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "闻君动征棹，",
        "犯夜故来寻。",
        "强置一尊酒，",
        "重款百年心。",
        "灯白霜气冷，",
        "室虚松韵深。",
        "南阳三顾地，",
        "幸偶价千金。"
      ]
    },
    {
      "_id": null,
      "Name": "南海苦雨，寄赠王四侍御",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "炎风杂海气，",
        "暑雨每成霖。",
        "涂泥亲杖屦，",
        "苔藓渍衣襟。",
        "念近剧怀远，",
        "涉浅定知深。",
        "暗沟夜滴滴，",
        "荒庭昼霪霪。",
        "折简展离旷，",
        "理径俟招寻。",
        "处阴诚多惨，",
        "况乃触隅禽。"
      ]
    },
    {
      "_id": null,
      "Name": "卢十五竹亭送侄偁归山",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "落叶寒拥壁，",
        "清霜夜沾石。",
        "正是忆山时，",
        "复送归山客。",
        "殷勤一尊酒，",
        "晓月当窗白。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "贤人处霄汉，",
        "荒泽自耕耘。",
        "陇首降时雨，",
        "雷声出夏云。",
        "一一鹤声飞上天。"
      ]
    },
    {
      "_id": null,
      "Name": "咏春色",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "霭霭复濛濛，",
        "非雾满晴空。",
        "密添宫柳翠，",
        "暗泄路桃红。",
        "萦丝光乍失，",
        "缘隙影才通。",
        "夕迷鸳枕上，",
        "朝漫绮弦中。",
        "促驷驰香陌，",
        "劳莺转艳丛。",
        "可怜肠断望，",
        "并在洛城东。"
      ]
    },
    {
      "_id": null,
      "Name": "哭李象",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "白鸡黄犬不将去，",
        "寂寞空馀葬时路。",
        "草死花开年复年，",
        "后人知是何人墓。",
        "忆君思君独不眠，",
        "夜寒月照青枫树。"
      ]
    },
    {
      "_id": null,
      "Name": "夜半步次古城",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "茫茫死复生，",
        "惟有古时城。",
        "夜半无鸟雀，",
        "花枝当月明。"
      ]
    },
    {
      "_id": null,
      "Name": "夷陵郡内叙别",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "礼娶嗣明德，",
        "同牢夙所钦。",
        "况蒙生死契，",
        "岂顾蓬蒿心。",
        "雁币任野薄，",
        "恩爱缘义深。",
        "同声若鼓瑟，",
        "合韵似鸣琴。",
        "将迓空未立，",
        "就赘意难任。",
        "皎月托言誓，",
        "沧波信浮沉。",
        "荆台理晨辙，",
        "巫渚疑宵襟。",
        "悯悯百虑起，",
        "回回万恨深。",
        "候更促徒侣，",
        "先晓彻夜禽。",
        "灯彩凝寒风，",
        "蝉思噪密林。",
        "留念同心带，",
        "赠远芙蓉簪。",
        "抚怀极投漆，",
        "感物重黄金。",
        "分鸾岂遐阻，",
        "别剑念相寻。",
        "倘甘蓬户贱，",
        "愿俟故山岑。"
      ]
    },
    {
      "_id": null,
      "Name": "宿云溪观，赋得秋灯引送客",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "云房寄宿秋夜客，",
        "一灯荧荧照虚壁。",
        "虫声呼客客未眠，",
        "几人语话清景侧。",
        "不可离别愁纷多，",
        "秋灯秋灯奈别何。"
      ]
    },
    {
      "_id": null,
      "Name": "宿吉祥寺寄庐山隐者",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "风鸣云外钟，",
        "鹤宿千年松。",
        "相思杳不见，",
        "月出山重重。"
      ]
    },
    {
      "_id": null,
      "Name": "宿陆氏斋赋得残灯诗",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "殷勤照永夜，",
        "属思未成眠。",
        "余辉含薄雾，",
        "落烬迸空筵。",
        "谁比秦楼晓，",
        "缄愁别幌前。"
      ]
    },
    {
      "_id": null,
      "Name": "宿陟岵寺云律师院",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "像宇郁参差，",
        "宝林疏复密。",
        "中有弥天子，",
        "燃灯坐虚室。",
        "心证红莲喻，",
        "迹羁青眼律。",
        "玉炉扬翠烟，",
        "金经开缥帙。",
        "肆陈坚固学，",
        "破我梦幻质。",
        "碧水洒尘缨，",
        "凉扇当夏日。",
        "宿禽讵相保，",
        "迸火烟欲失。",
        "愿回戚促劳，",
        "趋隅事休逸。"
      ]
    },
    {
      "_id": null,
      "Name": "宿青牛谷",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "随云步入青牛谷，",
        "青牛道士留我宿。",
        "可怜夜久月明中，",
        "唯有坛边一枝竹。"
      ]
    },
    {
      "_id": null,
      "Name": "寄彻公",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "北风吹霜霜月明，",
        "荷叶枯尽越水清。",
        "别来几度龙宫宿，",
        "雪山童子应相逐。"
      ]
    },
    {
      "_id": null,
      "Name": "将之荆州南与张伯刚马惣钟陵夜别",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "荆台别路长，",
        "密绪分离状。",
        "莫诉杯来促，",
        "更筹屡已倡。",
        "烛花侵雾暗，",
        "瑟调寒风亮。",
        "谁念晓帆开，",
        "默睇参差浪。"
      ]
    },
    {
      "_id": null,
      "Name": "山斋独宿赠晏上人",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "幢幢云树秋，",
        "黄叶下山头。",
        "虫响夜难度，",
        "梦闲神不游。",
        "窗灯寒几尽，",
        "帘雨晓阶愁。",
        "何以禅栖客，",
        "灰心在沃州。"
      ]
    },
    {
      "_id": null,
      "Name": "广州石门寺重送李尚赴朝，时兼宗正卿",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "象阙趋云陛，",
        "龙宫憩石门。",
        "清铙犹启路，",
        "黄发重攀辕。",
        "藻变朝天服，",
        "珠怀委地言。",
        "那令蓬蒿客，",
        "兹席未离尊。"
      ]
    },
    {
      "_id": null,
      "Name": "征人",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "西风屡鸣雁，",
        "东郊未升日。",
        "繁烟幕幕昏，",
        "暗骑萧萧出。",
        "望云愁玉塞，",
        "眠月想蕙质。",
        "借问露沾衣，",
        "何如香满室。"
      ]
    },
    {
      "_id": null,
      "Name": "旅次江亭",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "扣舷不能寐，",
        "皓露清衣襟。",
        "弥伤孤舟夜，",
        "远结万里心。",
        "幽兴惜瑶草，",
        "素怀寄鸣琴。",
        "三奏月初上，",
        "寂寥寒江深。"
      ]
    },
    {
      "_id": null,
      "Name": "春梦",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "空庭日照花如锦，",
        "红妆美人当昼寝。",
        "傍人不知梦中事，",
        "唯见玉钗时坠枕。"
      ]
    },
    {
      "_id": null,
      "Name": "桂州与陈羽念别",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "惨戚损志抱，",
        "因君时解颜。",
        "重叹今夕会，",
        "复在几夕间。",
        "碧桂水连海，",
        "苍梧云满山。",
        "茫茫从此去，",
        "何路入秦关。"
      ]
    },
    {
      "_id": null,
      "Name": "江陵送客归河北",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "远客归故里，",
        "临路结裴回。",
        "山长水复阔，",
        "无因重此来。",
        "聊将歌一曲，",
        "送子手中杯。"
      ]
    },
    {
      "_id": null,
      "Name": "游峡山寺",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "结构天南畔，",
        "胜绝固难俦。",
        "幸蒙时所漏，",
        "遂得恣闲游。",
        "路石荫松盖，",
        "槛藤维鹤舟。",
        "雨霁花木润，",
        "风和景气柔。",
        "宝殿敞丹扉，",
        "灵幡垂绛旒。",
        "照曜芙蓉壶，",
        "金人居上头。",
        "翔禽拂危刹，",
        "落日避层楼。",
        "端溪弥漫驶，",
        "曲涧潺湲流。",
        "高居何重沓，",
        "登览自夷犹。",
        "烟霞无隐态，",
        "岩洞讵遗幽。",
        "奔驷非久耀，",
        "驰波肯暂留。",
        "会从香火缘，",
        "灭迹此山丘。"
      ]
    },
    {
      "_id": null,
      "Name": "游陆先生故岩居",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "独壑临万嶂，",
        "苍苔绝行迹。",
        "仰窥猿挂树，",
        "俯对鹤巢石。",
        "上有一岩屋，",
        "相传灵人宅。",
        "深林无阳晖，",
        "幽水转鲜碧。",
        "拾薪遇遗鼎，",
        "探穴得古籍。",
        "结念候云兴，",
        "烧香坐终夕。"
      ]
    },
    {
      "_id": null,
      "Name": "病中赴袁州次香馆",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "病舆憩上馆，",
        "缭绕向山隅。",
        "荒葛漫欹壁，",
        "幽禽啄朽株。",
        "力微怯升降，",
        "意欲结踟躇。",
        "谁能挹香水，",
        "一为濯烦纡。"
      ]
    },
    {
      "_id": null,
      "Name": "登紫霄峰赠黄仙师",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "紫霄不可涉，",
        "灵峰信穹崇。",
        "下有琼树枝，",
        "上有翠发翁。",
        "鸡鸣秋汉侧，",
        "日出红霞中。",
        "璨璨真仙子，",
        "执旄为侍童。",
        "焚香杳忘言，",
        "默念合太空。",
        "世华徒熠耀，",
        "虚室自朦胧。",
        "云飞琼瑶圃，",
        "龟息芝兰丛。",
        "玉箓掩不开，",
        "天窗微微风。",
        "兹焉悟佳旨，",
        "尘境亦幽通。",
        "浩渺临广津，",
        "永用挹无穷。"
      ]
    },
    {
      "_id": null,
      "Name": "白纻辞",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "玉缨翠珮杂轻罗，",
        "香汗微渍朱颜酡。",
        "为君起唱白纻歌，",
        "清声袅云思繁多，",
        "凝笳哀琴时相和。",
        "金壶半倾芳夜促，",
        "梁尘霏霏暗红烛。",
        "令君安坐听终曲，",
        "坠叶飘花难再复。",
        "蹑珠履，",
        "步琼筵，",
        "轻身起舞红烛前。",
        "芳姿艳态妖且妍，",
        "回眸转袖暗催弦。",
        "凉风萧萧漏水急，",
        "月华泛溢红莲湿，",
        "牵裙揽带翻成泣。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夜桂州宴送郑十九侍御",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "秋至触物愁，",
        "况当离别筵。",
        "短歌销夜烛，",
        "繁绪遍高弦。",
        "桂水舟始泛，",
        "兰堂榻讵悬。",
        "一杯勾离阻，",
        "三载奉周旋。",
        "鸦噪更漏飒，",
        "露濡风景鲜。",
        "斯须不共此，",
        "且为更留连。"
      ]
    },
    {
      "_id": null,
      "Name": "经端溪峡中",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "阴岸东流水，",
        "上有微风生。",
        "素羽漾翠涧，",
        "碧苔敷丹英。",
        "重林宿雨晦，",
        "远岫孤霞明。",
        "飞猱相攀牵，",
        "白云乱纵横。",
        "有客溯轻楫，",
        "阅胜匪羁程。",
        "逍遥一息间，",
        "粪土五侯荣。",
        "搴茗庶蠲热，",
        "漱泉聊析酲。",
        "寄言丝竹者，",
        "讵识松风声。"
      ]
    },
    {
      "_id": null,
      "Name": "经赵处士居",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "云居避世客，",
        "发白习儒经。",
        "有地水空绿，",
        "无人山自青。",
        "废梁悲逝水，",
        "卧木思荒庭。",
        "向夕霏烟敛，",
        "徒看处士星。"
      ]
    },

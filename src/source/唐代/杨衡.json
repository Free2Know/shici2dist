    {
      "_id": null,
      "Name": "赋得夜雨滴空阶送魏秀才",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "委檐方滴滴，",
        "沾红复洒绿。",
        "醉听乍朦胧，",
        "愁闻多断续。",
        "始兼泉向细，",
        "稍杂更声促。",
        "百虑自萦心，",
        "况有人如玉。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得直如朱丝弦",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "寂寞瑶琴上，",
        "深知直者情。",
        "幸传朱鹭曲，",
        "那止素丝名。",
        "瑞草人空仰，",
        "王言世久行。",
        "大方闻正位，",
        "乐府动清声。",
        "文武音初合，",
        "宫商调屡更。",
        "谁能向机杼，",
        "终日泣无成。"
      ]
    },
    {
      "_id": null,
      "Name": "赠庐山道士",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "七律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "寂寥高室古松寒，",
        "松下仙人字委鸾。",
        "头垂白发朝鸣磬，",
        "手把青芝夜绕坛。",
        "物像自随尘外灭，",
        "真源长向性中看。",
        "悠悠万古皆如此，",
        "秋比松枝春比兰。"
      ]
    },
    {
      "_id": null,
      "Name": "赠罗浮易炼师",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "海上多仙峤，",
        "灵人信长生。",
        "荣卫冰雪姿，",
        "咽嚼日月精。",
        "默书绛符遍，",
        "晦步斗文成。",
        "翠发披肩长，",
        "金盖凌风轻。",
        "晓籁息尘响，",
        "天鸡叱幽声。",
        "碧树来户阴，",
        "丹霞照窗明。",
        "焚香叩虚寂，",
        "稽首回太清。",
        "鸾鹭振羽仪，",
        "飞翻拂旆旌。",
        "左挹玉泉液，",
        "右搴云芝英。",
        "念得参龙驾，",
        "攀天度赤城。"
      ]
    },
    {
      "_id": null,
      "Name": "边思",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "苏武节旄尽，",
        "李陵音信稀。",
        "梅当陇上发，",
        "人向陇头归。"
      ]
    },
    {
      "_id": null,
      "Name": "送人流雷州",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "逐客指天涯，",
        "人间此路赊。",
        "地图经大庾，",
        "水驿过长沙。",
        "腊月雷州雨，",
        "秋风桂岭花。",
        "不知荒徼外，",
        "何处有人家。"
      ]
    },
    {
      "_id": null,
      "Name": "送公孙器自桂林归蜀",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "桂林浅复碧，",
        "潺湲半露石。",
        "将乘触物舟，",
        "暂驻飞空锡。",
        "蜀乡异青眼，",
        "蓬户高朱戟。",
        "风度杳难寻，",
        "云飘讵留迹。",
        "旧户闲花草，",
        "驯鸽傍檐隙。",
        "挥手共忘怀，",
        "日堕千山夕。"
      ]
    },
    {
      "_id": null,
      "Name": "送孔周之南海谒王尚书",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "泛棹若流萍，",
        "桂寒山更青。",
        "望云生碧落，",
        "看日下沧溟。",
        "潮尽收珠母，",
        "沙闲拾翠翎。",
        "自趋龙戟下，",
        "再为诵芳馨。"
      ]
    },
    {
      "_id": null,
      "Name": "送彻公",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "白首年空度，",
        "幽居俗岂知。",
        "败蕉依晚日，",
        "孤鹤立秋墀。",
        "久客何由造，",
        "禅门不可窥。",
        "会同尘外友，",
        "斋沐奉威仪。"
      ]
    },
    {
      "_id": null,
      "Name": "送王秀才往安南",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "君为蹈海客，",
        "客路谁谙悉。",
        "鲸度乍疑山，",
        "鸡鸣先见日。",
        "所嗟回棹晚，",
        "倍结离情密。",
        "无贪合浦珠，",
        "念守江陵橘。"
      ]
    },
    {
      "_id": null,
      "Name": "送郑丞之罗浮中习业",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "百年泛飘忽，",
        "万事系衰荣。",
        "高鸿脱矰缴，",
        "达士去簪缨。",
        "始从天目游，",
        "复作罗浮行。",
        "云卧石林密，",
        "月窥花洞明。",
        "全形在气和，",
        "习默凭境清。",
        "夙秘绛囊诀，",
        "屡投金简名。",
        "钟管促离觞，",
        "烟霞随去程。",
        "何当真府内，",
        "重得款平生。"
      ]
    },
    {
      "_id": null,
      "Name": "送陈房谒抚州周使君",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "匡山一亩宫，",
        "尚有桂兰丛。",
        "凿壁年虽异，",
        "穿杨志幸同。",
        "貌羸缘塞苦，",
        "道蹇为囊空。",
        "去谒临川守，",
        "因怜鹤在笼。"
      ]
    },
    {
      "_id": null,
      "Name": "采莲曲",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "凝鲜雾渚夕，",
        "阳艳绿波风。",
        "鱼游乍散藻，",
        "露重稍欹红。",
        "楚客伤暮节，",
        "吴娃泣败丛。",
        "促令芳本固，",
        "宁望雪霜中。"
      ]
    },
    {
      "_id": null,
      "Name": "长门怨",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "丝声繁兮管声急，",
        "珠帘不卷风吹入。",
        "万遍凝愁枕上听，",
        "千回候命花间立。",
        "望望昭阳信不来。",
        "回眸独掩红巾泣。"
      ]
    },
    {
      "_id": null,
      "Name": "题山寺",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "千峰白露后，",
        "云壁挂残灯。",
        "曙色海边日，",
        "经声松下僧。",
        "意闲门不闭，",
        "年去水空澄。",
        "稽首如何问，",
        "森罗尽一乘。"
      ]
    },
    {
      "_id": null,
      "Name": "题玄和师仙药室",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "未知",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "山边萧寂室，",
        "石掩浮云扃。",
        "绕室微有路，",
        "松烟深冥冥。",
        "入松汲寒水，",
        "对鹤问仙经。",
        "石几香未尽，",
        "水花风欲零。",
        "何年去华表，",
        "几度穷苍冥。",
        "却顾宦游子，",
        "眇如霜中萤。"
      ]
    },
    {
      "_id": null,
      "Name": "题花树",
      "PoetId": "9da3344b806e43dcb39e92ca67d90aa4",
      "PoetName": "杨衡",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨衡"
      ],
      "Contents": [
        "都无看花意，",
        "偶到树边来。",
        "可怜枝上色，",
        "一一为愁开。"
      ]
    }

  "Name": "徐九皋",
  "Description": "徐九皋，河阴尉。诗五首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "关山月",
      "PoetId": "772d742d4d614337985b1d5ef86c50c2",
      "PoetName": "徐九皋",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐九皋"
      ],
      "Contents": [
        "玉塞抵长城，",
        "金徽映高阙。",
        "遥心万馀里，",
        "直望三边月。",
        "霜静影逾悬，",
        "露晞光渐没。",
        "思君不可见，",
        "空叹将焉歇。"
      ]
    },
    {
      "_id": null,
      "Name": "咏史",
      "PoetId": "772d742d4d614337985b1d5ef86c50c2",
      "PoetName": "徐九皋",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐九皋"
      ],
      "Contents": [
        "亡国秦韩代，",
        "荣身刘项年。",
        "金槌击政后，",
        "玉斗碎增前。",
        "圣主称三杰，",
        "明离保四贤。",
        "已申黄石祭，",
        "方慕赤松仙。"
      ]
    },
    {
      "_id": null,
      "Name": "战城南",
      "PoetId": "772d742d4d614337985b1d5ef86c50c2",
      "PoetName": "徐九皋",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐九皋"
      ],
      "Contents": [
        "塞北狂胡旅，",
        "城南敌汉围。",
        "巉岩一鼓气，",
        "拔利五兵威。",
        "虏骑瞻山哭，",
        "王师拓地飞。",
        "不应须宠战，",
        "当遂勒金徽。"
      ]
    },
    {
      "_id": null,
      "Name": "送部四镇人往单于别知故",
      "PoetId": "772d742d4d614337985b1d5ef86c50c2",
      "PoetName": "徐九皋",
      "Form": "五律",
      "Tags": [
        "唐代",
        "徐九皋"
      ],
      "Contents": [
        "天下今无事，",
        "云中独未宁。",
        "忝驱更戍卒，",
        "方远送边庭。",
        "马饮长城水，",
        "军占太白星。",
        "国恩行可报，",
        "何必守经营。"
      ]
    },
    {
      "_id": null,
      "Name": "途中览镜",
      "PoetId": "772d742d4d614337985b1d5ef86c50c2",
      "PoetName": "徐九皋",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "徐九皋"
      ],
      "Contents": [
        "四海游长倦，",
        "百年愁半侵。",
        "赖窥明镜里，",
        "时见丈夫心。"
      ]
    }
  ]
}
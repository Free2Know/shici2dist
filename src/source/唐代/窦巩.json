{
  "_id": "015d1d60f9c04baa8e9e9b4680fb3ce9",
  "Name": "窦巩",
  "Description": "窦巩，字友封，登元和进士。累辟幕府，入拜侍御史，转司勋员外、刑部郎中。元稹观察浙东，奏为副使。又从镇武昌，归京师卒。巩雅裕，有名于时。平居与人言，若不出口，世称嗫嚅翁。白居易编次往还诗尤长者，号《元白往还集》，巩亦与焉。诗三十九首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "从军别家",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "自笑儒生著战袍，",
        "书斋壁上挂弓刀。",
        "如今便是征人妇，",
        "好织回文寄窦滔。"
      ]
    },
    {
      "_id": null,
      "Name": "代邻叟",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "年来七十罢耕桑，",
        "就暖支羸强下床。",
        "满眼儿孙身外事，",
        "闲梳白发对残阳。"
      ]
    },
    {
      "_id": null,
      "Name": "南游感兴",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "伤心欲问前朝事，",
        "惟见江流去不回。",
        "日暮东风春草绿，",
        "鹧鸪飞上越王台。"
      ]
    },
    {
      "_id": null,
      "Name": "南阳道中作",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "东风雨洗顺阳川，",
        "蜀锦花开绿草田。",
        "彩雉斗时频驻马，",
        "酒旗翻处亦留钱。",
        "新晴日照山头雪，",
        "薄暮人争渡口船。",
        "早晚到家春欲尽，",
        "今年寒食月初圆。"
      ]
    },
    {
      "_id": null,
      "Name": "哭吕衡州八郎中",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "今朝血泪问苍苍，",
        "不分先悲旅馆丧。",
        "人送剑来归陇上，",
        "雁飞书去叫衡阳。",
        "还家路远儿童小，",
        "埋玉泉深昼夜长。",
        "望尽素车秋草外，",
        "欲将身赎返魂香。"
      ]
    },
    {
      "_id": null,
      "Name": "唐州东途作",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "绿林兵起结愁云，",
        "白羽飞书未解纷。",
        "天子欲开三面网，",
        "莫将弓箭射官军。"
      ]
    },
    {
      "_id": null,
      "Name": "奉使蓟门",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "自从身属富人侯，",
        "蝉噪槐花已四秋。",
        "今日一茎新白发，",
        "懒骑官马到幽州。"
      ]
    },
    {
      "_id": null,
      "Name": "宫人斜",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "离宫路远北原斜，",
        "生死恩深不到家。",
        "云雨今归何处去，",
        "黄鹂飞上野棠花。"
      ]
    },
    {
      "_id": null,
      "Name": "寄南游兄弟",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "书来未报几时还，",
        "知在三湘五岭间。",
        "独立衡门秋水阔，",
        "寒鸦飞去日衔山。"
      ]
    },
    {
      "_id": null,
      "Name": "寻道者所隐不遇",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "篱外涓涓涧水流，",
        "槿花半点夕阳收。",
        "欲题名字知相访，",
        "又恐芭蕉不奈秋。"
      ]
    },
    {
      "_id": null,
      "Name": "少妇词",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "坐惜年光变，",
        "辽阳信未通。",
        "燕迷新画屋，",
        "春识旧花丛。",
        "梦绕天山外，",
        "愁翻锦字中。",
        "昨来谁是伴，",
        "鹦鹉在帘栊。"
      ]
    },
    {
      "_id": null,
      "Name": "岁晚喜远兄弟至书情",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "几年沧海别，",
        "相见竟多违。",
        "鬓发缘愁白，",
        "音书为懒稀。",
        "新诗徒有赠，",
        "故国未同归。",
        "人事那堪问，",
        "无言是与非。"
      ]
    },
    {
      "_id": null,
      "Name": "忝职武昌，初至夏口，书事献府主相公",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "白发放櫜鞬，",
        "梁王爱旧全。",
        "竹篱江畔宅，",
        "梅雨病中天。",
        "时奉登楼宴，",
        "闲修上水船。",
        "邑人兴谤易，",
        "莫遣鹤支钱。"
      ]
    },
    {
      "_id": null,
      "Name": "悼妓东东",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "芳菲美艳不禁风，",
        "未到春残已坠红。",
        "惟有侧轮车上铎，",
        "耳边长似叫东东。",
        "第二百七十二卷"
      ]
    },
    {
      "_id": null,
      "Name": "放鱼",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "金钱赎得免刀痕，",
        "闻道禽鱼亦感恩。",
        "好去长江千万里，",
        "不须辛苦上龙门。"
      ]
    },
    {
      "_id": null,
      "Name": "新罗进白鹰",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "御马新骑禁苑秋，",
        "白鹰来自海东头。",
        "汉皇无事须游猎，",
        "雪乱争飞锦臂鞲。"
      ]
    },
    {
      "_id": null,
      "Name": "新营别墅寄家兄",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "懒性如今成野人，",
        "行藏由兴不由身。",
        "莫惊此度归来晚，",
        "买得西山正值春。"
      ]
    },
    {
      "_id": null,
      "Name": "早春松江野望",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "江村风雪霁，",
        "晓望忽惊春。",
        "耕地人来早，",
        "营巢鹊语频。",
        "带花移树小，",
        "插槿作篱新。",
        "何事胜无事，",
        "穷通任此身。"
      ]
    },
    {
      "_id": null,
      "Name": "早春送宇文十归吴",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "春迟不省似今年，",
        "二月无花雪满天。",
        "村店闭门何处宿，",
        "夜深遥唤渡江船。"
      ]
    },
    {
      "_id": null,
      "Name": "早秋江行",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "回望湓城远，",
        "西风吹荻花。",
        "暮潮江势阔，",
        "秋雨雁行斜。",
        "多醉浑无梦，",
        "频愁欲到家。",
        "渐惊云树转，",
        "数点是晨鸦。"
      ]
    },
    {
      "_id": null,
      "Name": "永宁小园寄接近校书",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "故里心期奈别何，",
        "手栽芳树忆庭柯。",
        "东皋黍熟君应醉，",
        "梨叶初红白露多。"
      ]
    },
    {
      "_id": null,
      "Name": "汉阴驿与宇文十相遇，旋归西川，因……",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "吴蜀何年别，",
        "相逢汉水头。",
        "望乡心共醉，",
        "握手泪先流。",
        "宿雾千山晓，",
        "春霖一夜愁。",
        "离情方浩荡，",
        "莫说去刀州。"
      ]
    },
    {
      "_id": null,
      "Name": "江陵遇元九李六二侍御纪事书情呈十二韵",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "未知",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "自见人相爱，",
        "如君爱我稀。",
        "好闲容问道，",
        "攻短每言非。",
        "梦想何曾间，",
        "追欢未省违。",
        "看花怜后到，",
        "避酒许先归。",
        "柳寺春堤远，",
        "津桥曙月微。",
        "渔翁随去处，",
        "禅客共因依。",
        "蓬阁初疑义，",
        "霜台晚畏威。",
        "学深通古字，",
        "心直触危机。",
        "肯滞荆州掾，",
        "犹香柏署衣。",
        "山连巫峡秀，",
        "田傍渚宫肥。",
        "美玉方齐价，",
        "迁莺尚怯飞。",
        "伫看霄汉上，",
        "连步侍彤闱。"
      ]
    },
    {
      "_id": null,
      "Name": "洛中即事",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "高梧叶尽鸟巢空，",
        "洛水潺湲夕照中。",
        "寂寂天桥车马绝，",
        "寒鸦飞入上阳宫。"
      ]
    },
    {
      "_id": null,
      "Name": "游仙词",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "海上神山绿，",
        "溪边杏树红。",
        "不知何处去，",
        "月照玉楼空。"
      ]
    },
    {
      "_id": null,
      "Name": "登玉钩亭奉献淮南李相公",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "西南城上高高处，",
        "望月分明似玉钩。",
        "朱槛入云看鸟灭，",
        "绿杨如荠绕江流。",
        "定知有客嫌陈榻，",
        "从此无人上庾楼。",
        "今日卷帘天气好，",
        "不劳骑马看扬州。"
      ]
    },
    {
      "_id": null,
      "Name": "秋夕",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "护霜云映月朦胧，",
        "乌鹊争飞井上桐。",
        "夜半酒醒人不觉，",
        "满池荷叶动秋风。"
      ]
    },
    {
      "_id": null,
      "Name": "经窦车骑故城",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "荒陂古堞欲千年，",
        "名振图书剑在泉。",
        "今日诸孙拜坟树，",
        "愧无文字续燕然。"
      ]
    },
    {
      "_id": null,
      "Name": "老将行",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "烽烟犹未尽，",
        "年鬓暗相催。",
        "轻敌心空在，",
        "弯弓手不开。",
        "马依秋草病，",
        "柳傍故营摧。",
        "唯有酬恩客，",
        "时听说剑来。"
      ]
    },
    {
      "_id": null,
      "Name": "襄阳寒食寄宇文籍",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "烟水初销见万家，",
        "东风吹柳万条斜。",
        "大堤欲上谁相伴，",
        "马踏春泥半是花。"
      ]
    },
    {
      "_id": null,
      "Name": "赠王氏小儿",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "竹林会里偏怜小，",
        "淮水清时最觉贤。",
        "莫倚儿童轻岁月，",
        "丈人曾共尔同年。"
      ]
    },
    {
      "_id": null,
      "Name": "赠萧都官",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "五律",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "萧郎自小贤，",
        "爱客不言钱。",
        "有酒轻寒夜，",
        "无愁倚少年。",
        "闲寻织锦字，",
        "醉上看花船。",
        "好是关身事，",
        "从人道性偏。"
      ]
    },
    {
      "_id": null,
      "Name": "赠阿史那都尉",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "窦巩"
      ],
      "Contents": [
        "较猎燕山经几春，",
        "雕弓白羽不离身。",
        "年来马上浑无力，",
        "望见飞鸿指似人。"
      ]
    },
    {
      "_id": null,
      "Name": "过骊山",
      "PoetId": "015d1d60f9c04baa8e9e9b4680fb3ce9",
      "PoetName": "窦巩",
      "Form": "七绝",
      "Tags": [
        "唐代",

{
  "_id": "a325833f789543c9bbea08c235435a4b",
  "Name": "张子容",
  "Description": "张子容，先天二年擢进士第，为乐城尉，与孟浩然友善。  诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "乐城岁日赠孟浩然",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "土地穷瓯越，",
        "风光肇建寅。",
        "插桃销瘴疠，",
        "移竹近阶墀。",
        "半是吴风俗，",
        "仍为楚岁时。",
        "更逢习凿齿，",
        "言在汉川湄。"
      ]
    },
    {
      "_id": null,
      "Name": "九日陪润州邵使君登北固山",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "词",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "五马向西椒，",
        "重阳坐丽谯。",
        "徐州带绿水，",
        "楚国在青霄。",
        "张幕连江树，",
        "开筵接海潮。",
        "凌云词客语，",
        "回雪舞人娇。",
        "梅福惭仙吏，",
        "羊公赏下僚。",
        "新丰酒旧美，",
        "况是菊花朝。"
      ]
    },
    {
      "_id": null,
      "Name": "云阳驿陪崔使君邵道士夜宴",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "一尉东南远，",
        "谁知此夜欢。",
        "诸侯倾皂盖，",
        "仙客整黄冠。",
        "染翰灯花满，",
        "飞觞云气寒。",
        "欣承国士遇，",
        "更借美人看。"
      ]
    },
    {
      "_id": null,
      "Name": "巫山",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "巫岭岧峣天际重，",
        "佳期宿昔愿相从。",
        "朝云暮雨连天暗，",
        "神女知来第几峰。"
      ]
    },
    {
      "_id": null,
      "Name": "永嘉作",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "拙宦从江左，",
        "投荒更海边。",
        "山将孤屿近，",
        "水共恶谿连。",
        "地湿梅多雨，",
        "潭蒸竹起烟。",
        "未应悲晚发，",
        "炎瘴苦华年。"
      ]
    },
    {
      "_id": null,
      "Name": "永嘉即事寄赣县袁少府瓘",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "山绕楼台出，",
        "谿通里閈斜。",
        "曾为谢客郡，",
        "多有逐臣家。",
        "海气朝成雨，",
        "江天晚作霞。",
        "题书报贾谊，",
        "此湿似长沙。"
      ]
    },
    {
      "_id": null,
      "Name": "泛永嘉江日暮回舟",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "无云天欲暮，",
        "轻鹢大江清。",
        "归路烟中远，",
        "回舟月上行。",
        "傍潭窥竹暗，",
        "出屿见沙明。",
        "更值微风起，",
        "乘流丝管声。"
      ]
    },
    {
      "_id": null,
      "Name": "璧池望秋月",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "凉夜窥清沼，",
        "池空水月秋。",
        "满轮沉玉镜，",
        "半魄落银钩。",
        "蟾影摇轻浪，",
        "菱花渡浅流。",
        "漏移光渐洁，",
        "云敛色偏浮。",
        "似璧悲三献，",
        "疑珠怯再投。",
        "能持千里意，",
        "来照楚乡愁。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·春江花月夜二首",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "林花发岸口，",
        "气色动江新。",
        "此夜江中月，",
        "流光花上春。",
        "分明石潭里，",
        "宜照浣纱人。",
        "交甫怜瑶佩，",
        "仙妃难重期。",
        "沉沉绿江晚，",
        "惆怅碧云姿。",
        "初逢花上月，",
        "言是弄珠时。"
      ]
    },
    {
      "_id": null,
      "Name": "自乐城赴永嘉枉路泛白湖寄松阳李少府",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "西行碍浅石，",
        "北转入谿桥。",
        "树色烟轻重，",
        "湖光风动摇。",
        "百花乱飞雪，",
        "万岭叠青霄。",
        "猿挂临潭筱，",
        "鸥迎出浦桡。",
        "惟应赏心客，",
        "兹路不言遥。"
      ]
    },
    {
      "_id": null,
      "Name": "贬乐城尉日作",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "窜谪边穷海，",
        "川原近恶谿。",
        "有时闻虎啸，",
        "无夜不猿啼。",
        "地暖花长发，",
        "岩高日易低。",
        "故乡可忆处，",
        "遥指斗牛西。"
      ]
    },
    {
      "_id": null,
      "Name": "赠司勋萧郎中",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "作相开黄阁，",
        "为郎奏赤墀。",
        "君臣道合体，",
        "父子贵同时。",
        "国以推贤答，",
        "家无内举疑。",
        "凤池真水镜，",
        "兰省得华滋。",
        "未睹风流日，",
        "先闻新赋诗。",
        "江山清谢脁，",
        "花木媚丘迟。",
        "吏部来何暮，",
        "王言念在兹。",
        "丹青无不可，",
        "霖雨亦相期。",
        "昔我投荒处，",
        "孤烟望岛夷。",
        "群鸥终日狎，",
        "落叶数年悲。",
        "渔父留歌咏，",
        "江妃入兴词。",
        "今将献知己，",
        "相感勿吾欺。"
      ]
    },
    {
      "_id": null,
      "Name": "送孟八浩然归襄阳二首",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "东越相逢地，",
        "西亭送别津。",
        "风潮看解缆，",
        "云海去愁人。",
        "乡在桃林岸，",
        "山连枫树春。",
        "因怀故园意，",
        "归与孟家邻。",
        "杜门不欲出，",
        "久与世情疏。",
        "以此为长策，",
        "劝君归旧庐。",
        "醉歌田舍酒，",
        "笑读古人书。",
        "好是一生事，",
        "无劳献子虚。"
      ]
    },
    {
      "_id": null,
      "Name": "送苏倩游天台",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "灵异寻沧海，",
        "笙歌访翠微。",
        "江鸥迎共狎，",
        "云鹤待将飞。",
        "琪树尝仙果，",
        "琼楼试羽衣。",
        "遥知神女问，",
        "独怪阮郎归。"
      ]
    },
    {
      "_id": null,
      "Name": "长安早春",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "开国维东井，",
        "城池起北辰。",
        "咸歌太平日，",
        "共乐建寅春。",
        "雪尽黄山树，",
        "冰开黑水津。",
        "草迎金埒马，",
        "花伴玉楼人。",
        "鸿渐看无数，",
        "莺歌听欲频。",
        "何当桂枝擢，",
        "还及柳条新。"
      ]
    },
    {
      "_id": null,
      "Name": "除夜乐城逢孟浩然",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "远客襄阳郡，",
        "来过海岸家。",
        "樽开柏叶酒，",
        "灯发九枝花。",
        "妙曲逢卢女，",
        "高才得孟嘉。",
        "东山行乐意，",
        "非是竞繁华。"
      ]
    },
    {
      "_id": null,
      "Name": "除日",
      "PoetId": "a325833f789543c9bbea08c235435a4b",
      "PoetName": "张子容",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张子容"
      ],
      "Contents": [
        "腊月今知晦，",
        "流年此夕除。",
        "拾樵供岁火，",
        "帖牖作春书。",
        "柳觉东风至，",
        "花疑小雪馀。",
        "忽逢双鲤赠，",
        "言是上冰鱼。",
        "第一百一十七卷"
      ]
    }
  ]
}
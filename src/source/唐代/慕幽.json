  "Poems": [
    {
      "_id": null,
      "Name": "三峡闻猿",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "七律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "谁向兹来不恨生，",
        "声声都是断肠声。",
        "七千里外一家住，",
        "十二峰前独自行。",
        "瘴雨晚藏神女庙，",
        "蛮烟寒锁夜郎城。",
        "凭君且听哀吟好，",
        "会待青云道路平。"
      ]
    },
    {
      "_id": null,
      "Name": "冬日淮上别文上人",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "家国各万里，",
        "同吟六七年。",
        "可堪随北雁，",
        "迢递向南天。",
        "水共行人远，",
        "山将落日连。",
        "春淮有双鲤，",
        "莫忘尺书传。"
      ]
    },
    {
      "_id": null,
      "Name": "剑客",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "去住知何处，",
        "空将一剑行。",
        "杀人虽取次，",
        "为事爱公平。",
        "戟立嗔髭鬓，",
        "星流忿眼睛。",
        "晓来湘市说，",
        "拂曙别辽城。"
      ]
    },
    {
      "_id": null,
      "Name": "柳",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "七律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "今古凭君一赠行，",
        "几回折尽复重生。",
        "五株斜傍渊明宅，",
        "千树低垂太尉营。",
        "临水带烟藏翡翠，",
        "倚风兼雨宿流莺。",
        "隋皇堤畔依依在，",
        "曾惹当时歌吹声。"
      ]
    },
    {
      "_id": null,
      "Name": "灯",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "七律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "钟断危楼鸟不飞，",
        "荧荧何处最相宜。",
        "香然水寺僧开卷，",
        "笔写春帏客著诗。",
        "忽尔思多穿壁处，",
        "偶然心尽断缨时。",
        "孙康勤苦谁能念，",
        "少减馀光借与伊。"
      ]
    },
    {
      "_id": null,
      "Name": "酬和友人见寄",
      "PoetId": "040ccf5c7ecd4d088ae8636cb0ccfd40",
      "PoetName": "慕幽",
      "Form": "五律",
      "Tags": [
        "唐代",
        "慕幽"
      ],
      "Contents": [
        "劳歌好自看，",
        "终久偶齐桓。",
        "五字若教易，",
        "一名争得难。",
        "侵窗红树老，",
        "荫砌雪花残。",
        "莫效齐僚属，",
        "东归剪钓竿。"
      ]
    }
  ]
}
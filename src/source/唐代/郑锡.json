{
  "_id": "7404d25e0ab143b787459473b159055e",
  "Name": "郑锡",
  "Description": "登宝应进士第，宝历间，为礼部员外。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "出塞",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "关山落叶秋，",
        "掩泪望营州。",
        "辽海云沙暮，",
        "幽燕旌旆愁。",
        "战馀能送阵，",
        "身老未封侯。",
        "去国三千里，",
        "归心红粉楼。"
      ]
    },
    {
      "_id": null,
      "Name": "出塞曲",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "七律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "校尉征兵出塞西，",
        "别营分骑过龙溪。",
        "沙平虏迹风吹尽，",
        "雾失烽烟道易迷。",
        "玉靶半开鸿已落，",
        "金河欲渡马连嘶。",
        "会当系取天骄入，",
        "不使军书夜刺闺。"
      ]
    },
    {
      "_id": null,
      "Name": "千里思",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "渭水通胡苑，",
        "轮台望汉关。",
        "帛书秋海断，",
        "锦字夜机闲。",
        "旅梦虫催晓，",
        "边心雁带还。",
        "惟馀两乡思，",
        "一夕度关山。"
      ]
    },
    {
      "_id": null,
      "Name": "度关山",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "象弭插文犀，",
        "鱼肠莹鸊鹈。",
        "水声分陇咽，",
        "马色度关迷。",
        "晓幕胡沙惨，",
        "危烽汉月低。",
        "仍闻数骑将，",
        "更欲出辽西。"
      ]
    },
    {
      "_id": null,
      "Name": "望月",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "高堂新月明，",
        "虚殿夕风清。",
        "素影纱窗霁，",
        "浮凉羽扇轻。",
        "稍随微露滴，",
        "渐逐晓参横。",
        "遥忆云中咏，",
        "萧条空复情。"
      ]
    },
    {
      "_id": null,
      "Name": "杂曲歌辞·邯郸少年行",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "霞鞍金口骝，",
        "豹袖紫貂裘。",
        "家住丛台近，",
        "门前漳水流。",
        "唤人呈楚舞，",
        "借客试吴钩。",
        "见说秦兵至，",
        "甘心赴国仇。"
      ]
    },
    {
      "_id": null,
      "Name": "玉阶怨",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "长门寒水流，",
        "高殿晓风秋。",
        "昨夜鸳鸯梦，",
        "还陪豹尾游。",
        "前鱼不解泣，",
        "共辇岂关羞。",
        "那及轻身燕，",
        "双飞上玉楼。"
      ]
    },
    {
      "_id": null,
      "Name": "襄阳乐",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "春生岘首东，",
        "先暖习池风。",
        "拂水初含绿，",
        "惊林未吐红。",
        "渚边游汉女，",
        "桑下问庞公。",
        "磨灭怀中刺，",
        "曾将示孔融。"
      ]
    },
    {
      "_id": null,
      "Name": "送客之江西",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "乘轺奉紫泥，",
        "泽国渺天涯。",
        "九派春潮满，",
        "孤帆暮雨低。",
        "草深莺断续，",
        "花落水东西。",
        "更有高唐处，",
        "知君路不迷。"
      ]
    },
    {
      "_id": null,
      "Name": "陇头别",
      "PoetId": "7404d25e0ab143b787459473b159055e",
      "PoetName": "郑锡",
      "Form": "五律",
      "Tags": [
        "唐代",
        "郑锡"
      ],
      "Contents": [
        "秋尽初移幕，",
        "沾裳一送君。",
        "据鞍窥古堠，",
        "开灶爇寒云。",
        "登陇人回首，",
        "临关马顾群。",
        "从来断肠处，",
        "皆向此中分。"
      ]
    }
  ]
}
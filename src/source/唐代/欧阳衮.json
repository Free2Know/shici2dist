{
  "_id": "7ad693c8ed3f42ae9928e3deb0e6675c",
  "Name": "欧阳衮",
  "Description": "欧阳衮，字希甫，闽人。宝历元年及第，官侍御史。诗九首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "南涧寺",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "七律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "春寺无人乱鸟啼，",
        "藤萝阴磴野僧迷。",
        "云藏古壁遗龙象，",
        "草没香台抱鹿麛。",
        "松籁泠泠疑梵呗，",
        "柳烟历历见招提。",
        "为耽寂乐亲禅侣，",
        "莫怪闲行费马蹄。"
      ]
    },
    {
      "_id": null,
      "Name": "听郢客歌阳春白雪",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "未知",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "寂听郢中人，",
        "高歌已绝伦。",
        "临风飘白雪，",
        "向日奏阳春。",
        "调雅偏盈耳，",
        "声长杳入神。",
        "连连贯珠并，",
        "袅袅遏云频。",
        "度曲知难和，",
        "凝情想任真。",
        "周郎如赏羡，",
        "莫使滞芳晨。"
      ]
    },
    {
      "_id": null,
      "Name": "和项斯游头陀寺上方",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "步入桃源里，",
        "晴花更满枝。",
        "峰回山意旷，",
        "林杳竹光迟。",
        "远寺寻龙藏，",
        "名香发雁池。",
        "间能将远语，",
        "况及上阳时。"
      ]
    },
    {
      "_id": null,
      "Name": "寄陈去疾进士",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "放迹疑辞垢，",
        "栖心亦道门。",
        "玄言萝幌馥，",
        "诗思竹炉温。",
        "解带摇花落，",
        "弹琴散鸟喧。",
        "江山兹夕意，",
        "唯有素交存。"
      ]
    },
    {
      "_id": null,
      "Name": "月峰寺忆理公",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "共来江海上，",
        "清论一宵同。",
        "禅榻浑依旧，",
        "心期浩已空。",
        "惊春花落树，",
        "闻梵涧摇风。",
        "二谛欣咨启，",
        "还应梦寐通。"
      ]
    },
    {
      "_id": null,
      "Name": "田家",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "黯黯日将夕，",
        "牛羊村外来。",
        "岩阿青气发，",
        "篱落杏花开。",
        "草木应初感，",
        "鶬鹒亦已催。",
        "晚间春作好，",
        "行乐不须猜。"
      ]
    },
    {
      "_id": null,
      "Name": "神光寺",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "香刹悬青磴，",
        "飞楼界碧空。",
        "石门栖怖鸽，",
        "慈塔绕归鸿。",
        "有法将心镜，",
        "无名属性通。",
        "从来乐幽寂，",
        "寻觅未能穷。"
      ]
    },
    {
      "_id": null,
      "Name": "秦原道中",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "分险架长澜，",
        "斜梁控夕峦。",
        "宿云依岭断，",
        "初月入江寒。",
        "缁化秦裘敝，",
        "尘惊汉策残。",
        "无言倦行旅，",
        "遥路属时难。"
      ]
    },
    {
      "_id": null,
      "Name": "雨",
      "PoetId": "7ad693c8ed3f42ae9928e3deb0e6675c",
      "PoetName": "欧阳衮",
      "Form": "五律",
      "Tags": [
        "唐代",
        "欧阳衮"
      ],
      "Contents": [
        "细雨弄春阴，",
        "余寒入昼深。",
        "山姿轻薄雾，",
        "烟色澹幽林。",
        "鹿践莓苔滑，",
        "鱼牵水荇沈。",
        "怀情方未已，",
        "清酒漫须斟。"
      ]
    }
  ]
}
{
  "_id": "77b9e4d3d33c4e4d9b792f2d8e08acef",
  "Name": "栖白",
  "Description": "栖白，越中僧。前与姚合交，后与李洞、曹松相赠答。宣宗朝，尝居荐福寺，内供奉，赐紫。诗一卷，今存十六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "八月十五夜玩月",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "寻常三五夜，",
        "不是不婵娟。",
        "及至中秋满，",
        "还胜别夜圆。",
        "清光凝有露，",
        "皓魄爽无烟。",
        "自古人皆望，",
        "年来又一年。"
      ]
    },
    {
      "_id": null,
      "Name": "哭刘得仁",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "为爱诗名吟至死，",
        "风魂雪魄去难招。",
        "直须桂子落坟上，",
        "生得一枝冤始消。"
      ]
    },
    {
      "_id": null,
      "Name": "寄南山景禅师",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "一度林前见远公，",
        "静闻真语世情空。",
        "至今寂寞禅心在，",
        "任起桃花柳絮风。"
      ]
    },
    {
      "_id": null,
      "Name": "寻山僧真胜上人不遇",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "松下禅栖所，",
        "苔滋径莫分。",
        "青山春暮见，",
        "流水夜深闻。",
        "不坐看心石，",
        "应随出定云。",
        "猿猱非可问，",
        "岩谷自空曛。"
      ]
    },
    {
      "_id": null,
      "Name": "寿昌节赋得红云表夏日",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "七律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "景候融融阴气潜，",
        "如峰云共火相兼。",
        "霞光捧日登天上，",
        "丹彩乘风入殿檐。",
        "行逐赤龙千岁出，",
        "明当朱夏万方瞻。",
        "微臣多幸逢佳节，",
        "得赋殊祥近御帘。"
      ]
    },
    {
      "_id": null,
      "Name": "经废宫",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "七律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "终日河声咽暮空，",
        "烟愁此地昼濛濛。",
        "锦帆东去沙侵苑，",
        "玉辇西来树满宫。",
        "鲁客望津天欲雪，",
        "朔鸿离岸苇生风。",
        "那堪独立思前事，",
        "回首残阳雉堞红。"
      ]
    },
    {
      "_id": null,
      "Name": "赠李溟秀才",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "南居古庙深，",
        "高树宿山禽。",
        "明月上清汉，",
        "骚人动楚吟。",
        "数篇正始韵，",
        "一片补亡心。",
        "孤悄欺何谢，",
        "云波不可寻。"
      ]
    },
    {
      "_id": null,
      "Name": "赠识古法师",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "七律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "重城深寺讲初休，",
        "却忆家山访旧游。",
        "对月与君相送夜，",
        "闻蛩教我独惊秋。",
        "云心杳杳难为别，",
        "鹤性萧萧不可留。",
        "遥想孤舟清渭上，",
        "飘然帆影起离愁。"
      ]
    },
    {
      "_id": null,
      "Name": "边思",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "西北黄云暮，",
        "声声画角愁。",
        "阴山一夜雨，",
        "白草四郊秋。",
        "乱雁鸣寒渡，",
        "飞沙入废楼。",
        "何时番色尽，",
        "此地见芳洲。"
      ]
    },
    {
      "_id": null,
      "Name": "送僧归旧山",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "谈空与破邪，",
        "献寿复荣家。",
        "白日得何偈，",
        "青天落几花。",
        "传灯皆有分，",
        "化俗独无涯。",
        "却入中峰寺，",
        "还知有聚沙。"
      ]
    },
    {
      "_id": null,
      "Name": "送圆仁三藏归本国",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "家山临晚日，",
        "海路信归桡。",
        "树灭浑无岸，",
        "风生只有潮。",
        "岁穷程未尽，",
        "天末国仍遥。",
        "已入闽王梦，",
        "香花境外邀。"
      ]
    },
    {
      "_id": null,
      "Name": "送王炼师归嵩岳",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "飘然绿毛节，",
        "杳去洛城端。",
        "隔水见秋岳，",
        "兼霜扫石坛。",
        "一溪松色古，",
        "半夜鹤声寒。",
        "迥与人寰别，",
        "劳生不可观。"
      ]
    },
    {
      "_id": null,
      "Name": "送石秀才",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "正是叹羁游，",
        "知音拜楚侯。",
        "何须辞远道，",
        "自可乐扁舟。",
        "倚棹江洲雨，",
        "闻猿岛岫秋。",
        "谢家山水兴，",
        "终日待诗流。"
      ]
    },
    {
      "_id": null,
      "Name": "送禅师宗极归玉峰",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "背郭去归宿，",
        "头陀意颇浓。",
        "鹤争栖远树，",
        "猿斗上孤峰。",
        "夜戍经霜月，",
        "秋城过雨钟。",
        "由来无定止，",
        "何处访高踪。"
      ]
    },
    {
      "_id": null,
      "Name": "送造微上人游五台及礼本师",
      "PoetId": "77b9e4d3d33c4e4d9b792f2d8e08acef",
      "PoetName": "栖白",
      "Form": "五律",
      "Tags": [
        "唐代",
        "栖白"
      ],
      "Contents": [
        "寒空金锡响，",
        "欲过渭阳津。",
        "极目多来雁，",
        "孤城少故人。",
        "与师虽别久，",
        "于法本相亲。",
        "又对清凉月，",
        "中宵语宿因。"
      ]
    }
  ]
}
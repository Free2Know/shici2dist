  "Poems": [
    {
      "_id": null,
      "Name": "宴柏台",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "华台陈桂席，",
        "密榭宴清真。",
        "柏叶犹霜气，",
        "桃花似汉津。",
        "青尊照深夕，",
        "绿绮映芳春。",
        "欲忆相逢后，",
        "无言岭海人。"
      ]
    },
    {
      "_id": null,
      "Name": "寄邵校书楚苌",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "爱酒时称僻，",
        "高情自不凡。",
        "向人方白眼，",
        "违俗有青岩。",
        "云际开三径，",
        "烟中挂一帆。",
        "相期同岁晚，",
        "闲兴与松杉。"
      ]
    },
    {
      "_id": null,
      "Name": "登城楼作",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "井邑白云间，",
        "严城远带山。",
        "沙墟阴欲暮，",
        "郊色淡方闲。",
        "孤径回榕岸，",
        "层峦破枳关。",
        "寥寥分远望，",
        "暂得一开颜。"
      ]
    },
    {
      "_id": null,
      "Name": "过马侍中亭",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "草色照双扉，",
        "轩车到客稀。",
        "苔衣香屐迹，",
        "花绶少尘飞。",
        "薄望怜池净，",
        "开畦爱雨肥。",
        "相过忘日昃，",
        "坐待白云归。"
      ]
    },
    {
      "_id": null,
      "Name": "送别萧二",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "橘花香覆白蘋洲，",
        "江引轻帆入远游。",
        "千里云天风雨夕，",
        "忆君不敢再登楼。"
      ]
    },
    {
      "_id": null,
      "Name": "龙池青草",
      "PoetId": "f119ebad4f2f4ab288b46146d4c636ed",
      "PoetName": "陈翊",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈翊"
      ],
      "Contents": [
        "青春光凤苑，",
        "细草遍龙池。",
        "曲渚交蘋叶，",
        "回塘惹柳枝。",
        "因风初苒苒，",
        "覆岸欲离离。",
        "色带金堤静，",
        "阴连玉树移。",
        "日光浮靃靡，",
        "波影动参差。",
        "岂比生幽远，",
        "芳馨众不知。"
      ]
    }
  ]
}
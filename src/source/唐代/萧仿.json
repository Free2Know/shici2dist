      "_id": null,
      "Name": "享太庙乐章",
      "PoetId": "cc54a85d232a49e19646d5683bcf9464",
      "PoetName": "萧仿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "萧仿"
      ],
      "Contents": [
        "于铄丕嗣，",
        "惟帝之光。",
        "羽籥象德，",
        "金石荐祥。",
        "圣系无极，",
        "景命永昌。",
        "神降上哲，",
        "维天配长。"
      ]
    },
    {
      "_id": null,
      "Name": "郊庙歌辞·享太庙乐章·懿宗室舞",
      "PoetId": "cc54a85d232a49e19646d5683bcf9464",
      "PoetName": "萧仿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "萧仿"
      ],
      "Contents": [
        "圣祚无疆，",
        "庆传乐章。",
        "金枝繁茂，",
        "玉叶延长。",
        "海渎常晏，",
        "波涛不扬。",
        "汪汪美化，",
        "垂范今王。"
      ]
    }
  ]
}
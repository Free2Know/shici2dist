{
  "_id": "51135ce1b5654c98a17f9adf31ac96a2",
  "Name": "张继",
  "Description": "张继，生卒年不详，字懿孙，南阳人。天宝进士，曾任检校祠部员外郎、洪州盐铁判官。其诗多登临纪行之作，不事雕琢。有《张祠部诗集》。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "上清词",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "紫阳宫女捧丹砂，",
        "王母令过汉帝家。",
        "春风不肯停仙驭，",
        "却向蓬莱看杏花。"
      ]
    },
    {
      "_id": null,
      "Name": "九日巴丘杨公台上宴集",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "凄凄霜日上高台，",
        "水国秋凉客思哀。",
        "万叠银山寒浪起，",
        "一行斜字早鸿来。",
        "谁家捣练孤城暮，",
        "何处题衣远信回。",
        "江汉路长身不定，",
        "菊花三笑旅怀开。"
      ]
    },
    {
      "_id": null,
      "Name": "人日代客子是日立春",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "人日兼春日，",
        "长怀复短怀。",
        "遥知双彩胜，",
        "并在一金钗。"
      ]
    },
    {
      "_id": null,
      "Name": "会稽秋晚奉呈于太守",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "寂寂讼庭幽，",
        "森森戟户秋。",
        "山光隐危堞，",
        "湖色上高楼。",
        "禹穴探书罢，",
        "天台作赋游。",
        "云浮将越客，",
        "岁晚共淹留。"
      ]
    },
    {
      "_id": null,
      "Name": "会稽郡楼雪霁",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "江城昨夜雪如花，",
        "郢客登楼齐望华。",
        "夏禹坛前仍聚玉，",
        "西施浦上更飞沙。",
        "帘栊向晚寒风度，",
        "睥睨初晴落景斜。",
        "数处微明销不尽，",
        "湖山清映越人家。"
      ]
    },
    {
      "_id": null,
      "Name": "冯翊西楼",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "城上西楼倚暮天，",
        "楼中归望正凄然。",
        "近郭乱山横古渡，",
        "野庄乔木带新烟。",
        "北风吹雁声能苦，",
        "远客辞家月再圆。",
        "陶令好文常对酒，",
        "相招那惜醉为眠。"
      ]
    },
    {
      "_id": null,
      "Name": "华州夜宴庾侍御宅",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "世故他年别，",
        "心期此夜同。",
        "千峰孤烛外，",
        "片雨一更中。",
        "酒客逢山简，",
        "诗人得谢公。",
        "自怜驱匹马，",
        "拂曙向关东。"
      ]
    },
    {
      "_id": null,
      "Name": "华清宫",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "天宝承平奈乐何，",
        "华清宫殿郁嵯峨。",
        "朝元阁峻临秦岭，",
        "羯鼓楼高俯渭河。",
        "玉树长飘云外曲，",
        "霓裳闲舞月中歌。",
        "只今惟有温泉水，",
        "呜咽声中感慨多。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "汉月经时掩，",
        "胡尘与岁深。",
        "（《咏镜》，",
        "见《诗式》）。",
        "第二百四十三卷"
      ]
    },
    {
      "_id": null,
      "Name": "城西虎跑寺",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "石势虎蹲伏，",
        "山形龙屈盘。",
        "寺开梁殿阁，",
        "坟掩晋衣冠。",
        "出涧泉声细，",
        "斜阳塔影寒。",
        "近城多□□，",
        "栖息此中安。"
      ]
    },
    {
      "_id": null,
      "Name": "奉寄皇甫补缺",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "京口情人别久，",
        "扬州估客来疏。",
        "潮至浔阳回去，",
        "相思无处通书。"
      ]
    },
    {
      "_id": null,
      "Name": "奉送王相公赴幽州",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "黄阁开帏幄，",
        "丹墀拜冕旒。",
        "位高汤左相，",
        "权总汉诸侯。",
        "不改周南化，",
        "仍分赵北忧。",
        "双旌过易水，",
        "千骑入幽州。",
        "塞草连天暮，",
        "边风动地愁。",
        "无因随远道，",
        "结束佩吴钩。"
      ]
    },
    {
      "_id": null,
      "Name": "安公房问法",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "流年一日复一日，",
        "世事何时是了时。",
        "试向东林问禅伯，",
        "遣将心地学琉璃。"
      ]
    },
    {
      "_id": null,
      "Name": "宿白马寺",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "白马驮经事已空，",
        "断碑残刹见遗踪。",
        "萧萧茅屋秋风起，",
        "一夜雨声羁思浓。"
      ]
    },
    {
      "_id": null,
      "Name": "寄郑员外",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "经月愁闻雨，",
        "新年苦忆君。",
        "何时共登眺，",
        "整屐待晴云。"
      ]
    },
    {
      "_id": null,
      "Name": "山家",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "板桥人渡泉声，",
        "茅檐日午鸡鸣。",
        "莫嗔焙茶烟暗，",
        "却喜晒谷天晴。"
      ]
    },
    {
      "_id": null,
      "Name": "归山",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "心事数茎白发，",
        "生涯一片青山。",
        "空林有雪相待，",
        "古道无人独还。"
      ]
    },
    {
      "_id": null,
      "Name": "感怀",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "调与时人背，",
        "心将静者论。",
        "终年帝城里，",
        "不识五侯门。"
      ]
    },
    {
      "_id": null,
      "Name": "明德宫",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "碧瓦朱楹白昼闲，",
        "金衣宝扇晓风寒。",
        "摩云观阁高如许，",
        "长对河流出断山。"
      ]
    },
    {
      "_id": null,
      "Name": "春夜皇甫冉宅欢宴",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "流落时相见，",
        "悲欢共此情。",
        "兴因尊酒洽，",
        "愁为故人轻。",
        "暗滴花茎露，",
        "斜晖月过城。",
        "那知横吹笛，",
        "江外作边声。"
      ]
    },
    {
      "_id": null,
      "Name": "春申君祠",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "春申祠宇空山里，",
        "古柏阴阴石泉水。",
        "日暮江南无主人，",
        "弥令过客思公子。",
        "萧条寒景傍山村，",
        "寂寞谁知楚相尊。",
        "当时珠履三千客，",
        "赵使怀惭不敢言。"
      ]
    },
    {
      "_id": null,
      "Name": "晚次淮阳",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "微凉风叶下，",
        "楚俗转清闲。",
        "候馆临秋水，",
        "郊扉掩暮山。",
        "月明潮渐近，",
        "露湿雁初还。",
        "浮客了无定，",
        "萍流淮海间。"
      ]
    },
    {
      "_id": null,
      "Name": "枫桥夜泊",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "月落乌啼霜满天，",
        "江枫渔火对愁眠。",
        "姑苏城外寒山寺，",
        "夜半钟声到客船。"
      ]
    },
    {
      "_id": null,
      "Name": "江上送客游庐山",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "楚客自相送，",
        "沾裳春水边。",
        "晚来风信好，",
        "并发上江船。",
        "花映新林岸，",
        "云开瀑布泉。",
        "惬心应在此，",
        "佳句向谁传。"
      ]
    },
    {
      "_id": null,
      "Name": "河间献王墓",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "汉家宗室独称贤，",
        "遗事闲中见旧编。",
        "偶过河间寻往迹，",
        "却怜荒冢带寒烟。",
        "频求千古书连帙，",
        "独对三雍策几篇。",
        "雅乐未兴人已逝，",
        "雄歌依旧大风传。"
      ]
    },
    {
      "_id": null,
      "Name": "洛阳作",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "洛阳天子县，",
        "金谷石崇乡。",
        "草色侵官道，",
        "花枝出苑墙。",
        "书成休逐客，",
        "赋罢遂为郎。",
        "贫贱非吾事，",
        "西游思自强。"
      ]
    },
    {
      "_id": null,
      "Name": "清明日自西午桥至瓜岩村有怀",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "晚霁龙门雨，",
        "春生汝穴风。",
        "鸟啼官路静，",
        "花发毁垣空。",
        "鸣玉惭时辈，",
        "垂丝学老翁。",
        "旧游人不见，",
        "惆怅洛城东。"
      ]
    },
    {
      "_id": null,
      "Name": "游灵岩",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "灵岩有路入烟霞，",
        "台殿高低释子家。",
        "风满回廊飘坠叶，",
        "水流绝涧泛秋花。",
        "青松阅世风霜古，",
        "翠竹题诗岁月赊。",
        "谁谓无生真可学，",
        "山中亦自有年华。"
      ]
    },
    {
      "_id": null,
      "Name": "留别",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "何事千年遇圣君，",
        "坐令双鬓老江云。",
        "南行更入山深浅，",
        "岐路悠悠水自分。"
      ]
    },
    {
      "_id": null,
      "Name": "登丹阳楼",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "寒皋那可望，",
        "旅客又初还。",
        "迢递高楼上，",
        "萧疏凉野间。",
        "暮晴依远水，",
        "秋兴属连山。",
        "浮客时相见，",
        "霜凋朱翠颜。"
      ]
    },
    {
      "_id": null,
      "Name": "秋日道中",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "齐鲁西风草树秋，",
        "川原高下过东州。",
        "道边白鹤来华表，",
        "陌上苍麟卧古丘。",
        "九曲半应非禹迹，",
        "三山何处是仙洲。",
        "径行俯仰成今古，",
        "却忆当年赋远游。"
      ]
    },
    {
      "_id": null,
      "Name": "褚主簿宅会毕庶子钱员外郎使君",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "开瓮腊酒熟，",
        "主人心赏同。",
        "斜阳疏竹上，",
        "残雪乱山中。",
        "更喜宣城印，",
        "朝廷与谢公。"
      ]
    },
    {
      "_id": null,
      "Name": "读峄山碑",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "六国平来四海家，",
        "相君当代擅才华。",
        "谁知颂德山头石，",
        "却与他人戒后车。"
      ]
    },
    {
      "_id": null,
      "Name": "赠章八元",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张继"
      ],
      "Contents": [
        "相见谈经史，",
        "江楼坐夜阑。",
        "风声吹户响，",
        "灯影照人寒。",
        "俗薄交游尽，",
        "时危出处难。",
        "衰年逢二妙，",
        "亦得闷怀宽。"
      ]
    },
    {
      "_id": null,
      "Name": "送张中丞归使幕",
      "PoetId": "51135ce1b5654c98a17f9adf31ac96a2",
      "PoetName": "张继",
      "Form": "五律",
      "Tags": [

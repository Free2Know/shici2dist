      "Tags": [
        "唐代",
        "韦述"
      ],
      "Contents": [
        "修文中禁启，",
        "改字令名加。",
        "台座征人杰，",
        "书坊应国华。",
        "赋诗开广宴，",
        "赐酒酌流霞。",
        "云散明金阙，",
        "池开照玉沙。",
        "掖垣留宿鸟，",
        "温树落馀花。",
        "谬此天光及，",
        "衔恩醉日斜。"
      ]
    },
    {
      "_id": null,
      "Name": "广陵送别宋员外佐越郑舍人还京",
      "PoetId": "518b8fed862c4306a8f2e05b35d3d2a3",
      "PoetName": "韦述",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦述"
      ],
      "Contents": [
        "朱绂临秦望，",
        "皇华赴洛桥。",
        "文章南渡越，",
        "书奏北归朝。",
        "树入江云尽，",
        "城衔海月遥。",
        "秋风将客思，",
        "川上晚萧萧。"
      ]
    },
    {
      "_id": null,
      "Name": "春日山庄",
      "PoetId": "518b8fed862c4306a8f2e05b35d3d2a3",
      "PoetName": "韦述",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦述"
      ],
      "Contents": [
        "初岁开韶月，",
        "田家喜载阳。",
        "晚晴摇水态，",
        "迟景荡山光。",
        "浦净渔舟远，",
        "花飞樵路香。",
        "自然成野趣，",
        "都使俗情忘。"
      ]
    },
    {
      "_id": null,
      "Name": "晚渡伊水",
      "PoetId": "518b8fed862c4306a8f2e05b35d3d2a3",
      "PoetName": "韦述",
      "Form": "未知",
      "Tags": [
        "唐代",
        "韦述"
      ],
      "Contents": [
        "悠悠涉伊水，",
        "伊水清见石。",
        "是时春向深，",
        "两岸草如积。",
        "迢递望洲屿，",
        "逶迤亘津陌。",
        "新树落疏红，",
        "遥原上深碧。",
        "回瞻洛阳苑，",
        "遽有长山隔。",
        "烟雾犹辨家，",
        "风尘已为客。",
        "登陟多异趣，",
        "往来见行役。",
        "云起早已昏，",
        "鸟飞日将夕。",
        "光阴逝不借，",
        "超然慕畴昔。",
        "远游亦何为，",
        "归来存竹帛。"
      ]
    }
  ]

{
  "_id": "4ca802c185a74fedb93e010d57f57acd",
  "Name": "庾抱",
  "Description": "庾抱，润州江宁人。有学术，隋元德太子学士。高祖初起，隐太子引为陇西公府记室，文檄皆出其手。转太子舍人。集十卷，今存诗五首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "别蔡参军",
      "PoetId": "4ca802c185a74fedb93e010d57f57acd",
      "PoetName": "庾抱",
      "Form": "五律",
      "Tags": [
        "唐代",
        "庾抱"
      ],
      "Contents": [
        "人世多飘忽，",
        "沟水易东西。",
        "今日欢娱尽，",
        "何年风月同。",
        "悲生万里外，",
        "恨起一杯中。",
        "性灵如未失，",
        "南北有征鸿。"
      ]
    },
    {
      "_id": null,
      "Name": "卧疴喜霁，开扉望月，简宫内知友",
      "PoetId": "4ca802c185a74fedb93e010d57f57acd",
      "PoetName": "庾抱",
      "Form": "未知",
      "Tags": [
        "唐代",
        "庾抱"
      ],
      "Contents": [
        "秋雨移弦望，",
        "疲疴倦苦辛。",
        "忽对荆山璧，",
        "委照越吟人。",
        "高高侵地镜，",
        "皎皎彻天津。",
        "色丽班姬箧，",
        "光润洛川神。",
        "轮辉池上动，",
        "桂影隙中新。",
        "怀贤虽不见，",
        "忽似暂参辰。"
      ]
    },
    {
      "_id": null,
      "Name": "和乐记室忆江水",
      "PoetId": "4ca802c185a74fedb93e010d57f57acd",
      "PoetName": "庾抱",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "庾抱"
      ],
      "Contents": [
        "遥想观涛处，",
        "犹意采莲歌。",
        "无因关塞叶，",
        "共下洞庭波。"
      ]
    },
    {
      "_id": null,
      "Name": "赋得胥台露",
      "PoetId": "4ca802c185a74fedb93e010d57f57acd",
      "PoetName": "庾抱",
      "Form": "未知",
      "Tags": [
        "唐代",
        "庾抱"
      ],
      "Contents": [
        "胥台既落构，",
        "荆棘稍侵扉。",
        "栋拆连云影，",
        "梁摧照日晖。",
        "翔军鸟逐不及，",
        "巢燕反无归。",
        "唯有团阶露，",
        "承晓共沾衣。"
      ]
    },
    {
      "_id": null,
      "Name": "骢马",
      "PoetId": "4ca802c185a74fedb93e010d57f57acd",
      "PoetName": "庾抱",
      "Form": "五律",
      "Tags": [
        "唐代",
        "庾抱"
      ],
      "Contents": [
        "枥上浮云骢，",
        "本出吴门中。",
        "发迹来东道，",
        "长鸣起北风。",
        "回鞍拂桂白，",
        "赪汗类尘红。",
        "灭没徒留影，",
        "无因图汉宫。"
      ]
    }
  ]
}
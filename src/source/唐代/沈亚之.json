{
  "_id": "61471aab8ee44bd7b6530e6b15c3a518",
  "Name": "沈亚之",
  "Description": "沈亚之，字下贤，吴兴人。登元和十年进士第，历殿中丞御史、内供奉。太和初，为德州行营使柏耆判官，耆贬，亚之亦谪南康尉，终郢州掾。集九卷，今编诗一卷。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "五月六日，发石头城，步望前船，示……",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "客子去淮阳，",
        "逶迤别梦长。",
        "水关开夜锁，",
        "雾棹起晨凉。",
        "烟月期同赏，",
        "风波勿异行。",
        "隐山曾撼橹，",
        "转濑指遥樯。",
        "蒲叶吴刀绿，",
        "筠筒楚粽香。",
        "因书报惠远，",
        "为我忆檀郎。"
      ]
    },
    {
      "_id": null,
      "Name": "别庞子肃",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "自为应仙才，",
        "丹砂炼几回。",
        "山秋梦桂树，",
        "月晓忆瑶台。",
        "雨雪依岩避，",
        "烟云逐步开。",
        "今朝龙仗去，",
        "早晚鹤书来。"
      ]
    },
    {
      "_id": null,
      "Name": "宿后自华阳行次昭应寄王直方",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "重归能几日，",
        "物意早如春。",
        "暖色先骊岫，",
        "寒声别雁群。",
        "川光如戏剑，",
        "帆态似翔云。",
        "为报东园蝶，",
        "南枝日已曛。"
      ]
    },
    {
      "_id": null,
      "Name": "宿白马津寄寇立",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "客思听蛩嗟，",
        "秋怀似乱砂。",
        "剑头悬日影，",
        "蝇鼻落灯花。",
        "天外归鸿断，",
        "漳南别路赊。",
        "闻君同旅舍，",
        "几得梦还家。"
      ]
    },
    {
      "_id": null,
      "Name": "山出云",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "片云朝出岫，",
        "孤色迥难亲。",
        "盖小辞山早，",
        "根轻触石新。",
        "飘扬经绿野，",
        "明丽照青春。",
        "拂树疑舒叶，",
        "临江似结鳞。",
        "从龙方有感，",
        "捧日岂无因。",
        "看助为霖去，",
        "恩沾雨露均。"
      ]
    },
    {
      "_id": null,
      "Name": "文祝延二阕",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "闽山之杭杭兮水堋堋，",
        "吞荒抱大兮香叠层。",
        "腾气清浑兮朝昏，",
        "神生其中兮宅幽凝。",
        "居如山兮惠如水，",
        "处端卓兮赴下而忘鄙。",
        "集人之祈兮从人之所市，",
        "攀清明兮叩仿佛。",
        "我民清兮期吉日，",
        "愿听诚兮陈所当。",
        "侯临我兮恩如光，",
        "照导兮天覆。",
        "惠流吾兮乐且康，",
        "恭闻侯兮饮食失常。",
        "民萦忧兮心苦疮，",
        "饱我之饥兮侯由有谷。",
        "神有泽兮宜荫沃，",
        "脱侯之恙兮归侯之多福。",
        "群卑勤之恭洁兮，",
        "鉴贞盟乎山竹。",
        "兕载吹兮音咿咿，",
        "铜铙呶兮睋呼眓睢。",
        "樟之盖兮麓下，",
        "云垂幄兮为帷。",
        "合吾民兮将安，",
        "维吾侯之康兮乐欣。",
        "肴盘列兮答神，",
        "神摆渔篁兮降拂窣窣。",
        "右持妓兮左夫人，",
        "态修邃兮佻眇。",
        "调丹含琼兮瑳佳笑，",
        "馨炮膻燔兮溢按豆。",
        "爵盎无虚兮果摭杂佑，",
        "秋云清醉兮流融光。",
        "巫裾旋兮觋袖翔，",
        "瞪虚凝兮览回杨。",
        "语神欢兮酒云央，",
        "望吾侯兮遵赏事。",
        "朝马驾兮搦宝辔，",
        "千弭函弦兮森道骑。",
        "吾何乐兮神轩，",
        "维侯之康兮居游自遂。"
      ]
    },
    {
      "_id": null,
      "Name": "春色满皇州",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "词",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "何处春辉好，",
        "偏宜在雍州。",
        "花明夹城道，",
        "柳暗曲江头。",
        "风软游丝重，",
        "光融瑞气浮。",
        "斗鸡怜短草，",
        "乳燕傍高楼。",
        "绣毂盈香陌，",
        "新泉溢御沟。",
        "回看日欲暮，",
        "还骑似川流。"
      ]
    },
    {
      "_id": null,
      "Name": "春词酬元微之",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "黄莺啼时春日高，",
        "红芳发尽井边桃。",
        "美人手暖裁衣易，",
        "片片轻花落翦刀。"
      ]
    },
    {
      "_id": null,
      "Name": "曲江亭望慈恩杏花发",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "曲台晴好望，",
        "近接梵王家。",
        "十亩开金地，",
        "千株发杏花。",
        "带云犹误雪，",
        "映日欲欺霞。",
        "紫陌传香远，",
        "红泉落影斜。",
        "园中春尚早，",
        "亭上路非赊。",
        "芳景偏堪赏，",
        "其如积岁华。"
      ]
    },
    {
      "_id": null,
      "Name": "村居",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "有树巢宿鸟，",
        "无酒共客醉。",
        "月上蝉韵残，",
        "梧桐阴绕地。",
        "独出村舍门，",
        "吟剧微风起。",
        "萧萧芦荻丛，",
        "叫啸如山鬼。",
        "应缘我憔悴，",
        "为我哭秋思。"
      ]
    },
    {
      "_id": null,
      "Name": "梦别秦穆公",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "击髆舞，",
        "恨满烟光无处所。",
        "泪如雨，",
        "欲拟著辞不成语。",
        "金凤衔红旧绣衣，",
        "几度宫中同看舞。",
        "人间春日正欢乐，",
        "日暮东风何处去。"
      ]
    },
    {
      "_id": null,
      "Name": "梦挽秦弄玉",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "泣葬一枝红，",
        "生同死不同。",
        "金钿坠芳草，",
        "香绣满春风。",
        "旧日闻箫处，",
        "高楼当月中。",
        "梨花寒食夜，",
        "深闭翠微宫。"
      ]
    },
    {
      "_id": null,
      "Name": "梦游秦宫",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "君王多感放东归，",
        "从此秦宫不复期。",
        "春景似伤秦丧主，",
        "落花如雨泪胭脂。"
      ]
    },
    {
      "_id": null,
      "Name": "汴州船行赋岸傍所见",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "古木晓苍苍，",
        "秋林拂岸香。",
        "露珠虫网细，",
        "金缕兔丝长。",
        "秋浪时回沫，",
        "惊鳞乍触航。",
        "蓬烟拈绿线，",
        "棘实缀红囊。",
        "乱穗摇鼯尾，",
        "出根挂凤肠。",
        "聊持一濯足，",
        "谁道比沧浪。"
      ]
    },
    {
      "_id": null,
      "Name": "湘中怨",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "隆佳秀兮昭盛时，",
        "播薰绿兮淑华归。",
        "顾室荑与处萼兮，",
        "潜重房以饰姿。",
        "见稚态之韶羞兮，",
        "蒙长霭以为帏。",
        "醉融光兮渺渺瀰瀰，",
        "迷千里兮涵烟眉，",
        "晨陶陶兮暮熙熙。",
        "舞婑那之秾条兮，",
        "骋盈盈以披迟。",
        "酡游颜兮倡蔓卉縠，",
        "流茜霓兮石发髓旎。",
        "溯青山兮江之隅，",
        "拖湘波兮袅绿裾。",
        "荷拳拳兮未舒，",
        "匪同归兮将焉如。"
      ]
    },
    {
      "_id": null,
      "Name": "答殷尧藩赠罢泾源记室",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "劳君辍雅话，",
        "听说事疆场。",
        "提笔从征虏，",
        "飞书始伏羌。",
        "河流辞马岭，",
        "节卧听龙骧。",
        "孤负平生剑，",
        "空怜射斗光。"
      ]
    },
    {
      "_id": null,
      "Name": "虎丘山真娘墓",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "金钗沦剑壑，",
        "兹地似花台。",
        "油壁何人值，",
        "钱塘度曲哀。",
        "翠馀长染柳，",
        "香重欲薰梅。",
        "但道行云去，",
        "应随魂梦来。"
      ]
    },
    {
      "_id": null,
      "Name": "西蕃请谒庙",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "肃肃层城里，",
        "巍巍祖庙清。",
        "圣恩覃布濩，",
        "异域献精诚。",
        "冠盖分行列，",
        "戎夷辨姓名。",
        "礼终齐百拜，",
        "心洁表忠贞。",
        "瑞气千重色，",
        "箫韶九奏声。",
        "仗移迎日转，",
        "旌动逐风轻。",
        "休运威仪正，",
        "年推俎豆盈。",
        "不才惭圣泽，",
        "空此望华缨。"
      ]
    },
    {
      "_id": null,
      "Name": "送庞子肃",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "三年游宦也迷津，",
        "马困长安九陌尘。",
        "都作无成不归去，",
        "古来妻嫂笑苏秦。"
      ]
    },
    {
      "_id": null,
      "Name": "送文颖上人游天台",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "露花浮翠瓦，",
        "鲜思起芳丛。",
        "此际断客梦，",
        "况复别志公。",
        "既历天台去，",
        "言过赤城东。",
        "莫说人间事，",
        "崎岖尘土中。"
      ]
    },
    {
      "_id": null,
      "Name": "题侯仙亭",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "新创仙亭覆石坛，",
        "雕梁峻宇入云端。",
        "岭北啸猿高枕听，",
        "湖南山色卷帘看。"
      ]
    },
    {
      "_id": null,
      "Name": "题海榴树呈八叔大人",
      "PoetId": "61471aab8ee44bd7b6530e6b15c3a518",
      "PoetName": "沈亚之",
      "Form": "七律",
      "Tags": [
        "唐代",
        "沈亚之"
      ],
      "Contents": [
        "曾在蓬壶伴众仙，",
        "文章枝叶五云边。",
        "几时奉宴瑶台下，",
        "何日移荣玉砌前。",
        "染日裁霞深雨露，",
        "凌寒送暖占风烟。",
        "应笑强如河畔柳，",
        "逢波逐浪送张骞。"
      ]
    }
  ]

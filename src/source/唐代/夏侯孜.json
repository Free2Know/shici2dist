      "_id": null,
      "Name": "郊庙歌辞·享太庙乐章·宣宗室舞",
      "PoetId": "14ad8129d7d649b79421dbf92988fd5c",
      "PoetName": "夏侯孜",
      "Form": "未知",
      "Tags": [
        "唐代",
        "夏侯孜"
      ],
      "Contents": [
        "於铄令主，",
        "圣祚重昌。",
        "兴起教义，",
        "申明典章。",
        "俗尚素朴，",
        "人皆乐康。",
        "积德可报，",
        "流庆无疆。"
      ]
    }
  ]

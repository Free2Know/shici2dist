  "_id": "3a2647656932464d94a0398158aefdab",
  "Name": "韦夏卿",
  "Description": "韦夏卿，字云客，京兆万年人。大历中，与弟正卿同举贤良方正高等，授高陵主簿，累迁刑部员外郎，擢给事中，出为常、苏二州刺史。徐州节度使张建封辟为徐泗行军司马，俄召为吏部侍郎，进检校工部尚书、东都留守，改太子少保。诗三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "别张贾",
      "PoetId": "3a2647656932464d94a0398158aefdab",
      "PoetName": "韦夏卿",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦夏卿"
      ],
      "Contents": [
        "束简下高阁，",
        "买符驱短辕。",
        "故人惜分袂，",
        "结念醉芳樽。",
        "切切别思缠，",
        "萧萧征骑烦。",
        "临归无限意，",
        "相视却忘言。"
      ]
    },
    {
      "_id": null,
      "Name": "和丘员外题湛长史旧居",
      "PoetId": "3a2647656932464d94a0398158aefdab",
      "PoetName": "韦夏卿",
      "Form": "未知",
      "Tags": [
        "唐代",
        "韦夏卿"
      ],
      "Contents": [
        "道胜物能齐，",
        "累轻身易退。",
        "苟安一丘上，",
        "何必三山外。",
        "云霞长若绮，",
        "松石常如黛。",
        "徒有昔王过，",
        "竟遗青史载。",
        "诗因野寺咏，",
        "酒向山椒酹。",
        "异时逢尔知，",
        "兹辰驻余旆。"
      ]
    },
    {
      "_id": null,
      "Name": "送顾况归茅山",
      "PoetId": "3a2647656932464d94a0398158aefdab",
      "PoetName": "韦夏卿",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦夏卿"
      ],
      "Contents": [
        "圣代为迁客，",
        "虚皇作近臣。",
        "法尊称大洞，",
        "学浅忝初真。",
        "鸾凤文章丽，",
        "烟霞翰墨新。",
        "羡君寻句曲，",
        "白鹄是三神。"
      ]
    }
  ]
}
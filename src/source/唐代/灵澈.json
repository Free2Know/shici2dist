{
  "_id": "7341b3ec8952461a903bb7e07d50fb23",
  "Name": "灵澈",
  "Description": "灵澈，字源澄，姓汤氏，会稽人，云门寺律僧也。少从严维学为诗，后至吴兴，与僧皎然游。贞元中，皎然荐之包佶，又荐之李纾，名振辇下。缁流嫉之，造飞语激中贵人，贬徙汀州，会赦归乡。诗一卷，今存十六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "东林寺寄包侍御",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "古殿清阴山木春，",
        "池边跂石一观身。",
        "谁能来此焚香坐，",
        "共作垆峰二十人。"
      ]
    },
    {
      "_id": null,
      "Name": "东林寺酬韦丹刺史",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "年老心闲无外事，",
        "麻衣草座亦容身。",
        "相逢尽道休官好，",
        "林下何曾见一人。"
      ]
    },
    {
      "_id": null,
      "Name": "九日和于使君思上京亲故",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "清晨有高会，",
        "宾从出东方。",
        "楚俗风烟古，",
        "汀洲草木凉。",
        "山情来远思，",
        "菊意在重阳。",
        "心忆华池上，",
        "从容鸳鹭行。"
      ]
    },
    {
      "_id": null,
      "Name": "元日观郭将军早朝",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "欲曙九衢人更多，",
        "千条香烛照星河。",
        "今朝始见金吾贵，",
        "车马纵横避玉珂。"
      ]
    },
    {
      "_id": null,
      "Name": "初到汀州",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "五律",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "初放到沧洲，",
        "前心讵解愁。",
        "旧交容不拜，",
        "临老学梳头。",
        "禅室白云去，",
        "故山明月秋。",
        "几年犹在此，",
        "北户水南流。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "松树有死枝，",
        "冢上唯莓苔。",
        "石门无人入，",
        "古木花不开。",
        "绿竹岁寒在，",
        "故人衰老多。",
        "月色静中见，",
        "泉声深处闻。",
        "古观茅山下，",
        "诸峰欲曙时。",
        "真人是黄子，",
        "玉堂生紫芝。",
        "禅门至六祖，",
        "衣钵无人得。",
        "古墓碑表折，",
        "荒垄松柏稀。",
        "秋深知气正，",
        "家近觉山寒。",
        "山僧不记重阳日，",
        "因见茱萸忆去年。",
        "今非古狱下，",
        "莫向斗边看。",
        "海月生残夜，",
        "江春入暮年。",
        "窗风枯砚水，",
        "山雨慢琴弦。"
      ]
    },
    {
      "_id": null,
      "Name": "听莺歌",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "新莺傍檐晓更悲，",
        "孤音清泠啭素枝。",
        "口边血出语未尽，",
        "岂是怨恨人不知。",
        "不食枯桑葚，",
        "不衔苦李花。",
        "偶然弄枢机，",
        "婉转凌烟霞。",
        "众雏飞鸣何跼促，",
        "自觇游蜂啄枯木。",
        "玄猿何事朝夜啼，",
        "白鹭长在汀洲宿。",
        "黑雕黄鹤岂不高，",
        "金笼玉钩伤羽毛。",
        "三江七泽去不得，",
        "风烟日暮生波涛。",
        "飞去来，",
        "莫上高城头，",
        "莫下空园里。",
        "城头鸱乌拾膻腥，",
        "空园燕雀争泥滓。",
        "愿当结舌含白云，",
        "五月六月一声不可闻。"
      ]
    },
    {
      "_id": null,
      "Name": "天姥岑望天台山",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "天台众峰外，",
        "华顶当寒空。",
        "有时半不见，",
        "崔嵬在云中。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和郎中题仙岩瀑布十四韵",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "未知",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "致闲在一郡，",
        "民安已三年。",
        "每怀贞士心，",
        "孙许犹差肩。",
        "采异百代后，",
        "得之古人前。",
        "扪险路坱圠，",
        "临深闻潺湲。",
        "上有千岁树，",
        "下飞百丈泉。",
        "清谷长雷雨，",
        "丹青凝霜烟。",
        "遥将大壑近，",
        "暗与方壶连。",
        "白石颜色寒，",
        "老藤花叶鲜。",
        "轩皇自兹去，",
        "乔木空依然。",
        "碧山东极海，",
        "明月高升天。",
        "平野生竹柏，",
        "虽远地不偏。",
        "永愿酬国恩，",
        "自将布金田。",
        "穆穆早朝人，",
        "英英丹陛贤。",
        "谁思沧洲意，",
        "方欲涉巨川。"
      ]
    },
    {
      "_id": null,
      "Name": "宿东林寺",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "天寒猛虎叫岩雪，",
        "林下无人空有月。",
        "千年像教今不闻，",
        "焚香独为鬼神说。"
      ]
    },
    {
      "_id": null,
      "Name": "归湖南作",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "山边水边待月明，",
        "暂向人间借路行。",
        "如今还向山边去，",
        "只有湖水无行路。"
      ]
    },
    {
      "_id": null,
      "Name": "答徐广叔四问",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "童子出家无第行，",
        "随师乞食遣称名。",
        "长沙岂敢论年几，",
        "绛老惟知甲子生。"
      ]
    },
    {
      "_id": null,
      "Name": "简寂观",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "古松古柏岩壁间，",
        "猿攀鹤巢古枝折。",
        "五月有霜六月寒，",
        "时见山翁来取雪。"
      ]
    },
    {
      "_id": null,
      "Name": "西林寄杨公",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "日日爱山归已迟，",
        "闲闲空度少年时。",
        "余身定寄林中老，",
        "心与长松片石期。"
      ]
    },
    {
      "_id": null,
      "Name": "远公墓",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "古墓石棱棱，",
        "寒云晚景凝。",
        "空悲虎溪月，",
        "不见雁门僧。"
      ]
    },
    {
      "_id": null,
      "Name": "送鉴供奉归蜀宁亲",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七律",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "林间出定恋庭闱，",
        "圣主恩深暂许归。",
        "双树欲辞金锡冷，",
        "四花犹向玉阶飞。",
        "梁山拂汉分清境，",
        "蜀雪和烟惹翠微。",
        "此去不须求彩服，",
        "紫衣全胜老莱衣。"
      ]
    },
    {
      "_id": null,
      "Name": "闻李处士亡",
      "PoetId": "7341b3ec8952461a903bb7e07d50fb23",
      "PoetName": "灵澈",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "灵澈"
      ],
      "Contents": [
        "时时闻说故人死，",
        "日日自悲随老身。",
        "白发不生应不得，",
        "青山长在属何人。"
      ]
    }
  ]
}
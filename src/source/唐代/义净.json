{
  "_id": "8d80bedd265f465189990fa522e2686c",
  "Name": "义净",
  "Description": "义净（一作净义），字文明，范阳人，俗姓张氏。咸亨初，往西域，遍历三十馀国，经二十五年，求得梵本四百部，归译之。诗六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "余以咸亨元年在西京寻听于时与并部……",
      "PoetId": "8d80bedd265f465189990fa522e2686c",
      "PoetName": "义净",
      "Form": "五律",
      "Tags": [
        "唐代",
        "义净"
      ],
      "Contents": [
        "我行之数万，",
        "愁绪百重思。",
        "那教六尺影，",
        "独步五天陲。",
        "上将可陵师，",
        "匹士志难移。",
        "如论惜短命，",
        "何得满长祇。"
      ]
    },
    {
      "_id": null,
      "Name": "玄逵律师言离广府还望桂林去留怆然……",
      "PoetId": "8d80bedd265f465189990fa522e2686c",
      "PoetName": "义净",
      "Form": "五律",
      "Tags": [
        "唐代",
        "义净"
      ],
      "Contents": [
        "标心之梵宇，",
        "运想入仙洲。",
        "婴痼乖同好，",
        "沈情阻若抽。",
        "叶落乍难聚，",
        "情离不可收。",
        "何日乘杯至，",
        "详观演法流。"
      ]
    },
    {
      "_id": null,
      "Name": "西域寺",
      "PoetId": "8d80bedd265f465189990fa522e2686c",
      "PoetName": "义净",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "义净"
      ],
      "Contents": [
        "众美仍罗列，",
        "群英已古今。",
        "也知生死分，",
        "那得不伤心。"
      ]
    },
    {
      "_id": null,
      "Name": "道希法师求法西域终于庵摩罗跋……",
      "PoetId": "8d80bedd265f465189990fa522e2686c",
      "PoetName": "义净",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "义净"
      ],
      "Contents": [
        "百苦忘劳独进影，",
        "四恩在念契流通。",
        "如何未尽传灯志，",
        "溘然于此遇途穷。"
      ]
    }
  ]
}
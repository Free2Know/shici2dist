{
  "_id": "903c40dabefa415f97e8ea1618bc9b74",
  "Name": "朱景玄",
  "Description": "朱景玄，会昌时人，官至太子谕德。诗一卷，今存十五首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "中峰亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "中峰上翠微，",
        "窗晓早霞飞。",
        "几引登山屐，",
        "春风踏雪归。"
      ]
    },
    {
      "_id": null,
      "Name": "华山南望春",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "未知",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "灵岳多异状，",
        "巉巉出虚空。",
        "闲云恋岩壑，",
        "起灭苍翠中。",
        "皓气澄野水，",
        "神光秘琼宫。",
        "鹤巢前林雪，",
        "瀑落满涧风。",
        "春尽花未发，",
        "川回路难穷。",
        "何因著山屐，",
        "鹿迹寻羊公。"
      ]
    },
    {
      "_id": null,
      "Name": "双槠亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "连檐对双树，",
        "冬翠夏无尘。",
        "未肯惭桃李，",
        "成阴不待春。"
      ]
    },
    {
      "_id": null,
      "Name": "和崔使君临发不得观积雪",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "贫居稍与池塘近，",
        "旬日轩车不降来。",
        "一树琼花空有待，",
        "晓风看落满青苔。"
      ]
    },
    {
      "_id": null,
      "Name": "四望亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "高亭群峰首，",
        "四面俯晴川。",
        "每见晨光晓，",
        "阶前万井烟。"
      ]
    },
    {
      "_id": null,
      "Name": "宿新安村步",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "淅淅寒流涨浅沙，",
        "月明空渚遍芦花。",
        "离人偶宿孤村下，",
        "永夜闻砧一两家。"
      ]
    },
    {
      "_id": null,
      "Name": "望莲台",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "秋台好登望，",
        "菡萏发清池。",
        "半似红颜醉，",
        "凌波欲暮时。"
      ]
    },
    {
      "_id": null,
      "Name": "水阁",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "楼居半池上，",
        "澄影共相空。",
        "谢守题诗处，",
        "莲开净碧中。"
      ]
    },
    {
      "_id": null,
      "Name": "溪东岑望天都山",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "未知",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "目望浮山丘，",
        "梯云上东岑。",
        "群峰争入冥，",
        "巉巉生太阴。",
        "昔贤此升仙，",
        "结构穷耸深。",
        "未晓日先照，",
        "当昼色半沉。",
        "风泉雪霜飞，",
        "云树琼玉林。",
        "大道非闭隔，",
        "无路不可寻。",
        "窥镜澄夙虑，",
        "望坛起敬心。",
        "一从呼子安，",
        "永绝金玉音。"
      ]
    },
    {
      "_id": null,
      "Name": "茶亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "静得尘埃外，",
        "茶芳小华山。",
        "此亭真寂寞，",
        "世路少人闲。"
      ]
    },
    {
      "_id": null,
      "Name": "莲亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "回塘最幽处，",
        "拍水小亭开。",
        "莫怪阑干湿，",
        "夜宿来。"
      ]
    },
    {
      "_id": null,
      "Name": "迎风亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "山雨留清气，",
        "溪飙送早凉。",
        "时回石门步，",
        "阶下碧云光。"
      ]
    },
    {
      "_id": null,
      "Name": "远闻本郡行春到旧山二首",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "七律",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "一身从宦留京邑，",
        "五马遥闻到旧山。",
        "已领烟霞光野径，",
        "深惭老幼候柴关。",
        "清风借响松筠外，",
        "画隼停晖水石间。",
        "定掩溪名在图传，",
        "共知轩盖此登攀。"
      ]
    },
    {
      "_id": null,
      "Name": "题吕食新水阁兼寄南商州郎中",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五律",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "丹槛初结构，",
        "孤高冠清川。",
        "庭临谷中树，",
        "檐落山上泉。",
        "晓色挂残月，",
        "夜声杂繁弦。",
        "青春去如水，",
        "康乐归何年。"
      ]
    },
    {
      "_id": null,
      "Name": "飞云亭",
      "PoetId": "903c40dabefa415f97e8ea1618bc9b74",
      "PoetName": "朱景玄",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "朱景玄"
      ],
      "Contents": [
        "上结孤圆顶，",
        "飞轩出泰清。",
        "有时迷处所，",
        "梁栋晓云生。"
      ]
    }
  ]
}
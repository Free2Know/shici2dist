{
  "_id": "d932186801f040df873b3cd461f58f67",
  "Name": "韦元旦",
  "Description": "韦元旦，京兆万年人。擢进士第，补东阿尉，迁左台监察御史。与张易之为姻属。易之败，贬感义尉。后复进用，终中书舍人。诗十首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "兴庆池侍宴应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "沧池漭沆帝城边，",
        "殊胜昆明凿汉年。",
        "夹岸旌旗疏辇道，",
        "中流箫鼓振楼船。",
        "云峰四起迎宸幄，",
        "水树千重入御筵。",
        "宴光已深鱼藻咏，",
        "承恩更欲奏甘泉。"
      ]
    },
    {
      "_id": null,
      "Name": "夜宴安乐公主宅",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "主第新成银作榜，",
        "宾筵广宴玉为楼。",
        "壶觞既卜仙人夜，",
        "歌舞宜停织女秋。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和九日幸临渭亭，登高应制得月字",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "云物开千里，",
        "天行乘九月。",
        "丝言丹凤池，",
        "旆转苍龙阙。",
        "灞水欢娱地，",
        "秦京游侠窟。",
        "欣承解愠词，",
        "圣酒黄花发。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和人日宴大明宫恩赐彩缕人胜应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "鸾凤旌旗拂晓陈，",
        "鱼龙角牴大明辰。",
        "青韶既肇人为日，",
        "绮胜初成日作人。",
        "圣藻凌云裁柏赋，",
        "仙歌促宴摘梅春。",
        "垂旒一庆宜年酒，",
        "朝野俱欢荐寿新。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和圣制春日幸望春宫应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "九重楼阁半山霞，",
        "四望韶阳春未赊。",
        "侍跸妍歌临灞涘，",
        "留觞艳舞出京华。",
        "危竿竞捧中街日，",
        "戏马争衔上苑花。",
        "景色欢娱长若此，",
        "承恩不醉不还家。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和幸安乐公主山庄应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "银河南渚帝城隅，",
        "帝辇平明出九衢。",
        "刻凤蟠螭凌桂邸，",
        "穿池叠石写蓬壶。",
        "琼箫暂下钧天乐，",
        "绮缀长悬明月珠。",
        "仙榜承恩争既醉，",
        "方知朝野更欢娱。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和立春游苑迎春应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "七律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "灞涘长安恒近日，",
        "殷正腊月早迎新。",
        "池鱼戏叶仍含冻，",
        "宫女裁花已作春。",
        "向苑云疑承翠幄，",
        "入林风若起青蘋。",
        "年年斗柄东无限，",
        "愿挹琼觞寿北辰。"
      ]
    },
    {
      "_id": null,
      "Name": "奉和送金城公主适西蕃应制",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "柔远安夷俗，",
        "和亲重汉年。",
        "军容旌节送，",
        "国命锦车传。",
        "琴曲悲千里，",
        "箫声恋九天。",
        "唯应西海月，",
        "来就掌珠圆。"
      ]
    },
    {
      "_id": null,
      "Name": "早朝",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "未知",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "震维芳月季，",
        "宸极众星尊。",
        "珮玉朝三陛，",
        "鸣珂度九门。",
        "挈壶分早漏，",
        "伏槛耀初暾。",
        "北倚苍龙阙，",
        "西临紫凤垣。",
        "词庭草欲奏，",
        "温室树无言。",
        "鳞翰空为忝，",
        "长怀圣主恩。"
      ]
    },
    {
      "_id": null,
      "Name": "饯唐州高使君赴任",
      "PoetId": "d932186801f040df873b3cd461f58f67",
      "PoetName": "韦元旦",
      "Form": "五律",
      "Tags": [
        "唐代",
        "韦元旦"
      ],
      "Contents": [
        "桐柏膺新命，",
        "芝兰惜旧游。",
        "鸣皋夜鹤在，",
        "迁木早莺求。",
        "传拥淮源路，",
        "尊空灞水流。",
        "落花纷送远，",
        "春色引离忧。"
      ]
    }
  ]
}
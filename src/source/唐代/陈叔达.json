{
  "_id": "5b6c76be989f42afb2added8dcffa01c",
  "Name": "陈叔达",
  "Description": "陈叔达，字子聪，陈宣帝第十六子也。善容止，有才学，在陈封义阳王。十馀岁侍宴，赋诗十韵，援笔便就，仆射徐陵甚奇之。入隋，为绛郡通守。归款于唐，授丞相府主簿，与记室温大雅同掌机密。军书敕令及禅代文诰，多叔达所为。进黄门侍郎，兼纳言侍中，封江国公。贞观中，拜礼部尚书。集十五卷，今存诗九首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "初年",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "和风起天路，",
        "严气消冰井。",
        "索索枝未柔，",
        "厌厌漏犹永。"
      ]
    },
    {
      "_id": null,
      "Name": "后渚置酒",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "大渚初惊夜，",
        "中流沸鼓鼙。",
        "寒沙满曲浦，",
        "夕雾上邪溪。",
        "岸广凫飞急，",
        "云深雁度低。",
        "严关犹未遂，",
        "此夕待晨鸡。"
      ]
    },
    {
      "_id": null,
      "Name": "听邻人琵琶",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "本是龙门桐，",
        "因妍入汉宫。",
        "香缘罗袖里，",
        "声逐朱弦中。",
        "虽有相思韵，",
        "翻将入塞同。",
        "关山临却月，",
        "花蕊散回风。",
        "为将金谷引，",
        "添令曲未终。"
      ]
    },
    {
      "_id": null,
      "Name": "咏菊",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "霜间开紫蒂，",
        "露下发金英。",
        "但令逢采摘，",
        "宁辞独晚荣。"
      ]
    },
    {
      "_id": null,
      "Name": "太庙祼地歌辞",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "清庙既祼，",
        "郁鬯推礼。",
        "大哉孝思，",
        "严恭祖祢。",
        "龙衮以祭，",
        "鸾刀思启。",
        "发德朱弦，",
        "升歌丹陛。",
        "遥享粢盛，",
        "堂斟况齐。",
        "降福穰穰，",
        "来仪济济。"
      ]
    },
    {
      "_id": null,
      "Name": "州城西园入斋祠社",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "未知",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "升坛预洁祀，",
        "诘早肃分司。",
        "达气风霜积，",
        "登光日色迟。",
        "农教先八政，",
        "阳和秩四时。",
        "祈年服垂冕，",
        "告币动褰帷。",
        "瘗地尊馀奠，",
        "人天庶有资。",
        "椒兰卒清酌，",
        "簠簋彻香萁。",
        "折俎分归胙，",
        "充庭降受厘。",
        "方凭知礼节，",
        "况奉化雍熙。"
      ]
    },
    {
      "_id": null,
      "Name": "早春桂林殿应诏",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "金铺照春色，",
        "玉律动年华。",
        "朱楼云似盖，",
        "丹桂雪如花。",
        "水岸衔阶转，",
        "风条出柳斜。",
        "轻舆临太液，",
        "湛露酌流霞。"
      ]
    },
    {
      "_id": null,
      "Name": "春首",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "雪花联玉树，",
        "冰彩散瑶池。",
        "翔禽遥出没，",
        "积翠远参差。"
      ]
    },
    {
      "_id": null,
      "Name": "自君之出矣",
      "PoetId": "5b6c76be989f42afb2added8dcffa01c",
      "PoetName": "陈叔达",
      "Form": "五律",
      "Tags": [
        "唐代",
        "陈叔达"
      ],
      "Contents": [
        "自君之出矣，",
        "红颜转憔悴。",
        "思君如明烛，",
        "煎心且衔泪。",
        "自君之出矣，",
        "明镜罢红妆。",
        "思君如夜烛，",
        "煎泪几千行。"
      ]
    }
  ]
}
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "保大五年元日大雪，同太弟景遂……",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "七律",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "珠帘高卷莫轻遮，",
        "往往相逢隔岁华。",
        "春气昨宵飘律管，",
        "东风今日放梅花。",
        "素姿好把芳姿掩，",
        "落热还同舞势斜。",
        "坐有宾朋尊有酒，",
        "可怜清味属侬家。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "未知",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "灵槎思浩荡，",
        "老鹤倚崆峒。",
        "苍苔迷古道，",
        "红叶乱朝霞。",
        "栖凤枝梢犹软弱，",
        "化龙形状已依稀。"
      ]
    },
    {
      "_id": null,
      "Name": "山花子·菡萏香销翠叶残",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "词",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "菡萏香销翠叶残，",
        "西风愁起绿波间。",
        "还与韶光共憔悴，",
        "不堪看。",
        "细雨梦回鸡塞远，",
        "小楼吹彻玉笙寒。",
        "多少泪珠无限恨，",
        "倚阑干。"
      ]
    },
    {
      "_id": null,
      "Name": "应天长",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "词",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "一钩初月临妆镜，",
        "蝉鬓凤钗慵不整。",
        "重帘静，",
        "层楼迥，",
        "惆怅落花风不定。",
        "柳堤芳草径，",
        "梦断辘轳金井。",
        "昨夜更阑酒醒，",
        "春愁过却病。"
      ]
    },
    {
      "_id": null,
      "Name": "摊破浣溪沙",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "词",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "手卷真珠上玉钩，",
        "依前春恨锁重楼。",
        "风里落花谁是主，",
        "思悠悠。",
        "青鸟不传云外信，",
        "丁香空结雨中愁。",
        "回首绿波三楚暮，",
        "接天流。"
      ]
    },
    {
      "_id": null,
      "Name": "望远行",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "词",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "玉砌花光锦绣明，",
        "朱扉长日镇长扃。",
        "夜寒不去寝难成，",
        "炉香烟冷自亭亭。",
        "残月秣陵砧，",
        "不传消息但传情。",
        "黄金窗下忽然惊，",
        "征人归日二毛生。"
      ]
    },
    {
      "_id": null,
      "Name": "浣溪沙",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "风压轻云贴水飞，",
        "乍晴池馆燕争泥。",
        "沈郎多病不胜衣。",
        "沙上未闻鸿雁信，",
        "竹间时有鹧鸪啼。",
        "此情惟有落花知。"
      ]
    },
    {
      "_id": null,
      "Name": "游后湖赏莲花",
      "PoetId": "ecd96395fa83414ca70d1b959d3c01b6",
      "PoetName": "李璟",
      "Form": "五律",
      "Tags": [
        "唐代",
        "李璟"
      ],
      "Contents": [
        "蓼花蘸水火不灭，",
        "水鸟惊鱼银梭投。",
        "满目荷花千万顷，",
        "红碧相杂敷清流。",
        "孙武已斩吴宫女，",
        "琉璃池上佳人头。"
      ]
    }
  ]

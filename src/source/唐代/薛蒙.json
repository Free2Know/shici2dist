  "Poems": [
    {
      "_id": null,
      "Name": "和绵州于中丞登越王楼作",
      "PoetId": "b5f38e79611c499587a809a83d0537bf",
      "PoetName": "薛蒙",
      "Form": "五律",
      "Tags": [
        "唐代",
        "薛蒙"
      ],
      "Contents": [
        "左绵江上楼，",
        "五马此销愁。",
        "暑退千山雪，",
        "风来万木秋。",
        "邅回犹刺郡，",
        "系滞似维舟。",
        "即有徵黄日，",
        "名川莫厌游。"
      ]
    }
  ]
}
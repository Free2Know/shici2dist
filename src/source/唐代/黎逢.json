  "Poems": [
    {
      "_id": null,
      "Name": "夏首犹清和",
      "PoetId": "79a6c611022e4cbfa0600dc3b870051b",
      "PoetName": "黎逢",
      "Form": "未知",
      "Tags": [
        "唐代",
        "黎逢"
      ],
      "Contents": [
        "早夏宜初景，",
        "和光起禁城。",
        "祝融将御节，",
        "炎帝启朱明。",
        "日送残花晚，",
        "风过御苑清。",
        "郊原浮麦气，",
        "池沼发荷英。",
        "树影临山动，",
        "禽飞入汉轻。",
        "幸逢尧禹化，",
        "全胜谷中情。"
      ]
    },
    {
      "_id": null,
      "Name": "小苑春望宫池柳色",
      "PoetId": "79a6c611022e4cbfa0600dc3b870051b",
      "PoetName": "黎逢",
      "Form": "未知",
      "Tags": [
        "唐代",
        "黎逢"
      ],
      "Contents": [
        "上林新柳变，",
        "小苑暮天晴。",
        "始望和烟密，",
        "遥怜拂水轻。",
        "色承阳气暖，",
        "阴带御沟清。",
        "不厌随风弱，",
        "仍宜向日明。",
        "垂丝遍阁榭，",
        "飞絮触帘旌。",
        "渐到依依处，",
        "思闻出谷莺。"
      ]
    }
  ]
}
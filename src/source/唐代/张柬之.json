  "Poems": [
    {
      "_id": null,
      "Name": "与国贤良夜歌二首",
      "PoetId": "0c8bb7cfaba14c709191f52d666a08ee",
      "PoetName": "张柬之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张柬之"
      ],
      "Contents": [
        "柳台临新堰，",
        "楼堞相重复。",
        "窈窕凤凰姝，",
        "倾城复倾国。",
        "杏间花照灼，",
        "楼上月裴回。",
        "带娇移玉柱，",
        "含笑捧金杯。"
      ]
    },
    {
      "_id": null,
      "Name": "出塞",
      "PoetId": "0c8bb7cfaba14c709191f52d666a08ee",
      "PoetName": "张柬之",
      "Form": "词",
      "Tags": [
        "唐代",
        "张柬之"
      ],
      "Contents": [
        "侠客重恩光，",
        "骢马饰金装。",
        "瞥闻传羽檄，",
        "驰突救边荒。",
        "歙野山川动，",
        "嚣天旌旆扬。",
        "吴钩明似月，",
        "楚剑利如霜。",
        "电断冲胡塞，",
        "风飞出洛阳。",
        "转战磨笄俗，",
        "横行戴斗乡。",
        "手擒郅支长，",
        "面缚谷蠡王。",
        "将军占太白，",
        "小妇怨流黄。",
        "騕褭青丝骑，",
        "娉婷红粉妆。",
        "三春莺度曲，",
        "八月雁成行。",
        "谁堪坐愁思，",
        "罗袖拂空床。"
      ]
    },
    {
      "_id": null,
      "Name": "杂曲歌辞·东飞伯劳歌",
      "PoetId": "0c8bb7cfaba14c709191f52d666a08ee",
      "PoetName": "张柬之",
      "Form": "未知",
      "Tags": [
        "唐代",
        "张柬之"
      ],
      "Contents": [
        "青田白鹤丹山凤，",
        "婺女姮娥两相送。",
        "谁家绝世绮帐前，",
        "艳粉芳脂映宝钿。",
        "窈窕玉堂褰翠幕，",
        "参差绣户悬珠箔。",
        "绝世三五爱红妆，",
        "冶袖长裾兰麝香。",
        "春去花枝俄易改，",
        "可叹年光不相待。"
      ]
    },
    {
      "_id": null,
      "Name": "相和歌辞·大堤曲",
      "PoetId": "0c8bb7cfaba14c709191f52d666a08ee",
      "PoetName": "张柬之",
      "Form": "五律",
      "Tags": [
        "唐代",
        "张柬之"
      ],
      "Contents": [
        "南国多佳人，",
        "莫若大堤女。",
        "玉床翠羽帐，",
        "宝袜莲花炬。",
        "魂处自目成，",
        "色授开心许。",
        "迢迢不可见，",
        "日暮空愁予。"
      ]
    }
  ]

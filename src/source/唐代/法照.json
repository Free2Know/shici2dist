  "Poems": [
    {
      "_id": null,
      "Name": "寄钱郎中",
      "PoetId": "de07adb314d243bfa6e9933e68afb586",
      "PoetName": "法照",
      "Form": "五律",
      "Tags": [
        "唐代",
        "法照"
      ],
      "Contents": [
        "闭门深树里，",
        "闲足鸟来过。",
        "五马不复贵，",
        "一僧谁奈何。",
        "药苗家自有，",
        "香饭乞时多。",
        "寄语婵娟客，",
        "将心向薜萝。"
      ]
    },
    {
      "_id": null,
      "Name": "送无著禅师归新罗",
      "PoetId": "de07adb314d243bfa6e9933e68afb586",
      "PoetName": "法照",
      "Form": "五律",
      "Tags": [
        "唐代",
        "法照"
      ],
      "Contents": [
        "万里归乡路，",
        "随缘不算程。",
        "寻山百衲弊，",
        "过海一杯轻。",
        "夜宿依云色，",
        "晨斋就水声。",
        "何年持贝叶，",
        "却到汉家城。"
      ]
    },
    {
      "_id": null,
      "Name": "送清江上人",
      "PoetId": "de07adb314d243bfa6e9933e68afb586",
      "PoetName": "法照",
      "Form": "五律",
      "Tags": [
        "唐代",
        "法照"
      ],
      "Contents": [
        "越人僧体古，",
        "清虑洗尘劳。",
        "一国诗名远，",
        "多生律行高。",
        "见山援葛藟，",
        "避世著方袍。",
        "早晚云门去，",
        "侬应逐尔曹。"
      ]
    }
  ]
}
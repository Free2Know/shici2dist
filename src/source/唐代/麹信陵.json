{
  "_id": "543f2310553f460f95ff88fb4f5db923",
  "Name": "麹信陵",
  "Description": "麹信陵，贞元元年进士第，为舒州望江令，有惠政。诗一卷，今存六首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "出自贼中谒恒上人",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "再拜吾师喜复悲，",
        "誓心从此永归依。",
        "浮生恍忽若真梦，",
        "何事于中有是非。"
      ]
    },
    {
      "_id": null,
      "Name": "吴门送客",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "五律",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "乱山吴苑外，",
        "临水让王祠。",
        "素是伤情处，",
        "春非送客时。",
        "不须愁落日，",
        "且愿驻青丝。",
        "千里会应到，",
        "一尊谁共持。"
      ]
    },
    {
      "_id": null,
      "Name": "移居洞庭",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "五律",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "重林将叠嶂，",
        "此处可逃秦。",
        "水隔人间世，",
        "花开洞里春。",
        "荷锄分地利，",
        "纵酒乐天真。",
        "万事更何有，",
        "吾今已外身。"
      ]
    },
    {
      "_id": null,
      "Name": "过真律师旧院",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "寂然秋院闭秋光，",
        "过客闲来礼影堂。",
        "坚冰销尽还成水，",
        "本自无形何足伤。"
      ]
    },
    {
      "_id": null,
      "Name": "酬谈上人咏海石榴",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "真僧相劝外浮华，",
        "万法无常可叹嗟。",
        "但试寻思阶下树，",
        "何人种此我看花。"
      ]
    },
    {
      "_id": null,
      "Name": "长安道",
      "PoetId": "543f2310553f460f95ff88fb4f5db923",
      "PoetName": "麹信陵",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "麹信陵"
      ],
      "Contents": [
        "朱门映绿杨，",
        "双阙抵通庄。",
        "玉珮声逾远，",
        "红尘犹自香。"
      ]
    }
  ]
}
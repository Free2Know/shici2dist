  "Name": "廖融",
  "Description": "廖融，字元素。隐居衡山。诗七首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "古桧",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "五律",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "何人见植初，",
        "老树梵王居。",
        "山鬼暗栖托，",
        "樵夫难破除。",
        "声高秋汉迥，",
        "影倒月潭虚。",
        "尽日无僧倚，",
        "清风长有余。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "未知",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "圭灶先知晓，",
        "盆池别见天，",
        "古寺寻僧饭，",
        "寒岩衣鹿裘。",
        "云穿捣药屋，",
        "雪压钓鱼舟。"
      ]
    },
    {
      "_id": null,
      "Name": "梦仙谣",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "七律",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "琪木扶疏系辟邪，",
        "麻姑夜宴紫皇家。",
        "银河旌节摇波影，",
        "珠阁笙箫吸月华。",
        "翠凤引游三岛路，",
        "赤龙齐驾五云车。",
        "星稀犹倚虹桥立，",
        "拟就张骞搭汉槎。"
      ]
    },
    {
      "_id": null,
      "Name": "谢翁宏以诗百篇见示",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "五律",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "高奇一百篇，",
        "造化见工全。",
        "积思游沧海，",
        "冥搜入洞天。",
        "神珠迷罔象，",
        "端玉匪雕镌。",
        "休叹不得力，",
        "离骚千古传。"
      ]
    },
    {
      "_id": null,
      "Name": "赠天台逸人",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "未知",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "移桧托禅子，",
        "携家上赤城。",
        "拂琴天籁寂，",
        "奇支枕海涛生。",
        "云白寒峰晚，",
        "鸟歌春谷晴。",
        "又闻求桂楫，",
        "载月十洲行。"
      ]
    },
    {
      "_id": null,
      "Name": "退宫妓",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "七律",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "神仙风格本难俦，",
        "曾从前皇翠辇游。",
        "红踯躅繁金殿暖，",
        "碧芙蓉笑水宫秋。",
        "宝筝钿剥阴尘覆，",
        "锦帐香消画烛幽。",
        "一旦色衰归故里，",
        "月明犹梦按梁州。"
      ]
    },
    {
      "_id": null,
      "Name": "题伍彬屋壁",
      "PoetId": "96447d9ce1db46fda2afe01e58f96c3a",
      "PoetName": "廖融",
      "Form": "五律",
      "Tags": [
        "唐代",
        "廖融"
      ],
      "Contents": [
        "圆塘绿水平，",
        "鱼跃紫莼生。",
        "要路贫无力，",
        "深村老退耕。",
        "犊随原草远，",
        "蛙傍堑篱鸣。",
        "拨棹茶川去，",
        "初逢谷雨晴。"
      ]
    }
  ]
}
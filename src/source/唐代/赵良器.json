  "Poems": [
    {
      "_id": null,
      "Name": "三月三日曲江侍宴",
      "PoetId": "e9c0f0758a974a8f8ca9071a4f89c20c",
      "PoetName": "赵良器",
      "Form": "未知",
      "Tags": [
        "唐代",
        "赵良器"
      ],
      "Contents": [
        "圣祖发神谋，",
        "灵符叶帝求。",
        "一人光锡命，",
        "万国荷时休。",
        "雷解圜丘毕，",
        "云需曲水游。",
        "岸花迎步辇，",
        "仙仗拥行舟。",
        "睿藻天中降，",
        "恩波海外流。",
        "小臣同品物，",
        "陪此乐皇猷。"
      ]
    },
    {
      "_id": null,
      "Name": "郑国夫人挽歌词",
      "PoetId": "e9c0f0758a974a8f8ca9071a4f89c20c",
      "PoetName": "赵良器",
      "Form": "五律",
      "Tags": [
        "唐代",
        "赵良器"
      ],
      "Contents": [
        "淑德延公胄，",
        "宜家接帝姻。",
        "桂宫男掌仆，",
        "兰殿女升嫔。",
        "恩泽昭前命，",
        "盈虚变此辰。",
        "万年今已矣，",
        "彤管列何人。"
      ]
    }
  ]
}
{
  "_id": "71c539c710aa440890fae100a8702f67",
  "Name": "杨凝式",
  "Description": "字景度，宰相涉之子。昭宗朝登进士第，历事唐、晋、汉、周，官至太子太保。诗三首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "句",
      "PoetId": "71c539c710aa440890fae100a8702f67",
      "PoetName": "杨凝式",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨凝式"
      ],
      "Contents": [
        "押引蝗虫到洛京，",
        "合消郡守远相迎。",
        "到此今经三纪春。"
      ]
    },
    {
      "_id": null,
      "Name": "赠张全义",
      "PoetId": "71c539c710aa440890fae100a8702f67",
      "PoetName": "杨凝式",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凝式"
      ],
      "Contents": [
        "洛阳风景实堪哀，",
        "昔日曾为瓦子堆。",
        "不是我公重葺理，",
        "至今犹是一堆灰。"
      ]
    },
    {
      "_id": null,
      "Name": "雪晴",
      "PoetId": "71c539c710aa440890fae100a8702f67",
      "PoetName": "杨凝式",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨凝式"
      ],
      "Contents": [
        "春来冰未泮，",
        "冬至雪初晴。",
        "为报方袍客，",
        "丰年瑞已成。"
      ]
    },
    {
      "_id": null,
      "Name": "题壁",
      "PoetId": "71c539c710aa440890fae100a8702f67",
      "PoetName": "杨凝式",
      "Form": "五绝",
      "Tags": [
        "唐代",
        "杨凝式"
      ],
      "Contents": [
        "院似禅心静，",
        "花如觉性圆。",
        "自然知了义，",
        "争肯学神仙。"
      ]
    },
    {
      "_id": null,
      "Name": "题怀素酒狂帖后",
      "PoetId": "71c539c710aa440890fae100a8702f67",
      "PoetName": "杨凝式",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "杨凝式"
      ],
      "Contents": [
        "十年挥素学临池，",
        "始识王公学卫非。",
        "草圣未须因酒发，",
        "笔端应解化龙飞。"
      ]
    }
  ]
}
{
  "_id": "f7ef98d13cc44dc6ab7245afabf81e3a",
  "Name": "吴仁璧",
  "Description": "吴仁璧，字廷宝，吴人（或云关右人）。大顺二年，登进士第。钱镠据浙，累辟不就，镠怒，沉之江。诗一卷，今存十一首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "凤仙花",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "香红嫩绿正开时，",
        "冷蝶饥蜂两不知。",
        "此际最宜何处看，",
        "朝阳初上碧梧枝。"
      ]
    },
    {
      "_id": null,
      "Name": "南徐题友人郊居",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "门前樵径连江寺，",
        "岸下渔矶系海槎。",
        "待到秋深好时节，",
        "与君长醉隐侯家。"
      ]
    },
    {
      "_id": null,
      "Name": "句",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七律",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "为惜苔钱妨换砌，",
        "因怜山色旋开尊。",
        "高阁烟霞禅客睡，",
        "满城尘土世人忙。",
        "五龙金角向星斗，",
        "三洞玉音愁鬼神。",
        "蒲草薄裁连蒂白，",
        "胭脂浓染半葩红。"
      ]
    },
    {
      "_id": null,
      "Name": "客路",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "人寰急景如波委，",
        "客路浮云似盖轻。",
        "回首故山天外碧，",
        "十年无计却归耕。"
      ]
    },
    {
      "_id": null,
      "Name": "投谢钱武肃",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七律",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "东门上相好知音，",
        "数尽台前郭隗金。",
        "累重虽然容食椹，",
        "力微无计报焚林。",
        "弊貂不称芙蓉幕，",
        "衰朽仍惭玳瑁簪。",
        "十里溪光一山月，",
        "可堪从此负归心。"
      ]
    },
    {
      "_id": null,
      "Name": "春雪",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "雪霁凝光入坐寒，",
        "天明犹自卧袁安。",
        "貂裘穿后鹤氅敝，",
        "自此风流不足看。"
      ]
    },
    {
      "_id": null,
      "Name": "秋日听僧弹琴",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "金徽玉轸韵泠然，",
        "言下浮生指下泉。",
        "恰称秋风西北起，",
        "一时吹入碧湘烟。"
      ]
    },
    {
      "_id": null,
      "Name": "衰柳",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "金风渐利露珠团，",
        "广陌长堤黛色残。",
        "水殿狂游隋炀帝，",
        "一千余里可堪看。"
      ]
    },
    {
      "_id": null,
      "Name": "读度人经寄郑仁表",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "身虽一旦尘中老，",
        "名拟三清会里题。",
        "二午九斋余日在，",
        "请君相伴醉如泥。"
      ]
    },
    {
      "_id": null,
      "Name": "贾谊",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "扶持一疏满遗编，",
        "汉陛前头正少年。",
        "谁道恃才轻绛灌，",
        "却将惆怅吊湘川。"
      ]
    },
    {
      "_id": null,
      "Name": "金钱花",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "浅绛浓香几朵匀，",
        "日熔金铸万家新。",
        "堪疑刘宠遗芳在，",
        "不许山阴父老贫。"
      ]
    },
    {
      "_id": null,
      "Name": "钱塘鹤",
      "PoetId": "f7ef98d13cc44dc6ab7245afabf81e3a",
      "PoetName": "吴仁璧",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "吴仁璧"
      ],
      "Contents": [
        "人间路霭青天半，",
        "鳌岫云生碧海涯。",
        "虽抱雕笼密扃钥，",
        "可能长在叔伦家。"
      ]
    }
  ]
}
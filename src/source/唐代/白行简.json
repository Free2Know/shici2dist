{
  "_id": "65a8d2a277ad4b59b956e88c94423054",
  "Name": "白行简",
  "Description": "白行简，字知退，白居易之弟。贞元末第进士，累官度支郎中。有兄风，尝从居易谪所，天性友爱，当时无比。集二十卷，今存诗七首。",
  "Dynasty": "唐代",
  "Birth": "",
  "Death": "",
  "Poems": [
    {
      "_id": null,
      "Name": "在巴南望郡南山呈乐天",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "七绝",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "临江一嶂白云间，",
        "红绿层层锦绣班。",
        "不作巴南天外意，",
        "何殊昭应望骊山。"
      ]
    },
    {
      "_id": null,
      "Name": "夫子鼓琴得其人",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "宣父穷玄奥，",
        "师襄授素琴。",
        "稍殊流水引，",
        "全辨圣人心。",
        "慕德声逾感，",
        "怀人意自深。",
        "泠泠传妙手，",
        "摵摵振空林。",
        "促调清风至，",
        "操弦白日沈。",
        "曲终情不尽，",
        "千古仰知音。"
      ]
    },
    {
      "_id": null,
      "Name": "归马华山",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "牧野功成后，",
        "周王战马闲。",
        "驱驰休伏皂，",
        "饮龁任依山。",
        "逐日朝仍去，",
        "随风暮自还。",
        "冰生疑陇坂，",
        "叶落似榆关。",
        "躞蹀仙峰下，",
        "腾骧渭水湾。",
        "幸逢时偃武，",
        "不复鼓鼙间。"
      ]
    },
    {
      "_id": null,
      "Name": "春从何处来",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "欲识春生处，",
        "先从木德来。",
        "入门潜报柳，",
        "度岭暗惊梅。",
        "透雪寒光散，",
        "消冰水镜开。",
        "晓迎郊骑发，",
        "夜逐斗杓回。",
        "淑气空中变，",
        "新声雨后催。",
        "偏宜资律吕，",
        "应是候阳台。"
      ]
    },
    {
      "_id": null,
      "Name": "李都尉重阳日得苏属国书",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "降虏意何如，",
        "穷荒九月初。",
        "三秋异乡节，",
        "一纸故人书。",
        "对酒情无极，",
        "开缄思有余。",
        "感时空寂寞，",
        "怀旧几踌躇。",
        "雁尽平沙迥，",
        "烟销大漠虚。",
        "登台南望处，",
        "掩泪对双鱼。"
      ]
    },
    {
      "_id": null,
      "Name": "贡院楼北新栽小松",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "华省春霜曙，",
        "楼阴植小松。",
        "移根依厚地，",
        "委质别危峰。",
        "北户知犹远，",
        "东堂幸见容。",
        "心坚终待鹤，",
        "枝嫩未成龙。",
        "夜影看仍薄，",
        "朝岚色渐浓。",
        "山苗不可荫，",
        "孤直俟秦封。"
      ]
    },
    {
      "_id": null,
      "Name": "金在熔",
      "PoetId": "65a8d2a277ad4b59b956e88c94423054",
      "PoetName": "白行简",
      "Form": "未知",
      "Tags": [
        "唐代",
        "白行简"
      ],
      "Contents": [
        "巨橐方熔物，",
        "洪炉欲范金。",
        "紫光看渐发，",
        "赤气望逾深。",
        "焰热晴云变，",
        "烟浮昼景阴。",
        "坚刚由我性，",
        "鼓铸任君心。",
        "踊跃徒标异，",
        "沈潜自可钦。",
        "何当得成器，",
        "待叩向知音。"
      ]
    }
  ]
}
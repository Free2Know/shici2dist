  "_id": "28274ce6b190465dbd703a4b98521442",
  "name": "题广信寺",
  "contents": [
    "亭北敞灵溪，",
    "林梢与槛齐。",
    "野云来影远，",
    "沙鸟去行低。",
    "晚渡明村火，",
    "晴山响郡鼙。",
    "思乡值摇落，",
    "赖不有猿啼。"
  ],
  "ptype": null,
  "poetName": "张乔",
  "poetId": "746ea2e1efcd41db9a5d67eddf753f46",

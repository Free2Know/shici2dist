  "_id": "d499b390eff64291968d6d7136131c2f",
  "name": "怀政禅师院",
  "contents": [
    "山斋路几层，",
    "败衲学真乘。",
    "寒暑移双树，",
    "光阴尽一灯。",
    "风飘高竹雪，",
    "泉涨小池冰。",
    "莫讶频来此，",
    "修身欲到僧。"
  ],
  "ptype": null,
  "poetName": "杜牧",

  "_id": "a7d45db5c6c84ff9ba28ad7479d5484c",
  "name": "郁林寺",
  "contents": [
    "台殿冠嵯峨，",
    "春来日日过。",
    "水分诸院少，",
    "云近上方多。",
    "众籁凝丝竹，",
    "繁英耀绮罗。",
    "酒酣诗自逸，",
    "乘月棹寒波。"
  ],
  "ptype": null,
  "poetName": "许浑",
  "poetId": "ba84f30a9b344330943f2fbe4d128d8d",

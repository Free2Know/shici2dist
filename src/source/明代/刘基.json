    {
      "_id": null,
      "Name": "古戍",
      "PoetId": "739b0eba021e4f0a83cc5ec5cd62f85d",
      "PoetName": "刘基",
      "Form": "五律",
      "Tags": [
        "明代",
        "刘基"
      ],
      "Contents": [
        "古戍连山火，",
        "新城殷地笳。",
        "九洲犹虎豹，",
        "四海未桑麻。",
        "天迥云垂草，",
        "江空雪覆沙。",
        "野梅烧不尽，",
        "时见两三花。"
      ]
    },
    {
      "_id": null,
      "Name": "水龙吟",
      "PoetId": "739b0eba021e4f0a83cc5ec5cd62f85d",
      "PoetName": "刘基",
      "Form": "词",
      "Tags": [
        "明代",
        "刘基"
      ],
      "Contents": [
        "鸡鸣风雨萧萧，",
        "侧身天地无刘表。",
        "啼鹃迸泪，",
        "落花飘恨，",
        "断魂飞绕。",
        "月暗云霄，",
        "星沉烟水，",
        "角声清袅。",
        "问登楼王粲、镜中白发，",
        "今宵又添都少？",
        "极目乡关何处？",
        "渺青山，",
        "髻螺都校几回好梦，",
        "随风归去，",
        "被渠遮了。",
        "宝瑟弦僵，",
        "玉笙簧冷，",
        "冥鸿天杪。",
        "但侵阶落草，",
        "满庭绿树，",
        "不知昏晓"
      ]
    },
    {
      "_id": null,
      "Name": "登卧龙山写怀二十八韵",
      "PoetId": "739b0eba021e4f0a83cc5ec5cd62f85d",
      "PoetName": "刘基",
      "Form": "五绝",
      "Tags": [
        "明代",
        "刘基"
      ],
      "Contents": [
        "白云在青天，",
        "可望不可即。",
        "浩歌梁甫吟，",
        "忧来凭胸臆。"
      ]
    }
  ]
}
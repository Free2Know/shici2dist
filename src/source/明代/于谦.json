{
  "_id": "009d73a2bd3141f5afd24a3d7198f028",
  "Name": "于谦",
  "Description": "于谦（1398-1457），字延益，钱塘人。是明代一位杰出的政治家和军事家。",
  "Dynasty": "明代",
  "Birth": "5-13",
  "Death": "2-16",
  "Poems": [
    {
      "_id": null,
      "Name": "入京",
      "PoetId": "009d73a2bd3141f5afd24a3d7198f028",
      "PoetName": "于谦",
      "Form": "七绝",
      "Tags": [
        "明代",
        "于谦"
      ],
      "Contents": [
        "绢帕麻菇与线香，",
        "本资民用反为殃。",
        "清风两袖朝天去，",
        "免得闾阎话短长。"
      ]
    },
    {
      "_id": null,
      "Name": "岳忠武王祠",
      "PoetId": "009d73a2bd3141f5afd24a3d7198f028",
      "PoetName": "于谦",
      "Form": "七律",
      "Tags": [
        "明代",
        "于谦"
      ],
      "Contents": [
        "匹马南来渡浙河，",
        "汴城宫阙远嵯峨。",
        "中兴诸将谁降敌，",
        "负国奸臣主议和。",
        "黄叶古祠寒雨积，",
        "清山荒冢白云多。",
        "如何一别朱仙镇，",
        "不见将军奏凯歌。"
      ]
    },
    {
      "_id": null,
      "Name": "石灰吟",
      "PoetId": "009d73a2bd3141f5afd24a3d7198f028",
      "PoetName": "于谦",
      "Form": "七绝",
      "Tags": [
        "明代",
        "于谦"
      ],
      "Contents": [
        "千锤万凿出深山，",
        "烈火焚烧若等闲。",
        "粉骨碎身全不怕，",
        "要留清白在人间。"
      ]
    },
    {
      "_id": null,
      "Name": "荒村",
      "PoetId": "009d73a2bd3141f5afd24a3d7198f028",
      "PoetName": "于谦",
      "Form": "五律",
      "Tags": [
        "明代",
        "于谦"
      ],
      "Contents": [
        "村落甚荒凉，",
        "年年苦旱蝗。",
        "老翁佣纳债，",
        "稚子卖输粮。",
        "壁破风生屋，",
        "梁颓月堕床。",
        "那知牧民者，",
        "不肯报灾伤。"
      ]
    },
    {
      "_id": null,
      "Name": "除夜太原寒甚",
      "PoetId": "009d73a2bd3141f5afd24a3d7198f028",
      "PoetName": "于谦",
      "Form": "五绝",
      "Tags": [
        "明代",
        "于谦",
        "除夕"
      ],
      "Contents": [
        "寄语天涯客，",
        "轻寒底用愁。",
        "春风来不远，",
        "只在屋东头。"
      ]
    }
  ]
}
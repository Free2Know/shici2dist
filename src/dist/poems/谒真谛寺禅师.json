  "_id": "5381d7eea53a4e22a48785c6c9fb9ac5",
  "name": "谒真谛寺禅师",
  "contents": [
    "兰若山高处，",
    "烟霞嶂几重。",
    "冻泉依细石，",
    "晴雪落长松。",
    "问法看诗忘，",
    "观身向酒慵。",
    "未能割妻子，",
    "卜宅近前峰。"
  ],
  "ptype": null,
  "poetName": "杜甫",
  "poetId": "526c710fccb149fe933edb19dad0ed50",

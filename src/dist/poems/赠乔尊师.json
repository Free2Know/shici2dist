  "_id": "4da286307bbb4493887feadca618accc",
  "name": "赠乔尊师",
  "contents": [
    "长忌时人识，",
    "有家云涧深。",
    "性惟耽嗜酒，",
    "贫不破除琴。",
    "静鼓三通齿，",
    "频汤一味参。",
    "知师最知我，",
    "相引坐柽阴。"
  ],
  "ptype": null,
  "poetName": "张鸿",
